#!/usr/bin/env bash
set -Eeu -o pipefail

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
. "${KOOPA_HOME}/shell/posix/include/functions.sh"

if _acid_is_shared
then
    rm -fv "/etc/profile.d/zzz-koopa.sh"
fi

if [[ -f "$(_acid_dotfiles_config_link)/UNINSTALL.sh" ]]
then
    "$(_acid_dotfiles_config_link)/UNINSTALL.sh"
fi

rm -frv "$(_acid_config_dir)"
rm -frv "$KOOPA_HOME"
