#!/usr/bin/env bash
set -Eeu -o pipefail

# Uninstall koopa.
# Modified 2019-06-20.

# shellcheck source=/dev/null
. "${KOOPA_DIR}/system/uninstall/dotfiles.sh"

# shellcheck source=/dev/null
. "${KOOPA_DIR}/system/uninstall/dotfiles-legacy.sh"

rm -f /etc/profile.d/koopa.sh
rm -rf "$KOOPA_CONFIG_DIR"
rm -rf "$KOOPA_DIR"

