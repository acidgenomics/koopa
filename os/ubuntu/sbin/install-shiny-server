#!/usr/bin/env bash

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" &>/dev/null && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../include/header.sh"

# """
# https://rstudio.com/products/shiny/download-server/ubuntu/
# """

reinstall=0
pos=()
while (("$#"))
do
    case "$1" in
        --reinstall)
            reinstall=1
            shift 1
            ;;
        --)
            shift 1
            break
            ;;
        --*|-*)
            koopa::invalid_arg "$1"
            ;;
        *)
            pos+=("$1")
            shift 1
            ;;
    esac
done
[[ "${#pos[@]}" -gt 0 ]] && set -- "${pos[@]}"

name="shiny-server"
version="$(koopa::variable "$name")"
name_fancy="Shiny Server ${version}"

if ! koopa::is_current_version "$name"
then
    reinstall=1
fi

if [[ "$reinstall" -eq 0 ]]
then
    koopa::exit_if_installed "$name"
fi

koopa::install_start "$name_fancy"

koopa::assert_has_no_args "$#"
koopa::assert_is_installed R gdebi

tmp_dir="$(koopa::tmp_dir)"

if ! koopa::is_r_package_installed shiny
then
    koopa::h2 "Installing 'shiny' R package."
    (
        Rscript -e 'install.packages("shiny")'
    ) 2>&1 | tee "$(koopa::tmp_log_file)"
fi

(
    koopa::cd "$tmp_dir"
    file="shiny-server-${version}-amd64.deb"
    # Support for Ubuntu 14.04 LTS+ with this fixed URL.
    url="https://download3.rstudio.org/ubuntu-14.04/x86_64/${file}"
    koopa::download "$url"
    sudo gdebi --non-interactive "$file"
) 2>&1 | tee "$(koopa::tmp_log_file)"

rm -fr "$tmp_dir"

koopa::install_success "$name_fancy"
