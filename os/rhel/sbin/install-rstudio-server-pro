#!/usr/bin/env bash

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" &>/dev/null && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../include/header.sh"

# """
# https://rstudio.com/products/rstudio/download-commercial/
# """

reinstall=0
pos=()
while (("$#"))
do
    case "$1" in
        --reinstall)
            reinstall=1
            shift 1
            ;;
        --)
            shift 1
            break
            ;;
        --*|-*)
            koopa::invalid_arg "$1"
            ;;
        *)
            pos+=("$1")
            shift 1
            ;;
    esac
done
[[ "${#pos[@]}" -gt 0 ]] && set -- "${pos[@]}"

name="rstudio-server-pro"
version="$(koopa::variable "$name")"
name_fancy="RStudio Server Pro ${version}"

if ! koopa::is_current_version rstudio-server
then
    reinstall=1
fi

if [[ "$reinstall" -eq 0 ]]
then
    koopa::exit_if_installed rstudio-server
fi

koopa::install_start "$name_fancy"

koopa::assert_has_no_args "$#"
koopa::assert_is_installed R

tmp_dir="$(koopa::tmp_dir)"

if koopa::is_rhel_8
then
    os_id="fedora28"
else
    koopa::stop "Unsupported RHEL version."
fi

(
    koopa::cd "$tmp_dir"
    file="rstudio-server-rhel-pro-${version}-x86_64.rpm"
    url="https://download2.rstudio.org/server/${os_id}/x86_64/${file}"
    koopa::download "$url"
    sudo dnf -y install "$file"
) 2>&1 | tee "$(koopa::tmp_log_file)"

rm -fr "$tmp_dir"

koopa::install_success "$name"

cat << END
Activate product license key (if necessary):
> sudo rstudio-server license-manager activate <product-key>

If you want to move your license of RStudio Server to another system you should
first deactivate it on the old system with the command:
> sudo rstudio-server license-manager deactivate
END
