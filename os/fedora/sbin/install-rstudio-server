#!/usr/bin/env bash
set -Eeu -o pipefail

# Install RStudio Server.
# Modified 2019-06-18.

# See also:
# - https://www.rstudio.com/products/rstudio/download-server/

# shellcheck source=/dev/null
source "${KOOPA_DIR}/system/include/os/fedora/sudo.sh"

tmp_dir="${KOOPA_TMP_DIR}/rstudio-server"
version="$(rstudio-server)"

printf "Installing RStudio Server %s.\n" "$version"

(
    rm -rf "$tmp_dir"
    mkdir -p "$tmp_dir"
    cd "$tmp_dir"
    wget "https://download2.rstudio.org/server/centos6/x86_64/rstudio-server-rhel-${version}-x86_64.rpm"
    sudo yum install -y "rstudio-server-rhel-${version}-x86_64.rpm"
    rm -rf "$tmp_dir"
)

command -v rstudio-server
rstudio-server version
rstudio-server status
