    hdf5-devel \
    leptonica-devel \
    libcurl-devel \
    libevent-devel \
    libseccomp-devel \
    libsodium-devel \
    libuuid-devel \
    libxml2-devel \
    make \
    mariadb-devel \
    mpfr-devel \
    ncurses \
    openssl-devel \
    parallel \
    pcre-devel \
    poppler-cpp-devel \
    postgresql-devel \
    proj \
    proj-devel \
    qpdf \
    readline \
    readline-devel \
    squashfs-tools \
    tesseract-devel \
    texlive \
    texlive-bera \
