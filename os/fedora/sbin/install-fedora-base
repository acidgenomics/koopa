#!/usr/bin/env bash

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../include/header.sh"

_koopa_assert_has_sudo



# Notes                                                                     {{{1
# ==============================================================================

# Install Rust using rustup instead.
# sudo yum install cargo rust rust-doc



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)

Install base programs for Fedora.

$(_koopa_help_args)

note:
    Bash script.
    Updated 2019-10-21.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

sudo yum -y update
sudo yum -y groupinstall "Development Tools"
sudo yum -y install \
    ImageMagick-c++-devel \
    bzip2 \
    bzip2-devel \
    cmake \
    convmv \
    coreutils \
    cryptsetup \
    curl \
    gcc \
    gcc-c++ \
    gcc-gfortran \
    gdal \
    gdal-devel \
    geos \
    geos-devel \
    git \
    gnutls \
    gnutls-devel \
    golang \
    gsl-devel \
    hdf5 \
    hdf5-devel \
    leptonica-devel \
    libcurl-devel \
    libevent-devel \
    libhdf5-devel \
    libseccomp-devel \
    libsodium-devel \
    libuuid-devel \
    libxml2-devel \
    make \
    mariadb-devel \
    mpfr-devel \
    ncurses \
    openssl-devel \
    parallel \
    pcre-devel \
    poppler-cpp-devel \
    postgresql-devel \
    proj \
    proj-devel \
    qpdf \
    readline \
    readline-devel \
    squashfs-tools \
    tesseract-devel \
    tmux \
    tree \
    unixODBC-devel \
    util-linux \
    wget \
    xmlto \
    xz \
    xz-devel \
    yum-utils \
    zip

