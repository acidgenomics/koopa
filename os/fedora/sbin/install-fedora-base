#!/usr/bin/env bash

# shellcheck source=/dev/null
source "$(koopa header fedora)"

# Install base programs for Fedora.
# Modified 2019-06-23.

enable-epel
sudo yum update -y
sudo yum install -y \
    epel-release \
    convmv \
    git \
    gsl-devel \
    hdf5-devel \
    libssh2-devel \
    libgit2-devel \
    mariadb-devel \
    ncurses \
    pandoc \
    pandoc-citeproc \
    qpdf \
    sshpass \
    tmux \
    tree \
    udunits2-devel
