#!/usr/bin/env bash

# shellcheck source=/dev/null
source "$(koopa header fedora)"

# Install GNU core utilities.
# Modified 2019-07-09.

os_type="$(koopa os-type)"

if _koopa_has_sudo
then
    sudo yum install -y coreutils
    if [[ "$os_type" == "rhel7" ]]
    then
        sudo yum-builddep -y coreutils
    fi
fi

source "$(koopa cellar-script coreutils)"
