#!/usr/bin/env bash

# shellcheck source=/dev/null
source "$(koopa header fedora)"

# Install Python.
# Modified 2019-07-09.

os_type="$(koopa os-type)"

if _koopa_has_sudo
then
    case "$os_type" in
        rhel7)
            sudo yum -y install python
            sudo yum-builddep -y python
            ;;
        rhel8)
            sudo yum -y install python3
            ;;
    esac
fi

source "$(koopa cellar-script python)"
