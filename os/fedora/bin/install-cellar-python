#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(_koopa_header fedora)"

# Install Python.
# Updated 2019-07-09.

os_type="$(_koopa_os_type)"

if _koopa_has_sudo
then
    case "$os_type" in
        rhel7)
            sudo yum -y install python
            sudo yum-builddep -y python
            ;;
        rhel8)
            sudo yum -y install python3
            ;;
    esac
fi

# shellcheck source=/dev/null
source "$(_koopa_cellar_script python)"
