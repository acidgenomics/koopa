#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header fedora)"

# Install OpenSSL.
# Updated 2019-07-09.

os_type="$(koopa os-type)"

if _koopa_has_sudo
then
    sudo yum install -y openssl
    if [[ "$os_type" == "rhel7" ]]
    then
        sudo yum-builddep -y openssl
    fi
fi

# shellcheck source=/dev/null
source "$(koopa cellar-script openssl)"
