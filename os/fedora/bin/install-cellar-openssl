#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(_koopa_header fedora)"

# Install OpenSSL.
# Updated 2019-07-09.

os_type="$(_koopa_os_type)"

if _koopa_has_sudo
then
    sudo yum install -y openssl
    if [[ "$os_type" == "rhel7" ]]
    then
        sudo yum-builddep -y openssl
    fi
fi

# shellcheck source=/dev/null
source "$(_koopa_cellar_script openssl)"
