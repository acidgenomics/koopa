#!/usr/bin/env bash

# shellcheck source=/dev/null
source "$(koopa header fedora)"

# Install Vim.
# Updated 2019-07-09.

os_type="$(koopa os-type)"

if _koopa_has_sudo && [[ "$os_type" == "rhel7" ]]
then
    sudo yum install -y vim
    # RHEL8: No matching package to install: 'lua-devel'
    sudo yum-builddep -y vim
fi

source "$(koopa cellar-script vim)"
