#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(_koopa_header fedora)"

# Install Vim.
# Updated 2019-07-09.

os_type="$(_koopa_os_type)"

if _koopa_has_sudo && [[ "$os_type" == "rhel7" ]]
then
    sudo yum install -y vim
    # RHEL8: No matching package to install: 'lua-devel'
    sudo yum-builddep -y vim
fi

# shellcheck source=/dev/null
source "$(_koopa_cellar_script vim)"
