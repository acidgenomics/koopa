#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header fedora)"

# Install Neovim.
# Updated 2019-09-16.

os_type="$(_koopa_os_type)"

if _koopa_has_sudo
then
    sudo yum install -y neovim
    if [[ "$os_type" == "rhel7" ]]
    then
        sudo yum-builddep -y neovim
    fi
fi

# shellcheck source=/dev/null
source "$(_koopa_cellar_script neovim)"
