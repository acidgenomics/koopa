#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(_koopa_header fedora)"

# Install GNU Scientific Library (GSL).
# Updated 2019-07-09.

os_type="$(_koopa_os_type)"

if _koopa_has_sudo
then
    sudo yum install -y gsl-devel
    if [[ "$os_type" == "rhel7" ]]
    then
        sudo yum-builddep -y gsl-devel
    fi
fi

# shellcheck source=/dev/null
source "$(_koopa_cellar_script gsl)"
