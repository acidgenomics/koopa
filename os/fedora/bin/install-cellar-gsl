#!/usr/bin/env bash

# shellcheck source=/dev/null
source "$(koopa header fedora)"

# Install GNU Scientific Library (GSL).
# Modified 2019-07-09.

os_type="$(koopa os-type)"

if _koopa_has_sudo
then
    sudo yum install -y gsl-devel
    if [[ "$os_type" == "rhel7" ]]
    then
        sudo yum-builddep -y gsl-devel
    fi
fi

source "$(koopa cellar-script gsl)"
