#!/usr/bin/env bash

# shellcheck source=/dev/null
source "$(koopa header fedora)"

# Install GnuPG.
# Updated 2019-07-09.

os_type="$(koopa os-type)"

if _koopa_has_sudo
then
    sudo yum install -y gnupg2
    if [[ "$os_type" == "rhel7" ]]
    then
        sudo yum-builddep -y gnupg2
    fi
fi

source "$(koopa cellar-script gnupg)"
