#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header fedora)"

# Install PROJ.
# Updated 2019-07-26.

os_type="$(koopa os-type)"

if _koopa_has_sudo
then
    sudo yum -y install proj proj-devel
    if [[ "$os_type" == "rhel7" ]]
    then
        sudo yum-builddep -y proj
    fi
fi

# shellcheck source=/dev/null
source "$(koopa cellar-script proj)"
