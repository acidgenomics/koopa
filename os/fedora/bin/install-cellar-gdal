#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header fedora)"

os_type="$(_koopa_os_type)"

if _koopa_has_sudo
then
    sudo yum -y install gdal gdal-devel
    if [[ "$os_type" == "rhel7" ]]
    then
        sudo yum-builddep -y gdal
    fi
fi

# shellcheck source=/dev/null
source "$(_koopa_cellar_script gdal)"
