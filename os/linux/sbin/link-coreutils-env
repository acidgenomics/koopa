#!/usr/bin/env bash

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../include/header.sh"

build_prefix="$(_acid_build_prefix)"

_acid_message "Replacing '/usr/bin/env' with '/usr/local/bin/env'."

if [[ ! -L "/usr/bin/env" ]]
then
    _acid_note "System version will be renamed to 'env.bak'.\n"
    sudo rm -fv "/usr/bin/env.bak"
    sudo mv -fv "/usr/bin/env" "/usr/bin/env.bak"
else
    sudo rm -fv "/usr/bin/env"
fi

sudo ln -fnsv "${build_prefix}/bin/env" "/usr/bin/env"
