#!/usr/bin/env bash

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../include/header.sh"

_koopa_assert_has_sudo



# Notes                                                                     {{{1
# ==============================================================================

# Use Spider Cache on Loads................................... : NO

# RHEL 7 alternative:
# > sudo yum -y install Lmod
# > sudo yum-builddep -y Lmod



# Variables                                                                 {{{1
# ==============================================================================

name="lmod"
version="$(_koopa_variable "$name")"
prefix="/opt/apps"
data_dir="/opt/moduleData"
tmp_dir="$(_koopa_tmp_dir)/${name}"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)

Install Lmod.

$(_koopa_help_args)

details:
    Ensure Lua and LuaRocks are installed prior to this step.

    Installs into:
    - '${prefix}'
    - '${data_dir}'

see also:
    - https://lmod.readthedocs.io/
    - https://lmod.readthedocs.io/en/latest/030_installing.html

note:
    Bash script.
    Updated 2019-10-02.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

_koopa_assert_is_installed lua luarocks
# > _koopa_assert_is_not_dir "$prefix"

_koopa_message "Installing ${name} ${version}."

sudo mkdir -pv "$prefix"

(
    rm -fr "$tmp_dir"
    mkdir -pv "$tmp_dir"
    cd "$tmp_dir" || exit 1
    wget "https://github.com/TACC/Lmod/archive/${version}.tar.gz"
    _koopa_extract "${version}.tar.gz"
    cd "Lmod-${version}" || exit 1
    ./configure \
        --prefix="${prefix}" \
        --with-spiderCacheDir="${data_dir}/cacheDir" \
        --with-updateSystemFn="${data_dir}/system.txt"
    sudo make install
    rm -fr "$tmp_dir"
)

# bash, zsh:
sudo ln -fnsv /opt/apps/lmod/lmod/init/profile \
    /etc/profile.d/z00_lmod.sh
# csh, tcsh:
# > sudo ln -fnsv /opt/apps/lmod/lmod/init/cshrc \
# >     /etc/profile.d/z00_lmod.csh
# fish:
# > sudo ln -fnsv /opt/apps/lmod/lmod/init/profile.fish \
# >     /etc/fish/conf.d/z00_lmod.fish

module --version
# > module spider

