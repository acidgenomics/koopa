#!/usr/bin/env bash

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../include/header.sh"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)

Install CloudBioLinux.

$(_koopa_help_args)

details:
    Installs to current working directory.

see also:
    http://cloudbiolinux.org/

note:
    Bash script.
    Updated 2019-09-26.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

_koopa_assert_is_not_dir "cloudbiolinux"

# Using our forked repo, to control for unexpected upstream changes.
git clone https://github.com/acidgenomics/cloudbiolinux.git
