#!/usr/bin/env bash
set -Eeu -o pipefail

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../include/header.sh"

_koopa_assert_has_no_args "$@"
_koopa_assert_is_not_installed rbenv

# Consider supporting local vs. shared with a user flag (e.g. '--shared').

# Local user approach:
# > prefix="${XDG_DATA_HOME}/rbenv"

# Shared user approach:
prefix="$(_koopa_app_prefix)/ruby/rbenv"

_koopa_prefix_mkdir "$prefix"
_koopa_message "Installing rbenv at '${prefix}'."

# Install rbenv.
git clone \
    https://github.com/sstephenson/rbenv.git \
    "$prefix"

# Install ruby-build.
mkdir -pv "${prefix}/plugins"
git clone \
    https://github.com/sstephenson/ruby-build.git \
    "${prefix}/plugins/ruby-build"

_koopa_set_permissions "$prefix"

_koopa_note "Restart the shell to complete installation of rbenv."
