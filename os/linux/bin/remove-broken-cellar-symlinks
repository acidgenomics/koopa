#!/usr/bin/env bash

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../include/header.sh"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)

Remove broken cellar symbolic links.

$(_koopa_help_args)

note:
    Bash script.
    Updated 2019-10-22.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

remove-broken-symlinks "$(_koopa_build_prefix)"
