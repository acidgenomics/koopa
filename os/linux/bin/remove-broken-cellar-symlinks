#!/usr/bin/env bash

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../include/header.sh"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)

Remove broken cellar symbolic links.

$(_koopa_help_args)

note:
    Bash script.
    Updated 2019-10-26.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

prefix="$(_koopa_build_prefix)"
# Note that empty array will still contain a length of 1 here.
mapfile -t broken <<< "$(find-broken-symlinks "$prefix")"
_koopa_is_array_non_empty "${broken[@]}" || exit 0
printf "%d broken symlinks detected.\n" "${#broken[@]}"
for file in "${broken[@]}"
do
    [[ -n "$file" ]] || exit 0
    if _koopa_has_sudo
    then
        sudo rm -v "$file"
    else
        rm -v "$file"
    fi
done
