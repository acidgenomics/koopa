#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header linux)"



# Notes                                                                     {{{1
# ==============================================================================

# Azure install:
# > prefix="/data00/bcbio/v1.1.5" install-bcbio



# Arguments                                                                 {{{1
# ==============================================================================

version="stable"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)
    [version="${version}"]

Install bcbio-nextgen.

required positional arguments with defaults:
    1.  Version.
        Use "stable" (recommended) or "development".
        For legacy versions (e.g. v1.1.3), use bcbio-vm instead.

$(_koopa_help_args)

see also:
    https://bcbio-nextgen.readthedocs.io/

note:
    Bash script.
    Updated 2019-09-26.
EOF
}

_koopa_help "$@"



# Arguments                                                                 {{{1
# ==============================================================================

version="${$1:-$version}"



# Script                                                                    {{{1
# ==============================================================================

_koopa_assert_has_no_environments

prefix="$(_koopa_build_prefix)/bcbio"
tmp_dir="$(_koopa_tmp_dir)/bcbio"

install_dir="${prefix}/install"
tools_dir="${prefix}/tools"

timestamp="$(date "+%Y%m%d-%H%M%S")"
log_dir="${HOME}/logs/${HOSTNAME}/bcbio/${version}"
log_file="${log_dir}/bcbio-install-${version}-${timestamp}.log"
mkdir -pv "$log_dir"

_koopa_build_mkdir "$prefix"

(
    rm -fr "$tmp_dir"
    mkdir -p "$tmp_dir"
    cd "$tmp_dir" || exit 1
    wget https://raw.github.com/bcbio/bcbio-nextgen/master/scripts/bcbio_nextgen_install.py
    python bcbio_nextgen_install.py \
        "$install_dir" \
        --tooldir="$tools_dir" \
        --upgrade="$version" \
        --datatarget="rnaseq" \
        --nodata \
        --isolate \
        2>&1 | tee "$log_file"
)

_koopa_build_chgrp "$prefix"

# Disable group write access to install by default.
chmod -R g-w "$install_dir" "$tools_dir"

# Fix for current macs2/numpy issue.
# https://github.com/bcbio/bcbio-nextgen/issues/2853
"${tools_dir}/bin/bcbio_conda" install -y --name python2 numpy
