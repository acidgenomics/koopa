#!/usr/bin/env bash
set -Eeu -o pipefail

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../include/header.sh"

_koopa_exit_if_installed pyenv
_koopa_assert_has_no_args "$@"

# Consider supporting local vs. shared with a user flag (e.g. '--shared').

# Local user approach:
# > prefix="${XDG_DATA_HOME}/pyenv"

# Shared user approach:
prefix="$(_koopa_app_prefix)/python/pyenv"

_koopa_prefix_mkdir "$prefix"
_koopa_h1 "Installing pyenv at '${prefix}'."

# Install pyenv.
git clone \
    https://github.com/pyenv/pyenv.git \
    "$prefix"

_koopa_set_permissions "$prefix"

_koopa_note "Restart the shell to complete installation of pyenv."
