#!/usr/bin/env bash
set -Eeu -o pipefail

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../include/header.sh"

prefix="$(_koopa_app_prefix)/python/pyenv"

_koopa_exit_if_dir "$prefix"

_koopa_h1 "Installing pyenv at '${prefix}'."

_koopa_assert_has_no_args "$@"
_koopa_mkdir "$prefix"

(
    git clone \
        https://github.com/pyenv/pyenv.git \
        "$prefix"
) 2>&1 | tee "$(_koopa_tmp_log_file)"

_koopa_set_permissions "$prefix"

_koopa_success "Installation of pyenv was successful."
_koopa_note "Restart the shell to complete installation of pyenv."
