#!/usr/bin/env bash
set -Eeu -o pipefail

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../include/header.sh"

_koopa_assert_has_no_args "$@"
_koopa_assert_has_no_envs
_koopa_assert_is_installed bcbio_nextgen.py

tmp_dir="$(_koopa_tmp_dir)/bcbio"
cores="$(_koopa_cpu_count)"

_koopa_h1 "Updating bcbio-nextgen installation."
_koopa_dl "bcbio_nextgen.py" "$(_koopa_which_realpath "bcbio_nextgen.py")"

(
    _koopa_cd_tmp_dir "$tmp_dir"
    bcbio_nextgen.py upgrade \
        --upgrade="stable" \
        --tools \
        --data \
        --cores="$cores"
) 2>&1 | tee "$(_koopa_tmp_log_file)"

_koopa_success "Update of bcbio-nextgen was successful."
