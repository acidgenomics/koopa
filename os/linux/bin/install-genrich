#!/usr/bin/env bash
set -Eeu -o pipefail

# Install Genrich.
# Modified 2019-06-19.

# See also:
# - https://github.com/jsh58/Genrich

name="genrich"
version="$(koopa variable "$name")"
prefix="$KOOPA_BUILD_PREFIX"
tmp_dir="${KOOPA_TMP_DIR}/${name}"
exe_file="${prefix}/bin/${name}"

(
    rm -rf "$tmp_dir"
    mkdir -p "$tmp_dir"
    cd "$tmp_dir" || exit 1
    wget "https://github.com/jsh58/Genrich/archive/v${version}.tar.gz"
    tar -xzvf "v${version}.tar.gz"
    cd "Genrich-${version}" || exit 1
    make
    cp Genrich "${prefix}/bin"
    rm -rf "$tmp_dir"
)

commad -v "$exe_file"
"$exe_file" --version
