#!/usr/bin/env bash
set -Eeu -o pipefail

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../include/header.sh"

name="aws-cli"
version="$(_koopa_variable "$name")"
prefix="$(_koopa_cellar_prefix)/${name}/${version}"
_koopa_exit_if_dir "$prefix"

name_fancy="AWS CLI"
_koopa_install_start "$name_fancy" "$prefix"
tmp_dir="$(_koopa_tmp_dir)"

(
    _koopa_cd_tmp_dir "$tmp_dir"
    file="awscli-exe-linux-x86_64.zip"
    url="https://awscli.amazonaws.com/${file}"
    _koopa_download "$url"
    _koopa_extract "$file"
    tmp_install_dir="tmp_install"
    # This is a throw-away, we'll link ourselves below.
    tmp_bin_dir="tmp_bin"
    ./aws/install \
        --install-dir "$tmp_install_dir" \
        --bin-dir "$tmp_bin_dir" \
        > /dev/null
    _koopa_mkdir "$prefix"
    _koopa_cp "${tmp_install_dir}/v2/${version}" "$prefix"
) 2>&1 | tee "$(_koopa_tmp_log_file)"

_koopa_rm "$tmp_dir"
_koopa_link_cellar "$name" "$version"
_koopa_install_success "$name_fancy"
