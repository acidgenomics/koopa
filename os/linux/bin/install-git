#!/usr/bin/env bash

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../include/header.sh"

# """
# This is now erroring on RHEL 7.7:
# > make --jobs="$jobs" all doc info
# > make install install-doc install-html install-info
#
#
# If system doesn't have gettext (msgfmt) installed:
# Note that this doesn't work on Ubuntu 18 LTS.
# NO_GETTEXT=YesPlease
# """

link_cellar=1
version=

while (("$#"))
do
    case "$1" in
        --cellar-only)
            link_cellar=0
            shift 1
            ;;
        --version=*)
            version="${1#*=}"
            shift 1
            ;;
        --version)
            version="$2"
            shift 2
            ;;
        *)
            _koopa_invalid_arg "$1"
            ;;
    esac
done

name="git"
[[ -z "$version" ]] && version="$(_koopa_variable "$name")"
prefix="$(_koopa_cellar_prefix)/${name}/${version}"
_koopa_exit_if_dir "$prefix"

_koopa_install_start "$name" "$version" "$prefix"

_koopa_assert_has_no_args "$@"
_koopa_assert_has_no_envs

jobs="$(_koopa_cpu_count)"
tmp_dir="$(_koopa_tmp_dir)"

(
    _koopa_cd_tmp_dir "$tmp_dir"
    # Recommended archive from Git website:
    # https://mirrors.edge.kernel.org/pub/software/scm/git/git-2.26.2.tar.gz
    file="${name}-${version}.tar.gz"
    url="https://mirrors.edge.kernel.org/pub/software/scm/${name}/${file}"
    # Git source code releases on GitHub:
    # > file="v${version}.tar.gz"
    # > url="https://github.com/git/${name}/archive/${file}"
    _koopa_download "$url"
    _koopa_extract "$file"
    cd "git-${version}" || exit 1
    make configure
    ./configure \
        --prefix="$prefix" \
        --with-openssl="/bin/openssl"
    make --jobs="$jobs" V=1
    make install
) 2>&1 | tee "$(_koopa_tmp_log_file)"

rm -fr "$tmp_dir"

[[ "$link_cellar" -eq 1 ]] && _koopa_link_cellar "$name" "$version"

_koopa_install_success "$name"
