#!/usr/bin/env bash

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../include/header.sh"

# Default to binary installation.
install="binary"

pos=()
while (("$#"))
do
    case "$1" in
        --source)
            install="source"
            shift 1
            ;;
        *)
            pos+=("$1")
            shift 1
            ;;
    esac
done
[[ "${#pos[@]}" -gt 0 ]] && set -- "${pos[@]}"

_koopa_install_cellar \
    --name="julia" \
    --name-fancy="Julia" \
    --script-name="julia-${install}" \
    "$@"
