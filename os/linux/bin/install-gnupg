#!/usr/bin/env bash
set -Eeu -o pipefail

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../include/header.sh"

name="gnupg"
version="$(_koopa_variable gpg)"
prefix="$(_koopa_cellar_prefix)/${name}/${version}"

_koopa_exit_if_dir "$prefix"

_koopa_h1 "Installing ${name} ${version} at '${prefix}'."

_koopa_assert_has_no_args "$@"
_koopa_assert_has_no_envs

gcrypt_url="https://www.gnupg.org/ftp/gcrypt"
jobs="$(_koopa_cpu_count)"
tmp_dir="$(_koopa_tmp_dir)/${name}"

# Download GnuPG release signing keys.
if _koopa_is_installed gpg-agent
then
    gpg --list-keys
    gpg --keyserver hkp://keyserver.ubuntu.com:80 \
        --recv-keys 249B39D24F25E3B6 \
                    04376F3EE0856959 \
                    2071B08A33BD3F06 \
                    8A861B1C7EFD60D9
fi

# libgpg-error                                                              {{{1
# ==============================================================================

pkg="libgpg-error"
ver="$(_koopa_variable "$pkg")"

_koopa_h2 "Installing ${pkg} ${ver}."

(
    set -o xtrace
    _koopa_cd_tmp_dir "$tmp_dir"
    _koopa_download "${gcrypt_url}/${pkg}/${pkg}-${ver}.tar.bz2.sig"
    _koopa_download "${gcrypt_url}/${pkg}/${pkg}-${ver}.tar.bz2"
    if _koopa_is_installed gpg-agent
    then
        gpg --verify "${pkg}-${ver}.tar.bz2.sig"
    fi
    _koopa_extract "${pkg}-${ver}.tar.bz2"
    cd "${pkg}-${ver}" || exit 1
    ./configure --prefix="$prefix"
    make --jobs="$jobs"
    make install
) > "$(_koopa_tmp_log_file)"

_koopa_link_cellar "$name" "$version"

# libgcrypt                                                              {{{1
# ==============================================================================

pkg="libgcrypt"
ver="$(_koopa_variable "$pkg")"

_koopa_h2 "Installing ${pkg} ${ver}."

(
    set -o xtrace
    _koopa_cd_tmp_dir "$tmp_dir"
    _koopa_download "${gcrypt_url}/${pkg}/${pkg}-${ver}.tar.bz2.sig"
    _koopa_download "${gcrypt_url}/${pkg}/${pkg}-${ver}.tar.bz2"
    if _koopa_is_installed gpg-agent
    then
        gpg --verify "${pkg}-${ver}.tar.bz2.sig"
    fi
    _koopa_extract "${pkg}-${ver}.tar.bz2"
    cd "${pkg}-${ver}" || exit 1
    ./configure --prefix="$prefix"
    make --jobs="$jobs"
    make install
) > "$(_koopa_tmp_log_file)"

_koopa_link_cellar "$name" "$version"

# libgpg-error                                                              {{{1
# ==============================================================================

pkg="libassuan"
ver="$(_koopa_variable "$pkg")"

_koopa_h2 "Installing ${pkg} ${ver}."

(
    set -o xtrace
    _koopa_cd_tmp_dir "$tmp_dir"
    _koopa_download "${gcrypt_url}/${pkg}/${pkg}-${ver}.tar.bz2.sig"
    _koopa_download "${gcrypt_url}/${pkg}/${pkg}-${ver}.tar.bz2"
    if _koopa_is_installed gpg-agent
    then
        gpg --verify "${pkg}-${ver}.tar.bz2.sig"
    fi
    _koopa_extract "${pkg}-${ver}.tar.bz2"
    cd "${pkg}-${ver}" || exit 1
    ./configure --prefix="$prefix"
    make --jobs="$jobs"
    make install
) > "$(_koopa_tmp_log_file)"

_koopa_link_cellar "$name" "$version"

# libgpg-error                                                              {{{1
# ==============================================================================

pkg="libksba"
ver="$(_koopa_variable "$pkg")"

_koopa_h2 "Installing ${pkg} ${ver}."

(
    set -o xtrace
    _koopa_cd_tmp_dir "$tmp_dir"
    _koopa_download "${gcrypt_url}/${pkg}/${pkg}-${ver}.tar.bz2.sig"
    _koopa_download "${gcrypt_url}/${pkg}/${pkg}-${ver}.tar.bz2"
    if _koopa_is_installed gpg-agent
    then
        gpg --verify "${pkg}-${ver}.tar.bz2.sig"
    fi
    _koopa_extract "${pkg}-${ver}.tar.bz2"
    cd "${pkg}-${ver}" || exit 1
    ./configure --prefix="$prefix"
    make --jobs="$jobs"
    make install
) > "$(_koopa_tmp_log_file)"

_koopa_link_cellar "$name" "$version"

# libgpg-error                                                              {{{1
# ==============================================================================

pkg="npth"
ver="$(_koopa_variable "$pkg")"

_koopa_h2 "Installing ${pkg} ${ver}."

(
    set -o xtrace
    _koopa_cd_tmp_dir "$tmp_dir"
    _koopa_download "${gcrypt_url}/${pkg}/${pkg}-${ver}.tar.bz2.sig"
    _koopa_download "${gcrypt_url}/${pkg}/${pkg}-${ver}.tar.bz2"
    if _koopa_is_installed gpg-agent
    then
        gpg --verify "${pkg}-${ver}.tar.bz2.sig"
    fi
    _koopa_extract "${pkg}-${ver}.tar.bz2"
    cd "${pkg}-${ver}" || exit 1
    ./configure --prefix="$prefix"
    make --jobs="$jobs"
    make install
) > "$(_koopa_tmp_log_file)"

_koopa_link_cellar "$name" "$version"

# libgpg-error                                                              {{{1
# ==============================================================================

pkg="pinentry"
ver="$(_koopa_variable "$pkg")"

_koopa_h2 "Installing ${pkg} ${ver}."

(
    set -o xtrace
    _koopa_cd_tmp_dir "$tmp_dir"
    _koopa_download "${gcrypt_url}/${pkg}/${pkg}-${ver}.tar.bz2.sig"
    _koopa_download "${gcrypt_url}/${pkg}/${pkg}-${ver}.tar.bz2"
    if _koopa_is_installed gpg-agent
    then
        gpg --verify "${pkg}-${ver}.tar.bz2.sig"
    fi
    _koopa_extract "${pkg}-${ver}.tar.bz2"
    cd "${pkg}-${ver}" || exit 1
    ./configure --prefix="$prefix" --enable-pinentry-curses
    make --jobs="$jobs"
    make install
) > "$(_koopa_tmp_log_file)"

_koopa_link_cellar "$name" "$version"

# gnupg                                                                     {{{1
# ==============================================================================

pkg="gnupg"
ver="$(_koopa_variable gpg)"

_koopa_h2 "Installing ${pkg} ${ver}."

(
    set -o xtrace
    _koopa_cd_tmp_dir "$tmp_dir"
    _koopa_download "${gcrypt_url}/${pkg}/${pkg}-${ver}.tar.bz2.sig"
    _koopa_download "${gcrypt_url}/${pkg}/${pkg}-${ver}.tar.bz2"
    if _koopa_is_installed gpg-agent
    then
        gpg --verify "${pkg}-${ver}.tar.bz2.sig"
    fi
    _koopa_extract "${pkg}-${ver}.tar.bz2"
    cd "${pkg}-${ver}" || exit 1
    ./configure --prefix="$prefix"
    make --jobs="$jobs"
    # > make check
    make install
) > "$(_koopa_tmp_log_file)"

_koopa_link_cellar "$name" "$version"

# Final steps                                                               {{{1
# ==============================================================================

rm -rf "$tmp_dir"

# Without the line below, gpg2 might fail to create / import secret keys.
# > rm -rf ~/.gnugp

if _koopa_is_installed gpg-agent
then
    gpgconf --kill gpg-agent
fi

_koopa_success "Installation of GnuPG was successful."
