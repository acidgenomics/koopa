#!/usr/bin/env bash

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../include/header.sh"

name="shellcheck"
version="$(_koopa_variable "$name")"
prefix="$(_koopa_cellar_prefix)/${name}/${version}"

_koopa_exit_if_dir "$prefix"

_koopa_h1 "Installing ${name} ${version} at '${prefix}'."

_koopa_assert_has_no_args "$@"
_koopa_assert_has_no_envs

tmp_dir="$(_koopa_tmp_dir)"

(
    _koopa_cd_tmp_dir "$tmp_dir"
    file="${name}-v${version}.linux.x86_64.tar.xz"
    # Previous URL, until 2020-03-13:
    # > url="https://storage.googleapis.com/${name}/${file}"
    # See https://github.com/koalaman/shellcheck/issues/1871 for details.
    url="https://github.com/koalaman/${name}/releases/download/\
v${version}/${file}"
    _koopa_download "$url"
    _koopa_extract "$file"
    mkdir -pv "${prefix}/bin"
    cp "shellcheck-v${version}/shellcheck" "${prefix}/bin"
) 2>&1 | tee "$(_koopa_tmp_log_file)"

rm -fr "$tmp_dir"

_koopa_link_cellar "$name" "$version"

_koopa_install_success "$name"
