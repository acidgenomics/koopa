#!/usr/bin/env bash

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../include/header.sh"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)
    program [version]

Link cellar program.

required positional arguments:
    1.  Program name.
    2.  Version.

$(_koopa_help_args)

note:
    Bash script.
    Updated 2019-10-23.
EOF
}

_koopa_assert_has_args "$@"
_koopa_help "$@"



# Arguments                                                                 {{{1
# ==============================================================================

name="$1"
version="$2"



# Script                                                                    {{{1
# ==============================================================================

_koopa_link_cellar "$name" "$version"
