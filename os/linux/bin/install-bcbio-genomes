#!/usr/bin/env bash

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" &>/dev/null && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../include/header.sh"

koopa::assert_has_no_envs
koopa::assert_is_installed bcbio_nextgen.py

bcbio_exe="$(koopa::which_realpath "bcbio_nextgen.py")"
bcbio_dir="$(cd "$(dirname "$bcbio_exe")/../.." && pwd -P)"
genomes_dir="${bcbio_dir}/genomes"

genomes="${1:-}"
[[ -z "$genomes" ]] && genomes='BDGP6,canFam3,hg38,mm10,rn6'
IFS=',' read -r -a genomes <<< "$genomes"

name_fancy="bcbio-nextgen genomes"

koopa::install_start "$name_fancy" "$genomes_dir"
koopa::dl "Genomes" "$(koopa::to_string "${genomes[@]}")"

cores="$(koopa::cpu_count)"
tmp_dir="$(koopa::tmp_dir)"

genome_flags=()
for genome in "${genomes[@]}"
do
    genome_flags+=("--genomes=${genome}")
done

flags=(
    "--upgrade=skip"
    "--cores=${cores}"
    "${genome_flags[@]}"
)

koopa::dl "Flags" "${flags[@]}"

(
    koopa::cd "$tmp_dir"
    bcbio_nextgen.py upgrade "${flags[@]}"
) 2>&1 | tee "$(koopa::tmp_log_file)"

rm -fr "$tmp_dir"

koopa::install_success "$name_fancy"
