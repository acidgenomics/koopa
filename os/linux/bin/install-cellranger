#!/usr/bin/env bash

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" &>/dev/null && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../include/header.sh"

version=

while (("$#"))
do
    case "$1" in
        --version=*)
            version="${1#*=}"
            shift 1
            ;;
        --version)
            version="$2"
            shift 2
            ;;
        *)
            _koopa_invalid_arg "$1"
            ;;
    esac
done

name="cellranger"
version="$(_koopa_variable "$name")"
prefix="$(_koopa_app_prefix)/${name}/${version}"
_koopa_exit_if_dir "$prefix"

name_fancy="Cell Ranger"
_koopa_install_start "$name_fancy" "$prefix"

_koopa_assert_has_no_args "$@"
_koopa_assert_has_no_envs

tmp_dir="$(_koopa_tmp_dir)/${name}"

(
    _koopa_cd_tmp_dir "$tmp_dir"
    file="${name}-${version}.tar.gz"
    server="https://seq.cloud"
    url="${server}/install/cellranger/${file}"
    _koopa_download "$url"
    _koopa_extract "$file"
    _koopa_mv "${name}-${version}" "$prefix"
)

rm -fr "$tmp_dir"

# Link main 'cellranger' binary into make prefix (e.g. '/usr/local').
make_prefix="$(_koopa_make_prefix)"
_koopa_ln "${prefix}/cellranger" "${make_prefix}/bin/cellranger"

_koopa_install_success "$name_fancy"
