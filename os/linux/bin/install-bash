#!/usr/bin/env bash
set -Eeu -o pipefail

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../include/header.sh"

name="bash"
version="$(_koopa_variable "$name")"
minor_version="$(_koopa_minor_version "$version")"
patches="$(echo "$version" | cut -d '.' -f 3)"
prefix="$(_koopa_cellar_prefix)/${name}/${version}"
tmp_dir="$(_koopa_tmp_dir)/${name}"
build="$(_koopa_make_build_string)"
jobs="$(_koopa_cpu_count)"
gnu_mirror="https://ftpmirror.gnu.org"

_koopa_assert_is_not_dir "$prefix"

_koopa_message "Installing ${name} ${version} at '${prefix}'."

(
    _koopa_cd_tmp_dir "$tmp_dir"
    file="bash-${minor_version}.tar.gz"
    url="${gnu_mirror}/bash/${file}"
    _koopa_download "$url"
    _koopa_extract "$file"
    cd "bash-${minor_version}" || exit 1
    # Apply patches. Can pipe curl call directly to 'patch -p0' instead.
    (
        mkdir -pv patches
        cd patches || exit 1
        base_url="https://ftp.gnu.org/gnu/bash/bash-${minor_version}-patches"
        mv_tr="$(echo "$minor_version" | tr -d '.')"
        range="$(printf "%03d-%03d" "1" "$patches")"
        request="${base_url}/bash${mv_tr}-[${range}]"
        # > _koopa_download "$request"
        curl "$request" -O
        cd .. || exit 1
        for file in patches/*
        do
            # https://stackoverflow.com/questions/14282617
            patch -p0 --ignore-whitespace --input="$file"
        done
    )
    ./configure \
        --build="$build" \
        --prefix="$prefix"
    make --jobs="$jobs"
    make test
    make install
)

rm -fr "$tmp_dir"

_koopa_link_cellar "$name" "$version"
_koopa_update_shells "$name"

_koopa_success "Installation of ${name} was successful."
_koopa_note "Reload the shell to complete activation."
