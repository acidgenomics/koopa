#!/usr/bin/env bash
set -Eeu -o pipefail

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../include/header.sh"

_koopa_assert_has_no_args "$@"
_koopa_assert_has_no_envs

name="aspera"
version="$(_koopa_variable "$name")"
prefix="$(_koopa_aspera_prefix)"
_koopa_exit_if_dir "$prefix"

_koopa_h1 "Installing Aspera Connect to '${prefix}'."

_koopa_assert_has_no_args "$@"
_koopa_assert_has_no_envs

tmp_dir="$(_koopa_tmp_dir)/${name}"

(
    set -o xtrace
    _koopa_cd_tmp_dir "$tmp_dir"
    file="ibm-aspera-connect-${version}.175481-linux-g2.12-64.tar.gz"
    url="https://download.asperasoft.com/download/sw/connect/${version}/${file}"
    _koopa_download "$url"
    _koopa_extract "$file"
    script="${file//.tar.gz/.sh}"
    "./${script}"
    # Target is currently hard-coded in IBM Aspera install script.
    script_target="${HOME}/.aspera/connect"
    _koopa_assert_is_dir "$script_target"
    # Move and enable for all users on Linux.
    if [[ "$prefix" != "$script_target" ]]
    then
        _koopa_prefix_mkdir "$prefix"
        cp -rv "${script_target}"/* "${prefix}/."
        rm -frv "$script_target"
    fi
    _koopa_assert_is_file "${prefix}/bin/ascp"
) > "$(_koopa_tmp_log_file)"

rm -fr "$tmp_dir"

_koopa_success "Installation of ${name} was successful."
