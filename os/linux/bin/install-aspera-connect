#!/usr/bin/env bash
set -Eeu -o pipefail

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../include/header.sh"

_koopa_assert_has_no_args "$@"
_koopa_assert_has_no_envs

name="aspera"
version="$(_koopa_variable "$name")"
prefix="${HOME}/.aspera/connect"
_koopa_is_dir "$prefix" && exit 0

_koopa_h1 "Installing Aspera Connect to '${prefix}'."

_koopa_assert_has_no_args "$@"
_koopa_assert_has_no_envs

tmp_dir="$(_koopa_tmp_dir)/${name}"
exe_file="${prefix}/bin/ascp"

(
    _koopa_cd_tmp_dir "$tmp_dir"
    file="ibm-aspera-connect-${version}.175481-linux-g2.12-64.tar.gz"
    url="https://download.asperasoft.com/download/sw/connect/${version}/${file}"
    _koopa_download "$url"
    _koopa_extract "$file"
    script="${file//.tar.gz/.sh}"
    "./${script}"
)

command -v "$exe_file"
"$exe_file" --version
