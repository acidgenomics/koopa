#!/usr/bin/env bash
set -Eeu -o pipefail

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../include/header.sh"

sudo rm -rv "${HOME}/Desktop"
ln -fnsv "${HOME}/Dropbox/Desktop" "${HOME}/."

sudo rm -rv "${HOME}/Documents"
ln -fnsv "${HOME}/Dropbox/Documents" "${HOME}/."

sudo killAll Finder
