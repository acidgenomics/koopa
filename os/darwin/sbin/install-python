#!/usr/bin/env bash

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../include/header.sh"

reinstall=0
pos=()
while (("$#"))
do
    case "$1" in
        --reinstall)
            reinstall=1
            shift 1
            ;;
        --)
            shift 1
            break
            ;;
        --*|-*)
            _koopa_invalid_arg "$1"
            ;;
        *)
            pos+=("$1")
            shift 1
            ;;
    esac
done
if [[ "${#pos[@]}" -gt 0 ]]
then
    set -- "${pos[@]}"
fi

name_fancy="Python"
name="python"
version="$(_koopa_variable "$name")"
framework_dir="/Library/Frameworks/Python.framework"

if ! _koopa_is_current_version "$name" || [[ "$reinstall" -eq 1 ]]
then
    _koopa_rm "$framework_dir"
fi

_koopa_exit_if_dir "$framework_dir"

_koopa_install_start "$name_fancy" "$framework_dir"

tmp_dir="$(_koopa_tmp_dir)"

(
    _koopa_cd_tmp_dir "$tmp_dir"
    file="python-${version}-macosx10.9.pkg"
    url="https://www.python.org/ftp/python/${version}/${file}"
    _koopa_download "$url"
    sudo installer -pkg "$file" -target /
) 2>&1 | tee "$(_koopa_tmp_log_file)"

rm -fr "$tmp_dir"

_koopa_install_success "$name_fancy"
_koopa_restart
