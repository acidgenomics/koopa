#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header darwin)"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)

Disable quarantine on installed applications.

$(_koopa_help_args)

details:
    This is useful for fixing installed Homebrew casks.

note:
    Bash script.
    Updated 2019-06-25.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

sudo xattr -r -d com.apple.quarantine /Applications/*.app
