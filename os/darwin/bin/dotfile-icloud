#!/usr/bin/env bash

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" &>/dev/null && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../include/header.sh"
koopa::assert_has_args "$#"

cloud="${HOME}/Library/Mobile\ Documents/com~apple~CloudDocs"
koopa::assert_is_dir "$cloud"

file="$1"
local="${HOME}/.${file}"

if [[ -f "$cloud" ]] && [[ -f "$local" ]]
then
    koopa::h1 "'${file}' exists in both places."
    koopa::h1 "Deleting local copy."
    rm -v "$local"
    koopa::h1 "Adding symlink."
    ln -fnsv "$cloud" "$local"
elif [[ -f "$cloud" ]]
then
    koopa::h1 "'${file}' is only saved on iCloud."
    koopa::h1 "Adding local symlink."
    ln -fsnv "$cloud" "$local"
elif [[ -f "$local" ]]
then
    koopa::h1 "'${file}' only exists locally."
    koopa::h1 "Moving to iCloud."
    mv -v "$local" "$cloud"
    koopa::h1 "Adding symlink."
    ln -fsnv "$cloud" "$local"
else
    koopa::stop "'${file}' doesn't exist."
fi
