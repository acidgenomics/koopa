#!/usr/bin/env bash

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../include/header.sh"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)

Add iCloud Drive symlink into home folder.

$(_koopa_help_args)

note:
    Bash script.
    Updated 2019-10-04.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

ln -fnsv "${HOME}/Library/Mobile Documents/com~apple~CloudDocs" "${HOME}/iCloud"
