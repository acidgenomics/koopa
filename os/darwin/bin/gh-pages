#!/usr/bin/env bash

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../include/header.sh"

_koopa_help "$@"



# Arguments                                                                 {{{1
# ==============================================================================

dir="${1:-"."}"
_koopa_assert_is_dir "$dir"



# Script                                                                    {{{1
# ==============================================================================

(
    cd "$dir" || exit 1
    bundle update
    bundle exec jekyll serve
)
