#!/usr/bin/env bash
set -Eeu -o pipefail

# Homebrew status.
# Modified 2019-06-18.

printf "\ndoctor:\n"
brew doctor

printf "\nlinkage:"
brew linkage

printf "\nleaves:\n"
brew leaves

"\ndependency tree:\n"
brew deps --installed --tree

printf "\nversions:\n"
brew list --versions

printf "\nmissing:\n"
brew missing

printf "\noutdated:\n"
brew outdated
brew cask outdated

printf "\ninfo:\n"
brew info
