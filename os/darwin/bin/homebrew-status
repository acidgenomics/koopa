#!/usr/bin/env bash

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../include/header.sh"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)

Homebrew status.

$(_koopa_help_args)

note:
    Bash script.
    Updated 2019-06-23.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

_koopa_assert_is_installed brew

printf "\ndoctor:\n"
brew doctor

printf "\nlinkage:"
brew linkage

printf "\nleaves:\n"
brew leaves

"\ndependency tree:\n"
brew deps --installed --tree

printf "\nversions:\n"
brew list --versions

printf "\nmissing:\n"
brew missing

printf "\noutdated:\n"
brew outdated
brew cask outdated

printf "\ninfo:\n"
brew info
