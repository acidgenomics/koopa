#!/usr/bin/env bash
set -Eeu -o pipefail

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../include/header.sh"
_koopa_assert_has_no_args "$@"
_koopa_assert_is_installed brew

_koopa_h1 "dependency tree:"
brew deps --installed --tree

print

_koopa_h1 "leaves:"
brew leaves

print

_koopa_h1 "versions:"
brew list --versions

print

_koopa_h1 "missing:"
brew missing

print

_koopa_h1 "outdated:"
brew outdated
brew cask outdated

print

_koopa_h1 "info:"
brew info
