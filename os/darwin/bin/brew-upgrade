#!/usr/bin/env bash

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../include/header.sh"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)

Upgrade Homebrew.

$(_koopa_help_args)

note:
    Bash script.
    Updated 2019-09-11.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

_koopa_assert_is_installed brew

brew analytics off

printf "\nUpdating Homebrew.\n"
brew update

printf "\nUpgrading Homebrew packages.\n"
brew upgrade --force-bottle
# > brew list | xargs brew reinstall --force-bottle --cleanup

printf "\nUpgrading Homebrew Casks.\n"
brew cask outdated | xargs brew cask reinstall

# Mac App Store
if _koopa_is_installed mas
then
    printf "\nUpgrading Mac App Store Apps.\n"
    mas upgrade
fi
