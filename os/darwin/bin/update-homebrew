#!/usr/bin/env bash

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../include/header.sh"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)

Update Homebrew.

$(_koopa_help_args)

note:
    Bash script.
    Updated 2019-10-23.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

if ! _koopa_assert_is_installed
then
    _koopa_warning "Homebrew is not installed."
    exit 0
fi

brew analytics off

printf "\nUpdating Homebrew.\n"
brew update

printf "\nUpdating brews.\n"
brew upgrade --force-bottle
# > brew list | xargs brew reinstall --force-bottle --cleanup

printf "\nUpdating casks.\n"
brew cask outdated | xargs brew cask reinstall

if _koopa_is_installed mas
then
    printf "\nUpgrading Mac App Store Apps.\n"
    mas upgrade
fi

printf "\nRunning cleanup.\n"
brew cleanup -s
rm -frv "$(brew --cache)"
