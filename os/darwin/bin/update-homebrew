#!/usr/bin/env bash

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../include/header.sh"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)

Update Homebrew.

$(_koopa_help_args)

note:
    Bash script.
    Updated 2019-10-23.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

if ! _koopa_assert_is_installed
then
    _koopa_warning "Homebrew is not installed."
    exit 0
fi

brew analytics off

_koopa_message "Updating Homebrew."
brew update

print

_koopa_message "Updating brews."
brew upgrade --force-bottle
# > brew list | xargs brew reinstall --force-bottle --cleanup

print

_koopa_message "Updating casks."
brew cask outdated | xargs brew cask reinstall

_koopa_message "Running cleanup."
brew cleanup -s
rm -frv "$(brew --cache)"
