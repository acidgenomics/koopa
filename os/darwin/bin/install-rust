#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header darwin)"

# Install Rust.
# Updated 2019-09-14.

_koopa_assert_is_installed brew
brew install rust

# > rustup-init --help
rustup-init -y --no-modify-path

exe_file="${HOME}/.cargo/bin/rustc"
"$exe_file" --version
