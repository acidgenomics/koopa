#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header darwin)"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)

Install Rust.

$(_koopa_help_args)

note:
    Bash script.
    Updated 2019-09-14.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

_koopa_assert_is_installed brew
brew install rust

# > rustup-init --help
rustup-init -y --no-modify-path

exe_file="${HOME}/.cargo/bin/rustc"
"$exe_file" --version
