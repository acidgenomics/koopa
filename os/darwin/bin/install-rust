#!/usr/bin/env bash

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../include/header.sh"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)

Install Rust.

$(_koopa_help_args)

details:
    Installs rustup via Homebrew.

note:
    Bash script.
    Updated 2019-10-02.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

_koopa_assert_is_installed brew

brew install rustup
rustup-init -v -y --no-modify-path

exe_file="${HOME}/.cargo/bin/rustc"
"$exe_file" --version
