#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(_koopa_header darwin)"

# Create DMG image.
# Updated 2019-06-23.

dir="$1"

# Check that directory exists.
if [[ ! -d "$dir" ]]
then
    >&2 printf "%s directory does not exist.\n" "$dir"
    exit 1
fi

# Create disk image from directory.
# -ov = overwrite
hdiutil create -volname "$dir" -srcfolder "$dir" -ov "${dir}.dmg"
