#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(_koopa_header debian)"

# Install Tmux terminal multiplexer.
# Updated 2019-06-23.

# > apt-cache search libevent

if _koopa_has_sudo
then
    sudo apt-get -y install libevent-dev
    sudo apt-get -y install tmux
    sudo apt-get -y build-dep tmux
fi

# shellcheck source=/dev/null
source "$(_koopa_cellar_script tmux)"
