#!/usr/bin/env bash

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../include/header.sh"

_koopa_help "$@"

if _koopa_is_shared
then
    sudo apt-get -y install python3 python3-pip
fi

# shellcheck source=/dev/null
source "$(_koopa_cellar_script python)"
