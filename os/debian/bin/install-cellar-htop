#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(_koopa_header debian)"

# Install htop.
# Updated 2019-06-24.

if _koopa_has_sudo
then
    sudo apt-get -y install htop
    sudo apt-get -y build-dep htop
fi

# shellcheck source=/dev/null
source "$(_koopa_cellar_script htop)"
