#!/usr/bin/env bash
set -Eeu -o pipefail

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../include/header.sh"

name="rstudio-server"

_koopa_exit_if_docker
_koopa_exit_if_installed "$name"
_koopa_assert_has_no_args "$@"
_koopa_assert_is_installed R gdebi

version="$(_koopa_variable "$name")"
tmp_dir="$(_koopa_tmp_dir)/${name}"
os_codename="$(_koopa_os_codename)"

if ! _koopa_is_ubuntu
then
    case "$os_codename" in
        buster)
            os_codename="bionic"
            ;;
    esac
fi

if [[ "$os_codename" != "bionic" ]]
then
    _koopa_stop "Unsupported OS version: '${os_codename}'."
fi

_koopa_h1 "Installing ${name} ${version}."

(
    set -o xtrace
    _koopa_cd_tmp_dir "$tmp_dir"
    file="rstudio-server-${version}-amd64.deb"
    url="https://download2.rstudio.org/server/bionic/amd64/${file}"
    _koopa_download "$url"
    sudo gdebi --non-interactive "$file"
) > "$(_koopa_tmp_log_file)"

rm -fr "$tmp_dir"

_koopa_success "Installation of $name was successful."
