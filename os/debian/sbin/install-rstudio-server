#!/usr/bin/env bash

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../include/header.sh"

_acid_assert_has_no_args "$@"


name="rstudio-server"
version="$(_acid_variable "$name")"
tmp_dir="$(_acid_tmp_dir)/${name}"

_acid_message "Installing ${name} ${version}."

# Note that R is already configured on Bioconductor image.
sudo apt-get -y install r-base

# Ubuntu 18+ instructions.
sudo apt-get -y install gdebi-core

file="rstudio-server-${version}-amd64.deb"
url="https://download2.rstudio.org/server/bionic/amd64/${file}"

(
    rm -rf "$tmp_dir"
    mkdir -p "$tmp_dir"
    cd "$tmp_dir" || exit 1
    _acid_download "$url"
    sudo gdebi --non-interactive "$file"
    rm -rf "$tmp_dir"
)

command -v "$name"
"$name" version
"$name" status
