#!/usr/bin/env bash

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../include/header.sh"

_koopa_assert_has_sudo



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)

Install base programs recommended for Debian.

$(_koopa_help_args)

note:
    Bash script.
    Updated 2019-09-26.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

sudo apt-get update

# Following the recommendations in docker-bioconductor recipes.
# https://github.com/acidgenomics/docker-bioconductor
sudo apt-get install -y \
    autoconf \
    automake \
    cargo \
    gtk-doc-tools \
    libbz2-dev \
    libcairo2-dev \
    libcurl4-openssl-dev \
    libfreetype6-dev \
    libgdal-dev \
    libglu1-mesa-dev \
    libharfbuzz-dev \
    liblzma-dev \
    libmagick++-dev \
    libmariadb-client-lgpl-dev \
    libpng-dev \
    libssh2-1-dev \
    libssl-dev \
    libtool \
    libudunits2-dev \
    libxml2-dev \
    libx11-dev \
    libz-dev \
    pkg-config \
    texlive \
    xorg

# Extra programs that are useful on an interactive VM.
sudo apt-get install -y \
    emacs \
    git \
    gnupg2 \
    htop \
    libgsl-dev \
    libhdf5-dev \
    openjdk-12-jdk \
    openjdk-12-jre \
    pandoc \
    pandoc-citeproc \
    perl \
    python \
    r-base \
    r-base-dev \
    tmux \
    vim \
    zsh
