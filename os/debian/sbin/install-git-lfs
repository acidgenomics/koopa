#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(_koopa_header debian)"

# Install Git LFS.
# Updated 2019-07-27.

_koopa_assert_has_sudo

curl -s https://packagecloud.io/install/repositories/github/git-lfs/script.deb.sh | sudo bash
sudo apt-get -y install git git-lfs
git lfs install
