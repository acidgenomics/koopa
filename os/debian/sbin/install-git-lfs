#!/usr/bin/env bash

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" &>/dev/null && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../include/header.sh"

name_fancy="Git LFS"

_koopa_install_start "$name_fancy"

# Set up using automated script.
url="https://packagecloud.io/install/repositories/github/git-lfs/script.deb.sh"
curl -s "$url" | sudo bash
_koopa_apt_install git git-lfs
git lfs install

_koopa_install_success "$name_fancy"
