#!/usr/bin/env bash

# shellcheck source=/dev/null
. "$(koopa header bash)"

koopa::test_linter() {
    # """
    # Check that scripts do not contain lints.
    # Updated 2020-07-23.
    # """
    local koopa_prefix linter_prefix
    koopa_prefix="$(koopa::prefix)"
    koopa::h1 'Running linter checks.'
    koopa::git_clone_dotfiles &>/dev/null
    koopa::assert_is_symlink "${koopa_prefix}/."{'lintr','pylintrc'}
    linter_prefix="${koopa_prefix}/tests/linter.d"
    koopa::exec_dir "$linter_prefix"
    return 0
}

koopa::test_linter "$@"
