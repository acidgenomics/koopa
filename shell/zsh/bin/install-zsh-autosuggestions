#!/usr/bin/env zsh

# shellcheck source=/dev/null
source "$(koopa header zsh)"



# Variables                                                                 {{{1
# ==============================================================================

plugin="zsh-autosuggestions"
source_repo="https://github.com/zsh-users/${plugin}"
zsh_custom_dir="${ZSH_CUSTOM:-${HOME}/.oh-my-zsh/custom}"
target_dir="${zsh_custom_dir}/plugins/${plugin}"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)

Install ZSH autosuggestions.

$(_koopa_help_args)

note:
    Bash script.
    Updated 2019-09-24.
EOF
}

_koopa_help "$@"



# Script                                                                 {{{1
# ==============================================================================

_koopa_assert_is_not_dir "$target_dir"
printf "Installing %s.\n" "$plugin"
git clone "$source_repo" "$target_dir"
