#!/usr/bin/env bash

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../../bash/include/header.sh"


plugin="$1"
source_repo="https://github.com/${plugin}"

zsh_custom_dir="$ZSH_CUSTOM"
target_dir="${zsh_custom_dir}/plugins/${plugin}"
_koopa_assert_is_not_dir "$target_dir"

_koopa_message "Installing ${plugin}."
git clone "$source_repo" "$target_dir"
