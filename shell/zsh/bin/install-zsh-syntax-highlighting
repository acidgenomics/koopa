#!/usr/bin/env zsh

# shellcheck source=/dev/null
source "$(koopa header zsh)"

# Install ZSH syntax highlighting.
# Modified 2019-08-19.

plugin="zsh-syntax-highlighting"
dir="${ZSH_CUSTOM:-${HOME}/.oh-my-zsh/custom}/plugins/${plugin}"

if [[ -d "$dir" ]]
then
    >&2 "Error: %s plugin already installed at: '%s'.\n" "$plugin" "$dir"
    exit 1
fi

printf "Installing %s.\n" "$plugin"
rm -frv "$dir"
git clone "https://github.com/zsh-users/${plugin}" "$dir"
