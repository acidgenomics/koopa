#!/usr/bin/env bash

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../../bash/include/header.sh"



# Variables                                                                 {{{1
# ==============================================================================

source_repo="https://github.com/robbyrussell/oh-my-zsh"
target_dir="${HOME}/.oh-my-zsh"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)
    [dir="${target_dir}"]

Install oh-my-zsh

optional positional arguments:
    1.  Target directory.
        Defaults to '${target_dir}'.

$(_koopa_help_args)

see also:
    ${source_repo}

note:
    Bash script.
    Updated 2019-08-19.
EOF
}

_koopa_help "$@"



# Arguments                                                                 {{{1
# ==============================================================================

target_dir="${1:-$target_dir}"



# Script                                                                 {{{1
# ==============================================================================

_koopa_assert_is_not_dir "$target_dir"
_koopa_message "Installing oh-my-zsh."
git clone "$source_repo" "$target_dir"
