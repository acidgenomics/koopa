#!/usr/bin/env zsh

# shellcheck source=/dev/null
source "$(koopa header zsh)"

source_repo="https://github.com/robbyrussell/oh-my-zsh"
target_dir="${HOME}/.oh-my-zsh"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
usage: install-oh-my-zsh [--help|-h] [dir="${target_dir}"]

Install oh-my-zsh

optional positional arguments:
    1.  Target directory.
        Defaults to '${target_dir}'.

optional arguments:
    --help, -h
        Show this help message and exit.

see also:
    ${source_repo}

note:
    Bash script.
    Updated 2019-08-19.
EOF
}

_koopa_help "$@"



# Arguments                                                                 {{{1
# ==============================================================================

target_dir="${1:-$target_dir}"



# Script                                                                 {{{1
# ==============================================================================

_koopa_assert_is_not_dir "$target_dir"
printf "Installing oh-my-zsh.\n"
git clone "$source_repo" "$target_dir"
