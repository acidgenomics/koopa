#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header harvard-odyssey)"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)

Launch SLURM interaction session.

$(_koopa_help_args)

details:
    1 core; 1 GB RAM; 1 hour.

note:
    Bash script.
    Updated 2019-06-23.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

srun -p test \
    --pty \
    --mem 1GB \
    -t 0-01:00 \
    "$SHELL"
