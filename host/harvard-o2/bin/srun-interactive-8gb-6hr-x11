#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header harvard-o2)"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
srun-interactive-8gb-6hr-x11 [--help|-h]

Launch SLURM interaction session.

optional arguments:
    --help, -h
        Show this help message and exit.

details:
    1 core; 8 GB RAM; 6 hours; X11 forwarding.

note:
    Bash script.
    Updated 2019-06-23.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

srun -p interactive \
    --pty -c 1 \
    --mem 8G \
    --time 0-6:00 \
    --x11=first \
    "$SHELL"
