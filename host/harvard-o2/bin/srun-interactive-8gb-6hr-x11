#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header harvard-o2)"

# Launch SLURM interaction session.
# Updated 2019-06-23.

# 1 core; 8 GB RAM; 6 hours; X11 forwarding.

srun -p interactive \
    --pty -c 1 \
    --mem 8G \
    --time 0-6:00 \
    --x11=first \
    "$SHELL"
