#!/usr/bin/env bash

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../include/header.sh"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)

Link MSigDB annotations from Azure Files.

$(_koopa_help_args)

note:
    Bash script.
    Updated 2019-09-18.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

rm -frv "${HOME}/msigdb"
ln -fnsv /mnt/azbioinfoseq01/Reference/msigdb "${HOME}/."
