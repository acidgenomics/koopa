#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header azure)"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)

Link MSigDB annotations from Azure Files.

$(_koopa_help_args)

note:
    Bash script.
    Updated 2019-09-18.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

rm -frv "${HOME}/msigdb"
ln -fnsv /mnt/azbioinfoseq01/Reference/msigdb "${HOME}/."
