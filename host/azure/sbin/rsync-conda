#!/usr/bin/env bash

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../include/header.sh"
_acid_assert_has_sudo

source_user="$USER"

host_ip="$(ip-address)"
source_ip="10.100.100.132"

conda_dir="/usr/local/conda"
_acid_assert_is_dir "$conda_dir"

mapfile -t flags < <(_acid_rsync_flags)
flags+=("--omit-dir-times")

# Check for accidental sync from source machine.
if [[ "$source_ip" == "$host_ip" ]]
then
    _acid_note "On source machine: '${source_ip}'. Skipping."
    exit 0
fi

_acid_message "Updating '${conda_dir}' from '${source_ip}'."
_acid_note "Using flags: ${flags[*]}"

# shellcheck disable=SC2068
rsync ${flags[@]} \
    --rsync-path="sudo /usr/bin/rsync" \
    "${source_user}@${source_ip}:${conda_dir}/" \
    "${conda_dir}/"
