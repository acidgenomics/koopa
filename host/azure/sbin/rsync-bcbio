#!/usr/bin/env bash
set -Eeu -o pipefail

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../include/header.sh"

source_user="$USER"

host_ip="$(ip-address)"
source_ip="10.100.100.135"

bcbio_dir="/usr/local/bcbio"

if [[ ! -d "$bcbio_dir" ]]
then
    _koopa_note "bcbio is not installed at '${bcbio_dir}'. Skipping."
    exit 0
fi

mapfile -t flags < <(_koopa_rsync_flags)
flags+=("--omit-dir-times")

# Check for accidental sync from source machine.
if [[ "$source_ip" == "$host_ip" ]]
then
    _koopa_note "On source machine: '${source_ip}'. Skipping."
    exit 0
fi

_koopa_message "Updating '${bcbio_dir}' from '${source_ip}'."
_koopa_note "Using flags: ${flags[*]}"

# shellcheck disable=SC2068
rsync ${flags[@]} \
    --rsync-path="sudo /usr/bin/rsync" \
    "${source_user}@${source_ip}:${bcbio_dir}/" \
    "${bcbio_dir}/"
