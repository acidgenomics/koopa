#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)

Kill a hanging R session.

$(_koopa_help_args)

note:
    Bash script.
    Updated 2019-10-18.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

pkill rsession
