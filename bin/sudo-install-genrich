# Genrich
# https://github.com/jsh58/Genrich

build_dir="${KOOPA_TMP}/build/genrich"
prefix="$KOOPA_PREFIX"

version="0.5"

rm -rf "$build_dir"
mkdir -p "$build_dir"
cd "$build_dir"

wget "https://github.com/jsh58/Genrich/archive/v${version}.tar.gz"
tar -xzvf "v${version}.tar.gz"
cd "Genrich-${version}"
make
sudo cp Genrich "${prefix}/bin"
rm -rf "$build_dir"
