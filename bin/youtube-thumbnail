#!/usr/bin/env bash
set -Eeu -o pipefail

# Download a thumbnail image from YouTube.

url="$1"
id=$(echo "$url" | grep -Eo 'v=[A-Za-z0-9_-]+' | cut -d '=' -f 2)

# File options:
# - hqdefault (smaller)
# - maxresdefault (larger)
# Note all videos will return the max res thumbnail, so stick with hq instead.

wget -O "$id.jpg" "https://i.ytimg.com/vi/${id}/hqdefault.jpg"
