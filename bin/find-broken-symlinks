#!/usr/bin/env bash
set -Eeu -o pipefail

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"

dir="${1:-"."}"

if _koopa_is_darwin
then
    find "$dir" -type l -print0 | xargs -0 file | grep broken
elif _koopa_is_linux
then
    find "$dir" -xtype l
fi
