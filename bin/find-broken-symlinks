#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"

dir="."



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
usage find-broken-symlinks [--help|-h] [dir="${dir}"]

Find broken symlinks.

optional positional arguments:
    1.  Directory path.
        Defaults to '${dir}'.

details:
    Searches recursively inside of specified directory, with no depth limit.

note:
    Bash script.
    Updated 2019-08-29.
    
examples:
    touch a
    ln -s a b
    ln -s z c
EOF
}

_koopa_help "$@"



# Arguments                                                                 {{{1
# ==============================================================================

dir="${1:-$dir}"



# Script                                                                    {{{1
# ==============================================================================

if _koopa_is_darwin
then
    find "$dir" -type l -print0  | xargs -0 file | grep broken
elif _koopa_is_linux
then
    find "$dir" -xtype l
fi
