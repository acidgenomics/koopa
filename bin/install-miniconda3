#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"

_koopa_help "$@"
_koopa_assert_has_no_args "$@"
_koopa_assert_has_no_environments



# Variables                                                                 {{{1
# ==============================================================================

name="miniconda3"
prefix="$(_koopa_build_prefix)/${name}"
tmp_dir="$(_koopa_tmp_dir)/${name}"
exe_file="${prefix}/bin/conda"



# Script                                                                    {{{1
# ==============================================================================

case "$OSTYPE" in
    linux-gnu)
        script="Miniconda3-latest-Linux-x86_64.sh"
        ;;
    darwin*)
        script="Miniconda3-latest-MacOSX-x86_64.sh"
        ;;
    *)
        _koopa_stop "'${OSTYPE}' is not supported."
        ;;
esac

_koopa_prefix_mkdir "$prefix"

(
    rm -rf "$tmp_dir"
    mkdir -p "$tmp_dir"
    cd "$tmp_dir" || exit 1
    curl -O "https://repo.continuum.io/miniconda/${script}"
    bash "$script" -bf -p "$prefix"
    rm -rf "$tmp_dir"
)

_koopa_set_permissions "$prefix"

command -v "$exe_file"
"$exe_file" --version
