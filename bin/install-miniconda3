#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)

Install Miniconda.

$(_koopa_help_args)

see also:
    - https://conda.io/miniconda.html
    - bash Miniconda3-latest-Linux-x86_64.sh -h

note:
    Bash script.
    Updated 2019-06-23.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

_koopa_assert_has_no_environments

name="miniconda3"
prefix="$(_koopa_build_prefix)/${name}"
tmp_dir="$(_koopa_tmp_dir)/${name}"
exe_file="${prefix}/bin/conda"

case "$OSTYPE" in
    linux-gnu)
        script="Miniconda3-latest-Linux-x86_64.sh"
        ;;
    darwin*)
        script="Miniconda3-latest-MacOSX-x86_64.sh"
        ;;
    *)
        printf "Error: %s is not supported." "$OSTYPE"
        exit 1
        ;;
esac

_koopa_prefix_mkdir "$prefix"

(
    rm -rf "$tmp_dir"
    mkdir -p "$tmp_dir"
    cd "$tmp_dir" || exit 1
    curl -O "https://repo.continuum.io/miniconda/${script}"
    bash "$script" -bf -p "$prefix"
    rm -rf "$tmp_dir"
)

_koopa_prefix_chgrp "$prefix"

command -v "$exe_file"
"$exe_file" --version
