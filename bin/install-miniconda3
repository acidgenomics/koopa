#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"

# Install Miniconda.
# Updated 2019-06-23.

# See also:
# - https://conda.io/miniconda.html

# Useful script flags:
# > bash Miniconda3-latest-Linux-x86_64.sh -h
# -b           run install in batch mode (without manual intervention),
#              it is expected the license terms are agreed upon
# -f           no error if install prefix already exists
# -h           print this help message and exit
# -p PREFIX    install prefix, defaults to /home/ec2-user/miniconda3, must not contain spaces.
# -s           skip running pre/post-link/install scripts
# -u           update an existing installation
# -t           run package tests after installation (may install conda-build)

_koopa_assert_has_no_environments

name="miniconda3"
prefix="$(koopa build-prefix)/${name}"
tmp_dir="$(koopa tmp-dir)/${name}"
exe_file="${prefix}/bin/conda"

case "$OSTYPE" in
    linux-gnu)
        script="Miniconda3-latest-Linux-x86_64.sh"
        ;;
    darwin*)
        script="Miniconda3-latest-MacOSX-x86_64.sh"
        ;;
    *)
        printf "Error: %s is not supported." "$OSTYPE"
        exit 1
        ;;
esac

_koopa_build_mkdir "$prefix"

(
    rm -rf "$tmp_dir"
    mkdir -p "$tmp_dir"
    cd "$tmp_dir" || exit 1
    curl -O "https://repo.continuum.io/miniconda/${script}"
    bash "$script" -bf -p "$prefix"
    rm -rf "$tmp_dir"
)

_koopa_build_chgrp "$prefix"

command -v "$exe_file"
"$exe_file" --version
