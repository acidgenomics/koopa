#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"

_koopa_help "$@"
_koopa_assert_has_no_args "$@"

if ! _koopa_is_installed rustup
then
    _koopa_warning "rustup is not installed."
    exit 0
fi



# Script                                                                    {{{1
# ==============================================================================

_koopa_message "Updating Rust via rustup."
rustup update
