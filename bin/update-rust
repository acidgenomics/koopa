#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)

Update Rust

$(_koopa_help_args)

details:
    Calls rustup internally.

note:
    Bash script.
    Updated 2019-10-20.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

if ! _koopa_is_installed rustup
then
    _koopa_warning "rustup is not installed."
    exit 0
fi

echo "Updating Rust via rustup."

rustup update
