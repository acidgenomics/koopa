#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"

_koopa_help "$@"
_koopa_assert_has_no_args "$@"

if ! _koopa_is_venv_active
then
    _koopa_warning "No active Python venv detected."
    exit 0
fi



# Script                                                                    {{{1
# ==============================================================================

_koopa_message "Updating Python venv."

python -m pip install --upgrade pip

lines="$(python -m pip list --outdated --format=freeze)"
mapfile -t array <<< "$lines"
_koopa_is_array_non_empty "${array[@]}" || exit 0
_koopa_message "${#array[@]} outdated packages detected."

echo "$lines" \
    | cut -d '=' -f 1 \
    | xargs -n1 python -m pip install --upgrade
