#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"
_acid_assert_has_no_args "$@"

if ! _acid_is_venv_active
then
    _acid_note "No active Python venv detected."
    exit 0
fi

_acid_message "Updating Python venv."

python -m pip install --upgrade pip

lines="$(python -m pip list --outdated --format=freeze)"
mapfile -t array <<< "$lines"
_acid_is_array_non_empty "${array[@]}" || exit 0
_acid_message "${#array[@]} outdated packages detected."

echo "$lines" \
    | cut -d '=' -f 1 \
    | xargs -n1 python -m pip install --upgrade
