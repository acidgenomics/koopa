#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)

Upgrade all Python packages installed via pip.

$(_koopa_help_args)

details:
    Applies to currently activated Pyton virtual environment.

see also:
    https://stackoverflow.com/a/3452888/3911732

note:
    Bash script.
    Updated 2019-10-20.    
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

if ! _koopa_is_venv_active
then
    >&2 printf "Warning: No active venv detected.\n"
    exit 0
fi

pip list --outdated --format=freeze \
    | grep -v '^\-e' \
    | cut -d = -f 1  \
    | xargs -n1 pip install --upgrade
