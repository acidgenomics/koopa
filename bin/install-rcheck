#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"

# Install Rcheck scripts for R package locally.
# Updated 2019-07-31.

config_dir="$(_koopa_config_dir)"
rcheck_repo="${config_dir}/Rcheck"

if [[ ! -d "$rcheck_repo" ]]
then
    rm -rf "$rcheck_repo"
    git clone git@github.com:acidgenomics/Rcheck.git "$rcheck_repo"
fi

# Add symlink in current working directory.
rm -rf .Rcheck
ln -fns "$rcheck_repo" .Rcheck

# Ensure necessary config files are copied.
