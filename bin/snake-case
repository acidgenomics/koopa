#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"

_koopa_help "$@"
_koopa_assert_has_args "$@"
_koopa_assert_is_r_package_installed syntactic



# Arguments                                                                 {{{1
# ==============================================================================

rename="FALSE"
prefix="FALSE"

POSITIONAL=()
while (("$#"))
do
    case "$1" in
        --prefix)
            prefix="TRUE"
            shift 1
            ;;
        --rename)
            rename="TRUE"
            shift 1
            ;;
        --)
            shift 1
            break
            ;;
        --*|-*)
            _koopa_invalid_arg "$1"
            ;;
        *)
            POSITIONAL+=("$1")
            shift 1
            ;;
    esac
done
set -- "${POSITIONAL[@]}"



# Script                                                                    {{{1
# ==============================================================================

object="$(_koopa_array_to_r_vector "$@")"
Rscript -e " \
    cat(
        syntactic::snakeCase(
            object = ${object},
            rename = ${rename},
            prefix = ${prefix}
        ),
        '\n',
        sep = ' '
    ) \
"
