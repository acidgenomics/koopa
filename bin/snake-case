#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header) [--strict]
    STRING...

Snake case.

required positional arguments:
    ... Character strings to sanitize.

$(_koopa_help_args)

see also:
    - 'syntactic::snakeCase()' in R.
    - make-names

examples:
    snake-case "hello world" "foo bar"
    snake-case "gene ID"

note:
    Bash script that calls Rscript internally.
    Requires the syntactic package to be installed.
    Updated 2019-09-25.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

object="$(_koopa_array_to_r_vector "$@")"
Rscript -e " \
    cat(
        syntactic::snakeCase(object = ${object}),
        '\n',
        sep = ' '
    ) \
"
