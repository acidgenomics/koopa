#!/usr/bin/env bash
set -Eeu -o pipefail

KOOPA_PREFIX="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_PREFIX}/shell/bash/include/header.sh"

_koopa_assert_has_no_args "$@"
_koopa_assert_has_no_envs
_koopa_assert_is_installed "rbenv"

version="$(_koopa_variable ruby)"


# FIXME Add a check if it's already installed here.
# > rbenv versions

_koopa_h1 "Installing Ruby ${version} via rbenv."

# Ensure ruby-build is current.
ruby_build_dir="$(rbenv root)/plugins/ruby-build"
if [[ -d "$ruby_build_dir" ]]
then
    _koopa_h2 "Updating ruby-build plugin: '${ruby_build_dir}'."
    (
        cd "$ruby_build_dir" || exit 1
        git pull
    )
fi

(
    set -o xtrace
    rbenv install "$version"
    rbenv global "$version"
) &> "$(_koopa_tmp_log_file)"

_koopa_success "Installation of Ruby was successful."
