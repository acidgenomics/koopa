#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"
_acid_assert_has_no_args "$@"
_acid_assert_has_no_environments
_acid_assert_is_installed "rbenv"

version="$(_acid_variable ruby)"

# Ensure ruby-build is current.
ruby_build_dir="/usr/local/rbenv/plugins/ruby-build"
if [[ -d "$ruby_build_dir" ]]
then
    _acid_message "Updating ruby-build plugin: '${ruby_build_dir}'."
    (
        cd "$ruby_build_dir" || exit 1
        git pull
    )
fi

rbenv install "$version"
rbenv global "$version"
rbenv versions
