#!/usr/bin/env bash

KOOPA_PREFIX="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." &>/dev/null && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_PREFIX}/shell/bash/include/header.sh"

_koopa_assert_has_no_args "$@"
_koopa_exit_if_not_installed gcloud
_koopa_exit_if_current_version "google-cloud-sdk"

_koopa_h1 "Updating Google Cloud SDK."

if _koopa_is_macos
then
    brew cask reinstall google-cloud-sdk
else
    gcloud components update
fi
