#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
usage: conda-create-internal-pandoc [--help|-h]

Create internal pandoc conda environment.

optional arguments:
    --help, -h
        Show this help message and exit.

details:
    Useful environment on virtual machines running a conservative Linux release
    (i.e. RHEL 7) that bundles a very old version of pandoc.

see also:
    conda env list

note:
    Bash script.
    Updated 2019-09-23.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

_koopa_assert_is_installed conda

name="pandoc"
prefix="$(_koopa_conda_prefix)/envs/${name}"

conda create -qy --prefix="$prefix" "$name"
