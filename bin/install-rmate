#!/usr/bin/env bash
set -Eeu -o pipefail

# Install rmate
# Modified 2019-06-18.

For use with Remote VSCode extension.

# See also:
# - https://medium.com/@prtdomingo/editing-files-in-your-linux-virtual-machine-made-a-lot-easier-with-remote-vscode-6bb98d0639a4

prefix="$KOOPA_PREFIX"
tmp_dir="${KOOPA_TMP_DIR}/rmate"
version="$(koopa variable rmate)"

(
    rm -rf "$tmp_dir"
    mkdir -p "$tmp_dir"
    cd "$tmp_dir"
    wget "https://github.com/aurora/rmate/archive/v${version}.tar.gz"
    tar -xzvf "v${version}.tar.gz"
    cd "rmate-${version}"
    chmod a+x rmate
    cp rmate "${prefix}/bin"
)

command -v rmate
rmate --version
