#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"



# Notes                                                                     {{{1
# ==============================================================================

# Potentially useful flags:
# --background
# --tries=10



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
usage: wget-recursive [--help|-h] url user password

Recursively download a directory using wget.

required positional arguments:
    1.  URL.
    2.  User name.
    3.  Password.

note:
    Bash script.
    Updated 2019-06-23.
EOF
}

_koopa_help "$@"



# Arguments                                                                 {{{1
# ==============================================================================

url="$1"
user="$2"

# Note that we need to escape the wildcards in the password.
# For direct input, can just use single quotes to escape.
# See also:
# - https://unix.stackexchange.com/questions/379181
password="$3"
password="${password@Q}"



# Script                                                                    {{{1
# ==============================================================================

timestamp="$(date "+%Y%m%d-%H%M%S")"
log_file="wget-${timestamp}.log"

wget \
    --user="$user" \
    --password="$password" \
    --recursive \
    --no-parent \
    --continue \
    --debug \
    --output-file="$log_file" \
    "$url"/*
