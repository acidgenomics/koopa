#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)
    name

Remove a conda environment.

required positional arguments:
    1.  Environment name.

details:
    Removes without prompting.

examples:
    conda-remove-env kallisto

note:
    Bash script.
    Updated 2019-10-25.
EOF
}

_koopa_assert_has_args "$@"
_koopa_help "$@"



# Arguments                                                                 {{{1
# ==============================================================================

name="$1"



# Script                                                                    {{{1
# ==============================================================================

_koopa_assert_is_installed conda

conda remove --yes --name="${name}" --all
