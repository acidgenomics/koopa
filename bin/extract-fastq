#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"

# Extract FASTQs files inside a TAR file.
# Updated 2019-06-23.

file="$1"
if [[ ! -f "$file" ]]
then
    >&2 printf "Error: %s tar file does not exist.\n" "$file"
    exit 1
fi
tar -xvf "$file" --wildcards "*.fastq.*"
