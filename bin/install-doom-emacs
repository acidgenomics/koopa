#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"



# Variables                                                                 {{{1
# ==============================================================================

name="doom"
repo="https://github.com/hlissner/doom-emacs"
emacs_home="${HOME}/.emacs.d"
install_dir="${emacs_home}-${name}"
exe_file="${install_dir}/bin/doom"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)

Install Doom Emacs.

$(_koopa_help_args)

details:
    Installs into '${install_dir}'.
    Links into '${emacs_home}'.

note:
    Bash script.
    Updated 2019-09-20.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

_koopa_assert_is_not_dir "$install_dir"
git clone "$repo" "$install_dir"
link-emacs "$name"

"${exe_file}" quickstart
"${exe_file}" refresh
"${exe_file}" doctor
