#!/usr/bin/env bash

## shellcheck source=/dev/null
source "$(koopa header bash)"

## Install Doom Emacs.
## Updated 2019-06-23.

if [[ -d ".emacs.d" ]]
then
    >&2 printf "Error: '.emacs.d/' directory exists.\n"
    exit 1
fi

git clone https://github.com/hlissner/doom-emacs ~/.emacs.d
~/.emacs.d/bin/doom quickstart
