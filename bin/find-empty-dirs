#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"

_koopa_help "$@"



# Arguments                                                                 {{{1
# ==============================================================================

dir="${1:-"."}"



# Script                                                                    {{{1
# ==============================================================================

find "$dir" \
    -mindepth 1 \
    -type d \
    -not -path "*/.git/*" \
    -empty \
    -print \
    | sort
