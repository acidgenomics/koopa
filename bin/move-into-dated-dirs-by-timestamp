#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)
    files...

Move files into dated subdirectories by timestamp.

required positional arguments:
    ... File paths.
        Assuming we're matching inside current working directory.

$(_koopa_help_args)

note:
    Bash script.
    Updated 2019-10-23.
EOF
}

_koopa_assert_has_args "$@"
_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

for file in "$@"
do
    mod_time="$(stat -f "%m" "$file")"
    target_dir="$(date -j -f "%s" "$mod_time" +"%Y/%m/%d")"
    [[ ! -d "$target_dir" ]] && mkdir -pv "$target_dir"
    target_file="${target_dir}/$(basename "$file")"
    mv -v "$file" "$target_file"
done
