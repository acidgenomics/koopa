#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
move-into-dated-dirs-by-timestamp [--help|-h] files ...

Move files into dated subdirectories by timestamp.

required positional arguments:
    ... File paths.
        Assuming we're matching inside current working directory.

optional arguments:
    --help, -h
        Show this help message and exit.

note:
    Bash script.
    Updated 2019-07-28.
EOF
}



# Script                                                                    {{{1
# ==============================================================================

if [[ -z "${1:-}" ]]
then
    >&2 printf "Error: No files were specified.\n"
    exit 1
fi

for file in "$@"
do
    mod_time="$(stat -f "%m" "$file")"
    target_dir="$(date -j -f "%s" "$mod_time" +"%Y/%m/%d")"
    [[ ! -d "$target_dir" ]] && mkdir -pv "$target_dir"
    target_file="${target_dir}/$(basename "$file")"
    mv -v "$file" "$target_file"
done
