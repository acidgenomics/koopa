#!/usr/bin/env bash
set -Eeu -o pipefail

KOOPA_PREFIX="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_PREFIX}/shell/bash/include/header.sh"

_koopa_assert_has_no_args "$@"

name="ChromHMM"
prefix="$(_koopa_app_prefix)/$(_koopa_lowercase "$name")"
tmp_dir="$(_koopa_tmp_dir)"

_koopa_h1 "Installing ${name} at '${prefix}'."

(
    _koopa_cd_tmp_dir "$tmp_dir"
    file="${name}.zip"
    _koopa_download "http://compbio.mit.edu/${name}/${file}"
    _koopa_extract "$file"
    mv -v "$name" "$prefix"
) 2>&1 | tee "$(_koopa_tmp_log_file)"

rm -fr "$tmp_dir"

_koopa_set_permissions --recursive "$prefix"

_koopa_install_success "$name"
