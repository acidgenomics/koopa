#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"



# Variables                                                                 {{{1
# ==============================================================================

prefix="$(_koopa_build_prefix)"
tmp_dir="$(_koopa_tmp_dir)"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)

Install ChromHMM.

details:
    Installs into '${prefix}/ChromHMM/'.
    Alternatively, can install via conda instead.

$(_koopa_help_args)

note:
    Bash script.
    Updated 2019-09-25.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

(
    mkdir -p "$tmp_dir"
    cd "$tmp_dir" || exit 1
    wget "http://compbio.mit.edu/ChromHMM/ChromHMM.zip"
    unzip "ChromHMM.zip"
    mv -v "ChromHMM" "${prefix}/."
    rm -fr "$tmp_dir"
)

_koopa_build_chgrp "$prefix"

printf "Path: %s\n" "${prefix}/ChromHMM/ChromHMM.jar"
