#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"

_koopa_help "$@"
_koopa_assert_has_no_args "$@"



# Variables                                                                 {{{1
# ==============================================================================

prefix="$(_koopa_build_prefix)"
tmp_dir="$(_koopa_tmp_dir)"



# Script                                                                    {{{1
# ==============================================================================

_koopa_message "Installing ChromHMM."

(
    mkdir -p "$tmp_dir"
    cd "$tmp_dir" || exit 1
    wget "http://compbio.mit.edu/ChromHMM/ChromHMM.zip"
    unzip "ChromHMM.zip"
    mv -v "ChromHMM" "${prefix}/."
    rm -fr "$tmp_dir"
)

_koopa_set_permissions "$prefix"

_koopa_message "Path: '${prefix}/ChromHMM/ChromHMM.jar'"
