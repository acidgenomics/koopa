#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"
_acid_assert_has_no_args "$@"

prefix="$(_acid_build_prefix)"
tmp_dir="$(_acid_tmp_dir)"

_acid_message "Installing ChromHMM."

(
    mkdir -p "$tmp_dir"
    cd "$tmp_dir" || exit 1
    file="ChromHMM.zip"
    _acid_download "http://compbio.mit.edu/ChromHMM/${file}"
    _acid_extract "$file"
    mv -v "ChromHMM" "${prefix}/."
    rm -fr "$tmp_dir"
)

_acid_set_permissions "$prefix"

_acid_message "Path: '${prefix}/ChromHMM/ChromHMM.jar'"
