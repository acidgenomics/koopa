#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"



# Variables                                                                 {{{1
# ==============================================================================

prefix="$(_koopa_build_prefix)"
tmp_dir="$(_koopa_tmp_dir)"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)

Install ChromHMM.

details:
    Installs into '${prefix}/ChromHMM/'.
    Alternatively, can install via conda instead.

$(_koopa_help_args)

note:
    Bash script.
    Updated 2019-09-25.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

(
    mkdir -p "$tmp_dir"
    cd "$tmp_dir" || exit 1
    wget "http://compbio.mit.edu/ChromHMM/ChromHMM.zip"
    unzip "ChromHMM.zip"
    mv -v "ChromHMM" "${prefix}/."
    rm -fr "$tmp_dir"
)

_koopa_prefix_chgrp "$prefix"

printf "Path: %s\n" "${prefix}/ChromHMM/ChromHMM.jar"
