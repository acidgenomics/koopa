#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
usage: install-chromhmm [--help|-h]

Install ChromHMM.

details:
    Installs into build prefix (e.g. '/usr/local/ChromHMM/').

optional arguments:
    --help, -h
        Show this help message and exit.

note:
    Updated 2019-09-09.
EOF
}



# Parse arguments                                                           {{{1
# ==============================================================================

case "${1:-}" in
    "")
        ;;
    --help|-h)
        usage
        exit
        ;;
    *)
        >&2 printf "Error: Unsupported argument: '%s'\n" "$1"
        exit 1
        ;;
esac



# Script                                                                    {{{1
# ==============================================================================

tmp_dir="$(_koopa_tmp_dir)"
prefix="$(_koopa_build_prefix)"

(
    mkdir -p "$tmp_dir"
    cd "$tmp_dir" || exit 1
    wget "http://compbio.mit.edu/ChromHMM/ChromHMM.zip"
    unzip "ChromHMM.zip"
    mv -v "ChromHMM" "${prefix}/."
    rm -fr "$tmp_dir"
)

_koopa_build_chgrp "$prefix"

printf "Path: %s\n" "${prefix}/ChromHMM/ChromHMM.jar"
