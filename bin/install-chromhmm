#!/usr/bin/env bash
set -Eeu -o pipefail

KOOPA_PREFIX="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_PREFIX}/shell/bash/include/header.sh"

_koopa_assert_has_no_args "$@"

prefix="$(_koopa_app_prefix)/chromhmm"
tmp_dir="$(_koopa_tmp_dir)"

_koopa_h1 "Installing ChromHMM at '${prefix}'."

(
    _koopa_cd_tmp_dir "$tmp_dir"
    file="ChromHMM.zip"
    _koopa_download "http://compbio.mit.edu/ChromHMM/${file}"
    _koopa_extract "$file"
    mv -v "ChromHMM" "$prefix"
) 2>&1 | tee "$(_koopa_tmp_log_file)"

rm -fr "$tmp_dir"

_koopa_set_permissions --recursive "$prefix"

_koopa_success "Installation of ChromHMM was successful."
