#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
usage: delete-file-system-cruft [--help|-h] [DIR]

Delete file system cruft.

details:
    Recursively deletes these invisible files:
    - .DS_Store
    - Thumbs.db*

optional positional arguments:
    1.  Directory path.
        Defaults to '.'.

optional arguments:
    --help, -h
        Show this help message and exit.

note:
    Bash script.
    Updated 2019-09-20.

examples:
    delete-file-system-cruft .
EOF
}



# Parse arguments                                                           {{{1
# ==============================================================================

case "${1:-}" in
    --help|-h)
        usage
        exit
        ;;
esac

path="${1:-.}"



# Script                                                                    {{{1
# ==============================================================================

find "$path" \
    -type f \
    \( -name ".DS_Store" -o \
        -name "Thumbs.db*" \) \
    -delete \
    -print
