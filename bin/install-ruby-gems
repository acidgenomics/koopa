#!/usr/bin/env bash

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" &>/dev/null && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../shell/bash/include/header.sh"

# """
# Cargo documentation:
# https://doc.rust-lang.org/cargo/
#
# install-update now supported:
# - https://stackoverflow.com/questions/34484361
# - https://github.com/rust-lang/cargo/pull/6798
# - https://github.com/rust-lang/cargo/pull/7560
# """

_koopa_assert_has_no_envs
_koopa_exit_if_not_installed gem rbenv

name_fancy="Ruby gems"
gem_exe="$(rbenv which gem)"

_koopa_install_start "$name_fancy"
_koopa_dl "gem" "$gem_exe"

if [[ "$#" -eq 0 ]]
then
    gems=(
        bashcov
        ronn
    )
else
    gems=("$@")
fi

_koopa_dl "Gems" "$(_koopa_to_string "${gems[@]}")"

for gem in "${gems[@]}"
do
    gem install "$gem"
done

rbenv rehash

_koopa_install_success "$name_fancy"
