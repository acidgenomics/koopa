#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"



# Variables                                                                 {{{1
# ==============================================================================

env_name="reticulate"
env_base_dir="${HOME}/.virtualenvs"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)
    [name="${env_name}"] [dir="${env_base_dir}"]

Install reticulate Python virtual environment.

required positional arguments with defaults:
    1.  Environment name.
        Defaults to '${env_name}'.
    2.  Virtual environment base directory.
        Defaults to '${env_base_dir}'.

$(_koopa_help_args)

details:
    Also installs louvain and umap-learn packages.

note:
    Bash script.
    Updated 2019-09-25.
EOF
}

_koopa_help "$@"



# Arguments                                                                 {{{1
# ==============================================================================

env_name="${1:-$env_name}"
env_base_dir="${2:-$env_base_dir}"



# Script                                                                    {{{1
# ==============================================================================

_koopa_assert_is_installed python3 python

env_dir="${env_base_dir}/${env_name}"
rm -frv "$env_dir"

python3 -m venv "$env_dir"

# shellcheck source=/dev/null
source "${env_dir}/bin/activate"

pip install --upgrade pip
pip install louvain umap-learn
