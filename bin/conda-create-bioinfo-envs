#!/usr/bin/env bash
set -Eeu -o pipefail

KOOPA_PREFIX="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_PREFIX}/shell/bash/include/header.sh"
_koopa_assert_has_no_args "$@"
_koopa_assert_is_installed "conda"

# Add bwa-mem2 when it is released.
#
# outdated:
# - chromhmm needs to be updated to v1.19.
#
# missing:
# - genrich
#
# variation:
# - peddy
#
# methylation:
# - bismark
#
# > conda-create-env pandoc
# > conda-create-env texlive-core
# > conda-create-env wgsim

conda-create-env arriba                     # fusion
conda-create-env bamtools                   # base
conda-create-env bedtools                   # base
conda-create-env bioawk                     # base
conda-create-env biobambam                  # base
conda-create-env bowtie2                    # aligners
conda-create-env bwa                        # aligners
conda-create-env chromhmm                   # chip-seq
conda-create-env cromwell                   # workflows
conda-create-env deeptools                  # chip-seq
conda-create-env entrez-direct              # tools
conda-create-env ericscript                 # fusion
conda-create-env fastqc                     # qc
conda-create-env fgbio                      # workflows
conda-create-env gatk4                      # workflows
conda-create-env gffutils                   # tools
conda-create-env hisat2                     # aligners
conda-create-env homer                      # chip-seq
conda-create-env htslib                     # base
conda-create-env igvtools                   # tools
conda-create-env jupyter                    # tools
conda-create-env kallisto                   # aligners
conda-create-env kraken                     # qc
conda-create-env macs2                      # chip-seq
conda-create-env minimap2                   # aligners
conda-create-env multiqc                    # qc
conda-create-env nextflow                   # workflows
conda-create-env oncofuse                   # fusion
conda-create-env picard                     # qc
conda-create-env pizzly                     # fusion
conda-create-env qualimap                   # qc
conda-create-env rapmap                     # aligners
conda-create-env rsem                       # aligners
conda-create-env salmon                     # aligners
conda-create-env samblaster                 # base
conda-create-env samtools                   # base
conda-create-env seqtk                      # base
conda-create-env snakemake                  # workflows
conda-create-env squid                      # variation
conda-create-env sra-tools                  # tools
conda-create-env star                       # aligners
conda-create-env star-fusion                # fusion
conda-create-env vardict                    # variation

conda env list
