#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
usage: move-files-up-1-level [--help|-h]

Move files (but not directories) up 1 directory level.

optional arguments:
    --help, -h
        Show this help message and exit.

note:
    Bash script.
    Updated 2019-06-23.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

find . -type f -mindepth 2 -exec mv {} . \;
find . -mindepth 2
find . -type d -delete
