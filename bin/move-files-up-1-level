#!/usr/bin/env bash
set -Eeu -o pipefail

KOOPA_PREFIX="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_PREFIX}/shell/bash/include/header.sh"

dir="${1:-"."}"

(
    cd "$dir" || exit 1
    find . -type f -mindepth 2 -exec mv {} . \;
    find . -mindepth 2
    find . -type d -delete -print
)
