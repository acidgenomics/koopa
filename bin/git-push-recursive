#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
git-push-recursive [--help|-h] [dir="."]

Push all repositories recursively.

optional positional arguments:
    1.  Directory path.
        Defaults to current working directory.

optional arguments:
    --help, -h
        Show this help message and exit.

note:
    Bash script.
    Updated 2019-06-25.
EOF
}



# Parse arguments                                                           {{{1
# ==============================================================================

case "${1:-}" in
    "")
        ;;
    --help|-h)
        usage
        exit
        ;;
    *)
        >&2 printf "Error: Unsupported argument: '%s'\n" "$1"
        exit 1
        ;;
esac

dir="${1:-.}"



# Script                                                                    {{{1
# ==============================================================================

# SC2044: For loops over find output are fragile.
# Using `-L` flag here in case git dir is a symlink.
while IFS= read -r -d '' repo
do
    repo="$(dirname "$repo")"
    (
        cd "$repo" || exit 1
        pwd
        git push
    )
done <   <(find -L "$dir" -maxdepth 2 -type d -name ".git" -print0)
