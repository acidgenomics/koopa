#!/usr/bin/env python3

import argparse
import os
import sys
import textwrap

sys.path.insert(0, os.getenv("KOOPA_HOME"))
import pykoopa
from pykoopa.genome import gencode_version
from pykoopa.syntactic import kebab_case
from pykoopa.sys import eprint, wget


# Usage                                                                     {{{1
# ==============================================================================

description = "Download GENCODE genome."
epilog = """
details:
    Creates a new directory in the current working directory.
    Only Homo sapiens and Mus musculus genomes are supported.
    The legacy Homo sapiens GRCh37 (hg19) genome build is supported.

    See also:
    - https://www.gencodegenes.org/
    - https://www.gencodegenes.org/pages/faq.html
    - https://www.gencodegenes.org/human/release_32lift37.html
    - https://github.com/diekhans/gencode-backmap
    - tximeta Bioconductor package.

note:
    Python script.
    Updated 2019-10-05.
"""


# Arguments                                                                 {{{1
# ==============================================================================

parser = argparse.ArgumentParser(
    description=description,
    epilog=epilog,
    formatter_class=argparse.RawTextHelpFormatter,
)
optional = parser._action_groups.pop()
required = parser.add_argument_group("required arguments")
required.add_argument(
    "--organism",
    required=True,
    type=str,
    help="latin name (e.g. 'Homo sapiens')",
)
optional.add_argument(
    "--type",
    default="all",
    const="all",
    nargs="?",
    choices=["all", "genome", "transcriptome", "none"],
    help=textwrap.dedent(
        """\
        'all': download all reference types
        'genome': primary assembly (DNA)
        'transcriptome': transcripts (cDNA/RNA)
        'none': skip download
    """
    ),
)
optional.add_argument(
    "--annotation",
    default="all",
    const="all",
    nargs="?",
    choices=["all", "gtf", "gff", "none"],
    help=textwrap.dedent(
        """\
        'all': download all annotation formats
        'gtf': GTF (GFFv2)
        'gff': GFF3
        'none': skip download
    """
    ),
)
optional.add_argument("--build", type=str, help="genome build (e.g. 'GRCh38')")
optional.add_argument("--release", type=str, help="release version (e.g. '32')")
optional.add_argument(
    "--decompress",
    action="store_true",
    help="decompress, but keep the compressed file",
)
parser._action_groups.append(optional)
if len(sys.argv) == 1:
    parser.print_help(sys.stderr)
    sys.exit(1)
args = parser.parse_args()

annotation = args.annotation
build = args.build
decompress = args.decompress
organism = args.organism
release = args.release
type = args.type

if type == "none" and annotation == "none":
    eprint("Error: 'type' or 'annotation' are required.")


# Script                                                                    {{{1
# ==============================================================================

if organism == "Homo sapiens":
    organism_short = "human"
    if build is None:
        build = "GRCh38"
elif organism == "Mus musculus":
    organism_short = "mouse"
    if not build is None:
        eprint("Error: 'build' is only supported for Homo sapiens.")
    build = "GRCm38"

if release is None:
    release = gencode_version(organism=organism)

base_url = (
    "ftp://ftp.ebi.ac.uk/pub/databases/gencode/"
    + "Gencode_"
    + organism_short
    + "/release_"
    + release
    + "/"
)
output_dir = kebab_case(
    organism + " " + build + " " + "gencode" + " " + release
)

if build == "GRCh37":
    base_url = base_url + "GRCh37_mapping/"
    transcriptome_fasta_url = (
        base_url + "gencode.v" + release + "lift37.transcripts.fa.gz"
    )
    gtf_url = base_url + "gencode.v" + release + "lift37.annotation.gtf.gz"
    gff_url = base_url + "gencode.v" + release + "lift37.annotation.gff3.gz"
    readme_url = base_url + "_README_GRCh37_mapping.txt"
else:
    transcriptome_fasta_url = (
        base_url + "gencode.v" + release + ".transcripts.fa.gz"
    )
    gtf_url = base_url + "gencode.v" + release + ".annotation.gtf.gz"
    gff_url = base_url + "gencode.v" + release + ".annotation.gff3.gz"
    readme_url = base_url + "_README.TXT"

genome_fasta_url = base_url + build + ".primary_assembly.genome.fa.gz"
md5sums_url = base_url + "MD5SUMS"


def download_genome(genome_fasta_url, output_dir):
    output_dir = os.path.join(output_dir, "genome-fasta")
    wget(url=genome_fasta_url, output_dir=output_dir)


def download_transcriptome(transcriptome_fasta_url, output_dir):
    output_dir = os.path.join(output_dir, "transcriptome-fasta")
    wget(url=transcriptome_fasta_url, output_dir=output_dir)


def download_gtf(gtf_url, output_dir):
    output_dir = os.path.join(output_dir, "gtf")
    wget(url=gtf_url, output_dir=output_dir)


def download_gff(gff_url, output_dir):
    output_dir = os.path.join(output_dir, "gff")
    wget(url=gff_url, output_dir=output_dir)


wget(url=readme_url, output_dir=output_dir)
wget(url=md5sums_url, output_dir=output_dir)

if type == "genome":
    download_genome(genome_fasta_url=genome_fasta_url, output_dir=output_dir)
elif type == "transcriptome":
    download_transcriptome(
        transcriptome_fasta_url=transcriptome_fasta_url, output_dir=output_dir
    )
elif type == "all":
    download_genome(genome_fasta_url=genome_fasta_url, output_dir=output_dir)
    download_transcriptome(
        transcriptome_fasta_url=transcriptome_fasta_url, output_dir=output_dir
    )

if annotation == "gtf":
    download_gtf(gtf_url=gtf_url, output_dir=output_dir)
elif annotation == "gff":
    download_gff(gff_url=gff_url, output_dir=output_dir)
elif annotation == "all":
    download_gtf(gtf_url=gtf_url, output_dir=output_dir)
    download_gff(gff_url=gff_url, output_dir=output_dir)

print("Genome downloaded successfully to '" + output_dir + "'.")
