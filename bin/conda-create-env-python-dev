#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)

Create Python development conda environment.

$(_koopa_help_args)

details:
    IDE:
    - Jupyter Notebook
    - Visual Studio Code
    - Spyder
    - PyCharm

    Code formatting:
    - black
      https://pypi.org/project/black/
    - flake8
      http://flake8.pycqa.org/

    Unit testing:
    - pytest
      http://pytest.org/

see also:
    conda env list

note:
    Bash script.
    Updated 2019-09-23.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

_koopa_assert_is_installed conda

conda create -qy --name="python-dev" \
    black \
    flake8 \
    jupyter \
    pyflakes \
    pytest \
    pytest-flake8 \
    spyder

