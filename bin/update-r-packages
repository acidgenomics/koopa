#!/usr/bin/env Rscript

options(
    "error" = quote(quit(status = 1L)),
    "warning" = quote(quit(status = 1L))
)

args <- commandArgs(trailingOnly = FALSE)
whichFile <- grep(pattern = "--file", x = args)
file <- args[whichFile]
file <- sub(pattern = "^--file=", replacement = "", x = file)
koopaPrefix <- normalizePath(dirname(dirname(file)))
source(file.path(koopaPrefix, "lang", "r", "include", "header.R"))

removePkgs <- intersect(
    x = c(
        "Matrix.utils",
        "bioverbs",
        "brio"
    ),
    y = rownames(installed.packages())
)

if (length(removePkgs) > 0L) {
    message("Removing packages: ", toString(removePkgs))
    remove.packages(pkgs = removePkgs)
}

stopifnot(requireNamespace("bb8", quietly = TRUE))
bb8::updatePackages()
