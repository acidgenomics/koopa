#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)

Update R package library.

$(_koopa_help_args)

details:
    Calls 'bb8::updatePackages()' to auto-update the current library.
    
see also:
    .libPaths()

note:
    Bash script.
    Updated 2019-10-20.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

if ! _koopa_is_r_package_installed bb8
then
    >&2 printf "Warning: bb8 R package is not installed.\n"
    exit 0
fi

echo "Updating R package library."
Rscript -e 'bb8::updatePackages()'
