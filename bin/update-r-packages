#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"

_acid_assert_has_no_args "$@"

if ! _acid_is_r_package_installed bb8
then
    _acid_warning "bb8 R package is not installed."
    exit 0
fi

_acid_message "Updating R package library."
Rscript -e 'bb8::updatePackages()'
