#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
usage: ip-address [--help|-h]

IP address.

optional arguments:
    --help, -h
        Show this help message and exit.

note:
    Bash script.
    Updated 2019-06-23.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

if _koopa_is_darwin
then
    printf "en0: %s\n" "$(ipconfig getifaddr en0)"
    printf "en1: %s\n" "$(ipconfig getifaddr en1)"
    printf "en2: %s\n" "$(ipconfig getifaddr en2)"
else
    hostname -I | awk '{print $1}'
fi
