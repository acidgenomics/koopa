#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)

IP address.

$(_koopa_help_args)

details:
    For macOS, multiple values may return, representing wired and wireless IPs.

see also:
    - https://apple.stackexchange.com/questions/20547

    Alternate approach for macOS:
    > ipconfig getifaddr en0

note:
    Bash script.
    Updated 2019-10-23.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

if _koopa_is_darwin
then
    ifconfig | grep "inet " | grep "broadcast" | awk '{print $2}' | sort
else
    hostname -I | awk '{print $1}'
fi
