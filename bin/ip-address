#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"

_koopa_help "$@"
_koopa_assert_has_no_args "$@"

if _koopa_is_darwin
then
    ifconfig \
    | grep "inet " \
    | grep "broadcast" \
    | awk '{print $2}' \
    | sort
else
    hostname -I | awk '{print $1}'
fi
