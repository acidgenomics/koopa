#!/usr/bin/env bash
set -Eeu -o pipefail

KOOPA_PREFIX="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_PREFIX}/shell/bash/include/header.sh"

type="public"

while (("$#"))
do
    case "$1" in
        --local)
            type="local"
            shift 1
            ;;
        --public)
            type="public"
            shift 1
            ;;
        *)
            _koopa_invalid_arg "$1"
            ;;
    esac
done

case "$type" in
    local)
        _koopa_local_ip_address
        ;;
    public)
        _koopa_public_ip_address
        ;;
esac
