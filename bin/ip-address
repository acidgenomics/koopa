#!/usr/bin/env bash
set -Eeu -o pipefail

KOOPA_PREFIX="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_PREFIX}/shell/bash/include/header.sh"

_koopa_assert_has_no_args "$@"

if _koopa_is_macos
then
    ifconfig \
    | grep "inet " \
    | grep "broadcast" \
    | awk '{print $2}' \
    | sort
else
    hostname -I | awk '{print $1}'
fi
