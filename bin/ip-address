#!/usr/bin/env bash

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" &>/dev/null && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../shell/bash/include/header.sh"

koopa::ip_address() {
    # """
    # IP address.
    # @note Updated 2020-07-10.
    # """
    type='public'
    while (("$#"))
    do
        case "$1" in
            --local)
                type='local'
                shift 1
                ;;
            --public)
                type="public"
                shift 1
                ;;
            *)
                koopa::invalid_arg "$1"
                ;;
        esac
    done
    case "$type" in
        local)
            koopa::local_ip_address
            ;;
        public)
            koopa::public_ip_address
            ;;
    esac
    return 0
}

koopa::ip_address "$@"
