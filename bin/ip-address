#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)

IP address.

$(_koopa_help_args)

note:
    Bash script.
    Updated 2019-06-23.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

if _koopa_is_darwin
then
    printf "en0: %s\n" "$(ipconfig getifaddr en0)"
    printf "en1: %s\n" "$(ipconfig getifaddr en1)"
    printf "en2: %s\n" "$(ipconfig getifaddr en2)"
else
    hostname -I | awk '{print $1}'
fi
