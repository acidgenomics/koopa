#!/usr/bin/env bash
set -Eeu -o pipefail

KOOPA_PREFIX="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_PREFIX}/shell/bash/include/header.sh"

_koopa_assert_has_args "$@"
_koopa_assert_is_installed esearch efetch

id="$1"
file="${2:-"SraAccList.txt"}"

_koopa_message "Downloading SRA '${id}' to '${file}'."

esearch -db sra -q "$id" \
    | efetch -format runinfo \
    | sed 1d \
    | cut -d ',' -f 1 \
    > "$file"
