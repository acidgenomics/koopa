#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"

trash_dir="${HOME}/.Trash/"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)
    files...

Move files to the trash folder instead of deleting.

required positional arguments:
    ... File paths to trash.

$(_koopa_help_args)

details:
    Moves files to '${trash_dir}'.

note:
    Bash script.
    Updated 2019-06-23.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

mkdir -pv "$trash_dir"
mv -v "$@" "$trash_dir"
