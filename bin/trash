#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"

_koopa_help "$@"
_koopa_assert_has_args "$@"



# Variables                                                                 {{{1
# ==============================================================================

trash_dir="${HOME}/.trash/"



# Script                                                                    {{{1
# ==============================================================================

mkdir -pv "$trash_dir"
mv -v "$@" "$trash_dir"
