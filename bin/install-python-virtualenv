#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(_koopa_header bash)"

# Set up python virtual environment.
# Updated 2019-06-23.

_koopa_assert_has_no_environments
_koopa_assert_is_installed python

env_base_dir="${HOME}/.virtualenvs"
env_name="${1:-default}"
env_dir="${env_base_dir}/${env_name}"
rm -rf "$env_dir"

# Python 2 method (deprecated)
# > virtualenv "$env_dir" --system-site-packages

python3 -m venv "$env_dir"

printf "Python %s environment installed successfully.\n" "$env_name"
printf "Source the 'activate' binary:\n%s\n" "${env_dir}/bin/activate"
