#!/usr/bin/env bash
set -Eeu -o pipefail

# FIXME Need to make this simpler and rework.

# Handle situation where 'koopa' is symlinked into '/usr/local'.
bash_source="${BASH_SOURCE[0]}"
if [[ -L "$bash_source" ]]
then
    koopa::realpath() { # {{{1
        if [[ "$(uname -s)" == 'Darwin' ]]
        then
            # FIXME Take this out and make simpler...
            perl -MCwd -e 'print Cwd::abs_path shift' "$1"
        else
            readlink -f "$@"
        fi
    }
    bash_source="$(koopa::realpath "$bash_source")"
fi

# shellcheck source=/dev/null
KOOPA_ACTIVATE=0 \
    . "$(dirname "$bash_source")/../lang/shell/bash/include/header.sh"

koopa::koopa "$@"
