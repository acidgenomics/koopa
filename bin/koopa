#!/usr/bin/env bash

if [[ -z "${KOOPA_HOME:-}" ]]
then
    KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
        >/dev/null 2>&1 && pwd -P)"
    # shellcheck source=/dev/null
    force=1 minimal=1 . "${KOOPA_HOME}/activate"
fi

# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"

_koopa_help "$@"
_koopa_assert_has_args "$@"

version="$(_koopa_variable koopa)"
date="$(_koopa_variable koopa_date)"
include_dir="${KOOPA_HOME}/system/include/koopa"

case "$1" in
    --help|-h)
        usage
        exit 0
        ;;
    --version|-V)
        echo "koopa ${version} (${date})"
        exit 0
        ;;
    check)
        Rscript --vanilla "${include_dir}/check.R"
        exit 0
        ;;
    header)
        _koopa_header "${2:-}"
        exit 0
        ;;
    home)
        _koopa_home
        exit 0
        ;;
    host-type)
        _koopa_host_type
        exit 0
        ;;
    info)
        "${include_dir}/info.sh"
        exit 0
        ;;
    list)
        Rscript --vanilla "${include_dir}/list.R"
        exit 0
        ;;
    os-type)
        _koopa_os_type
        exit 0
        ;;
    update)
        "${include_dir}/update.sh"
        exit 0
        ;;
    upgrade)
        _koopa_stop "Use 'update' instead of 'upgrade'."
        ;;
    variable)
        _koopa_variable "$2"
        exit 0
        ;;
    *)
        _koopa_invalid_arg "$1"
        ;;
esac
