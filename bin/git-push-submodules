#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"

dir="."



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
usage: git-push-submodules [--help|-h] [dir="${dir}"]

Update and commit submodules.

optional positional arguments:
    1.  Directory path.
        Defaults to '${dir}'.

note:
    Bash script.
    Updated 2019-09-23.
EOF
}



# Arguments                                                                 {{{1
# ==============================================================================

dir="${1:-.}"



# Script                                                                    {{{1
# ==============================================================================

(
    cd "$dir" || exit 1
    git submodule update --remote --merge
    git commit -m "Update submodules."
    git push
)

