#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"



# Variables                                                                 {{{1
# ==============================================================================

dir="."



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)
    [dir="${dir}"]

Update and commit submodules.

required positional arguments with defaults:
    1.  Directory path.
        Defaults to '${dir}'.

$(_koopa_help_args)

note:
    Bash script.
    Updated 2019-09-23.
EOF
}

_koopa_help "$@"



# Arguments                                                                 {{{1
# ==============================================================================

dir="${1:-$dir}"



# Script                                                                    {{{1
# ==============================================================================

(
    cd "$dir" || exit 1
    git submodule update --remote --merge
    git commit -m "Update submodules."
    git push
)

