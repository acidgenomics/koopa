#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
usage: move-into-dated-dirs-by-filename [--help|-h] files ...

Move files into dated subdirectories by file name.

required positional arguments:
    ... File paths.
        Assuming we're matching inside current working directory.

optional arguments:
    --help, -h
        Show this help message and exit.

details:
    Useful for organizing photos, scans, and videos.

examples:
    - 20190101_010101_0001.mov
    - 2019-01-01-01-01-01.pdf

see also:
    https://unix.stackexchange.com/questions/9496

note:
    Bash script.
    Updated 2019-07-28.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

if [[ -z "${1:-}" ]]
then
    >&2 printf "Error: No files were specified.\n"
    exit 1
fi

grep_array=(
    '([0-9]{4})'
    '([-_])?'
    '([0-9]{2})'
    '([-_])?'
    '([0-9]{2})'
    '([-_])?'
    '([0-9]{2})'
    '([-_])?'
    '([0-9]{2})'
    '([-_])?'
    '([0-9]{2})'
    '\..+$'
)
grep_string="$(printf %s "${grep_array[@]}" $'\n')"

for file in "$@"
do
    if [[ "$file" =~ $grep_string ]]
    then
        year="${BASH_REMATCH[1]}"
        month="${BASH_REMATCH[3]}"
        day="${BASH_REMATCH[5]}"
        subdir="${year}/${month}/${day}"
        mkdir -pv "$subdir"
        mv -iv "$file" "$subdir"
    else
        printf "Error: '%s' file does not contain date in name.\n" "$file"
        printf "grep string: '%s'\n" "$grep_string"
        exit 1
    fi
done
