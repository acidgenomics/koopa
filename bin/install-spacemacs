#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
usage: install-spacemacs [--help|-h]

Install spacemacs.

optional arguments:
    --help, -h
        Show this help message and exit.

note:
    Bash script.
    Updated 2019-09-20.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

name="spacemacs"
repo="https://github.com/syl20bnr/spacemacs.git"

emacs_home="${HOME}/.emacs.d"
install_dir="${emacs_home}-${name}"

_koopa_assert_is_non_existing "$install_dir"

git clone "$repo" "$install_dir"
link-emacs "$name"

emacs --no-window-system

