#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"

# Install spacemacs.
# Updated 2019-09-19.

install_dir="${HOME}/.emacs.d"

if [[ -d "$install_dir" ]]
then
    >&2 printf "Error: Directory exists: '%s'.\n" "$install_dir"
    exit 1
fi

git clone https://github.com/syl20bnr/spacemacs.git "$install_dir"
emacs --no-window-system
