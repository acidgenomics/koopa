#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"
_acid_assert_has_args "$@"
_acid_assert_is_installed "vim"

vim \
    -c "set expandtab tabstop=4 shiftwidth=4" \
    -c :%retab \
    -c :wq -E -s "$1"
