#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
usage: ffmpeg-flac-to-alac [--help|-h]

Transcode FLAC files to ALAC (Apple Lossless).

optional arguments:
    --help, -h
        Show this help message and exit.

details:
    Looks for FLAC files in current working directory and transcodes to FLAC.
    Calls ffmpeg internally.

note:
    Bash script.
    Updated 2019-09-21.

see also:
    - https://stackoverflow.com/questions/55429909
    - https://ffmpeg.zeranoe.com/forum/viewtopic.php?f=5&t=5955
    - https://unix.stackexchange.com/questions/415477
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

_koopa_assert_is_installed ffmpeg

for file in *.flac
do
    ffmpeg \
        -nostdin \
        -i "$file" \
        -acodec alac \
        -c:a alac \
        -c:v copy \
        "${file%.*}.m4a"
done
