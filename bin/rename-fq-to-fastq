#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"

dir="."



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
usage: rename-fq-to-fastq [--help|-h] [dir=${dir}].

Rename FASTQ ".fq" extension to ".fastq".

optional positional arguments:
    1.  Directory path.
        Defaults to '${dir}'.

optional arguments:
    --help, -h
        Show this help message and exit.

note:
    Bash script.
    Updated 2019-06-23.
EOF
}

_koopa_help "$@"



# Arguments                                                                 {{{1
# ==============================================================================

dir="${1:-$dir}"
dir="$(_koopa_strip_trailing_slash "$dir")"



# Script                                                                    {{{1
# ==============================================================================

for file in "${dir}/"*".fq"
do
    mv -v "$file" "${file/%.fq/.fastq}"
done
