#!/usr/bin/env bash
set -Eeuxo pipefail

# Bash
# https://www.gnu.org/software/bash/

prefix="$KOOPA_PREFIX"
build_name="$KOOPA_OS_BUILD_STRING"
build_dir="${KOOPA_TMP}/build/bash"

version="5.0"

echo "Installing bash ${version}."

# Run preflight initialization checks.
script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd)"
# shellcheck source=/dev/null
. "${script_dir}/__init__.sh"

# Install build dependencies
sudo yum-builddep -y bash

# SC2103: Use a ( subshell ) to avoid having to cd back.
(
    rm -rf "$build_dir"
    mkdir -p "$build_dir"
    cd "$build_dir"
    wget http://ftpmirror.gnu.org/bash/bash-${version}.tar.gz
    tar -xzvf "bash-${version}.tar.gz"
    cd "bash-${version}"
    ./configure \
        --build="$build_name" \
        --prefix="$prefix"
    make
    make test
    sudo make install
    rm -rf "$build_dir"
)

echo "bash installed successfully."
command -v bash
bash --version

if grep -qv "${prefix}/bin/bash" /etc/shells
then
    echo "Updating /etc/shells."
    sudo bash -c "echo ${prefix}/bin/bash >> /etc/shells"
fi

echo "Updating default shell."
sudo chsh -s "${prefix}/bin/bash" "$USER"


