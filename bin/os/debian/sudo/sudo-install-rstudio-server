#!/usr/bin/env bash
set -Eeu -o pipefail

# Install RStudio Server.
# https://www.rstudio.com/products/rstudio/download-server/

# shellcheck source=/dev/null
source "${KOOPA_DIR}/include/os/debian/sudo.sh"

build_dir="${KOOPA_TMP_DIR}/build/rstudio-server"

version="$(koopa_version rstudio-server)"

echo "Installing RStudio Server ${version}."

# R is already configured by Bioconductor.
# sudo -n apt-get -y install r-base

# Ubuntu 18+ instructions.
sudo -n apt-get -y install gdebi-core
(
    rm -rf "$build_dir"
    mkdir -p "$build_dir"
    cd "$build_dir"
    wget "https://download2.rstudio.org/server/bionic/amd64/rstudio-server-${version}-amd64.deb"
    sudo -n gdebi --non-interactive "rstudio-server-${version}-amd64.deb"
    rm -rf "$build_dir"
)

echo "rstudio-server installed successfully."
command -v rstudio-server
rstudio-server version
rstudio-server status
