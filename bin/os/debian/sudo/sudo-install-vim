#!/usr/bin/env bash
set -Eeu -o pipefail

# Install Vim.
# Modified 2019-06-18.

# See also:
# - https://github.com/vim/vim

# shellcheck source=/dev/null
source "${KOOPA_DIR}/include/os/debian/sudo.sh"

prefix="$KOOPA_PREFIX"
tmp_dir="${KOOPA_TMP_DIR}/vim"
version="$(koopa variable vim)"

echo "Installing vim ${version}."

(
    rm -rf "$tmp_dir"
    mkdir -p "$tmp_dir"
    cd "$tmp_dir" || exit 1
    wget "https://github.com/vim/vim/archive/v${version}.tar.gz"
    tar -xzvf "v${version}.tar.gz"
    cd "vim-${version}" || exit 1
    ./configure --prefix="$prefix"
    make
    # make test
    sudo make install
    rm -rf "$tmp_dir"
)

# Ensure ldconfig is current.
sudo ldconfig

command -v vim
vim --version
