#!/usr/bin/env bash
set -Eeu -o pipefail

# Install Emacs text editor.
# Modified 2019-06-18.

# See also:
# - https://www.gnu.org/software/emacs/
# - https://github.com/emacs-mirror/emacs

# shellcheck source=/dev/null
source "${KOOPA_DIR}/include/os/debian/sudo.sh"

prefix="$KOOPA_PREFIX"
tmp_dir="${KOOPA_TMP_DIR}/emacs"
version="$(koopa variable emacs)"

printf "Installing emacs %s.\n" "$version"

# Bioconductor AMI is missing these dependencies:
# > apt-cache search libgif
# > apt-cache search gnutls
# > apt-cache search 'libgnutls.*-dev'

sudo apt-get -y install gnutls-bin libgnutls28-dev
sudo apt-get -y install libgif-dev

(
    rm -rf "$tmp_dir"
    mkdir -p "$tmp_dir"
    cd "$tmp_dir" || exit 1
    wget "http://ftp.gnu.org/gnu/emacs/emacs-${version}.tar.xz"
    tar -xJvf "emacs-${version}.tar.xz"
    cd "emacs-${version}" || exit 1
    ./configure --prefix="$prefix"
    make
    sudo make install
    rm -rf "$tmp_dir"
)

sudo ldconfig

command -v emacs
emacs --version
