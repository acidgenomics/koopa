#!/usr/bin/env bash
set -Eeuo pipefail

# Emacs text editor
# https://www.gnu.org/software/emacs/
#
# See also:
# - https://github.com/emacs-mirror/emacs

# shellcheck source=/dev/null
source "${KOOPA_DIR}/include/os/debian/sudo.sh"

prefix="$KOOPA_PREFIX"
build_dir="${KOOPA_TMP}/build/emacs"

version="$(koopa_version emacs)"

echo "Installing emacs ${version}."

# Bioconductor AMI is missing these dependencies:
# > apt-cache search libgif
# > apt-cache search gnutls
# > apt-cache search 'libgnutls.*-dev'

sudo -n apt-get -y install gnutls-bin libgnutls28-dev
sudo -n apt-get -y install libgif-dev

# SC2103: Use a ( subshell ) to avoid having to cd back.
(
    rm -rf "$build_dir"
    mkdir -p "$build_dir"
    cd "$build_dir" || return 1
    wget "http://ftp.gnu.org/gnu/emacs/emacs-${version}.tar.xz"
    tar -xJvf "emacs-${version}.tar.xz"
    cd "emacs-${version}" || return 1
    ./configure --prefix="$prefix"
    make
    sudo -n make install
    rm -rf "$build_dir"
)

# Ensure ldconfig is current.
sudo -n ldconfig

echo "emacs installed successfully."
command -v emacs
emacs --version
