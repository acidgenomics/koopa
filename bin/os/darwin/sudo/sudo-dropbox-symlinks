#!/usr/bin/env bash
set -Eeu -o pipefail

# Symlink Desktop and Documents on Dropbox.

# Run preflight initialization checks.
# shellcheck source=/dev/null
"${KOOPA_DIR}/include/os/darwin/sudo.sh"

sudo rm -r ~/Desktop
ln -s ~/Dropbox/Desktop ~/.

sudo rm -r ~/Documents
ln -s ~/Dropbox/Documents ~/.

sudo killAll Finder
