#!/usr/bin/env bash
set -Eeu -o pipefail

# Install Z shell.
# Modified 2019-06-18.

# See also:
# - http://www.zsh.org/
# - http://zsh.sourceforge.net/Arc/source.html
# - https://github.com/robbyrussell/oh-my-zsh/wiki/Installing-ZSH

# shellcheck source=/dev/null
source "${KOOPA_DIR}/include/os/fedora/sudo.sh"

prefix="$KOOPA_PREFIX"
build_name="$KOOPA_OS_BUILD_STRING"
tmp_dir="${KOOPA_TMP_DIR}/zsh"
version="$(koopa variable zsh)"

printf "Installing zsh %s.\n" "$version"

# Install build dependencies.
sudo yum install -y zsh
sudo yum-builddep -y zsh

(
    rm -rf "$tmp_dir"
    mkdir -p "$tmp_dir"
    cd "$tmp_dir" || exit 1
    wget "https://sourceforge.net/projects/zsh/files/zsh/${version}/zsh-${version}.tar.xz/download"
    tar -xJvf "download"
    cd "zsh-${version}" || exit 1
    ./configure \
        --build="$build_name" \
        --prefix="$prefix"
    make
    make check
    # make test
    sudo make install
    rm -rf "$tmp_dir"
)

if ! grep -q "${prefix}/bin/zsh" /etc/shells
then
    printf "Updating '/etc/shells.'\n"
    sudo bash -c "echo ${prefix}/bin/zsh >> /etc/shells"
fi

command -v zsh
zsh --version
