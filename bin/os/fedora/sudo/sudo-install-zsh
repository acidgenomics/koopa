#!/usr/bin/env bash
set -Eeuo pipefail

# Z shell
#
# See also:
# - http://www.zsh.org/
# - http://zsh.sourceforge.net/Arc/source.html
# - https://github.com/robbyrussell/oh-my-zsh/wiki/Installing-ZSH

prefix="$KOOPA_PREFIX"
build_name="$KOOPA_OS_BUILD_STRING"
build_dir="${KOOPA_TMP}/build/zsh"

version="5.7.1"

echo "Installing zsh ${version}."

# Run preflight initialization checks.
# shellcheck source=/dev/null
"${KOOPA_DIR}/include/os/fedora/sudo.sh"

# Install build dependencies.
sudo yum install -y zsh
sudo yum-builddep -y zsh

# SC2103: Use a ( subshell ) to avoid having to cd back.
(
    rm -rf "$build_dir"
    mkdir -p "$build_dir"
    cd "$build_dir"
    wget https://sourceforge.net/projects/zsh/files/zsh/${version}/zsh-${version}.tar.xz/download
    tar -xJvf "download"
    cd "zsh-${version}"
    ./configure \
        --build="$build_name" \
        --prefix="$prefix"
    make
    make check
    # make test
    sudo make install
    rm -rf "$build_dir"
)

echo "zsh installed successfully."
command -v zsh
zsh --version

if grep -qv "${prefix}/bin/zsh" /etc/shells
then
    echo "Updating /etc/shells."
    sudo bash -c "echo ${prefix}/bin/zsh >> /etc/shells"
fi

echo "Updating default shell."
sudo chsh -s "${prefix}/bin/zsh" "$USER"

