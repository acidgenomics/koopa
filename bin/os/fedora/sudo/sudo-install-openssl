#!/usr/bin/env bash
set -Eeu -o pipefail

# OpenSSL
# https://www.openssl.org/source/
# https://wiki.openssl.org/index.php/Compilation_and_Installation

# shellcheck source=/dev/null
source "${KOOPA_DIR}/include/os/fedora/sudo.sh"

prefix="$KOOPA_PREFIX"
build_dir="${KOOPA_TMP}/build/openssl"

version="$(koopa_version openssl)"

echo "Installing openssl ${version}."

# Install build dependencies.
sudo -n yum-builddep -y openssl

# SC2103: Use a ( subshell ) to avoid having to cd back.
(
    rm -rf "$build_dir"
    mkdir -p "$build_dir"
    cd "$build_dir" || exit 1
    curl -O "https://www.openssl.org/source/openssl-${version}.tar.gz"
    tar -xvzf "openssl-${version}.tar.gz"
    cd "openssl-${version}" || exit 1
    ./config --prefix="$prefix" shared
    make
    make test
    sudo -n make install
    rm -rf "$build_dir"
)

# Ensure ldconfig is current.
sudo -n ldconfig

cat << EOF
openssl installed successfully.
Reload the current shell using 'exec bash'.

command -v openssl
openssl version

Check ciphers with:
openssl ciphers -v

EOF
