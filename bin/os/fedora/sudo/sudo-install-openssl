#!/usr/bin/env bash
set -Eeuo pipefail

# OpenSSL
# https://www.openssl.org/source/
# https://wiki.openssl.org/index.php/Compilation_and_Installation

prefix="$KOOPA_PREFIX"
build_dir="${KOOPA_TMP}/build/openssl"

version="1.1.1c"

echo "Installing openssl ${version}."

# Run preflight initialization checks.
script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd)"
# shellcheck source=/dev/null
. "${script_dir}/__init__.sh"

# Install build dependencies.
sudo yum-builddep -y openssl

# SC2103: Use a ( subshell ) to avoid having to cd back.
(
    rm -rf "$build_dir"
    mkdir -p "$build_dir"
    cd "$build_dir" || exit 1
    curl -O "https://www.openssl.org/source/openssl-${version}.tar.gz"
    tar -xvzf "openssl-${version}.tar.gz"
    cd "openssl-${version}" || exit 1
    ./config --prefix="$prefix" shared
    make
    make test
    sudo make install
    rm -rf "$build_dir"
)

# Ensure ldconfig is current.
sudo ldconfig

cat << EOF
openssl installed successfully.
Reload the current shell using 'exec bash'.

command -v openssl
openssl version

Check ciphers with:
openssl ciphers -v

EOF
