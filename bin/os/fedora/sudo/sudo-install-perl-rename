#!/usr/bin/env bash
set -Eeuo pipefail

# Install Perl rename, which is superior to util-linux rename.

# shellcheck source=/dev/null
source "${KOOPA_DIR}/include/os/fedora/sudo.sh"

sudo -n yum install -y perl-App-cpanminus
sudo -n cpanm File::Rename

# Alternate method:
# perl -MCPAN -e 'install File::Rename'

command -v rename
rename --version
