#!/usr/bin/env bash
set -Eeu -o pipefail

# Install Perl rename.
# Modified 2019-06-18.

# This variant is superior to util-linux rename.

# shellcheck source=/dev/null
source "${KOOPA_DIR}/include/os/fedora/sudo.sh"

sudo yum install -y perl-App-cpanminus
sudo cpanm File::Rename

# Alternate method:
# perl -MCPAN -e 'install File::Rename'

command -v rename
rename --version
