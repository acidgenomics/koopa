#!/usr/bin/env bash
set -Eeu -o pipefail

# Install RStudio Server.
# https://www.rstudio.com/products/rstudio/download-server/

# shellcheck source=/dev/null
source "${KOOPA_DIR}/include/os/fedora/sudo.sh"

build_dir="${KOOPA_TMP_DIR}/build/shiny-server"

version="$(koopa_version shiny-server)"

echo "Installing Shiny Server ${version}."

(
    rm -rf "$build_dir"
    mkdir -p "$build_dir"
    cd "$build_dir"
    sudo -n su - \
        -c "R -e \"install.packages('shiny', repos='https://cran.rstudio.com/')\""
    wget "https://download3.rstudio.org/centos6.3/x86_64/shiny-server-${version}-x86_64.rpm"
    sudo -n yum install -y --nogpgcheck "shiny-server-${version}-x86_64.rpm"
    rm -rf "$build_dir"
)

echo "shiny-server installed successfully."
command -v shiny-server
shiny-server --version
