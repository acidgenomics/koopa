#!/usr/bin/env bash
set -Eeuo pipefail

# Docker
# https://docs.docker.com/install/linux/docker-ce/centos/

# shellcheck source=/dev/null
"${KOOPA_DIR}/include/os/fedora/sudo.sh"

sudo -n yum remove -y \
    docker \
    docker-client \
    docker-client-latest \
    docker-common \
    docker-latest \
    docker-latest-logrotate \
    docker-logrotate \
    docker-engine

sudo -n yum install -y \
    yum-utils \
    device-mapper-persistent-data \
    lvm2

sudo -n yum-config-manager \
    --add-repo \
    https://download.docker.com/linux/centos/docker-ce.repo

sudo -n yum install -y \
    docker-ce \
    docker-ce-cli \
    containerd.io

sudo -n groupadd docker
sudo -n service docker restart
sudo -n gpasswd -a "$USER" docker
newgrp docker

command -v docker
docker --version
