#!/usr/bin/env bash
set -Eeu -o pipefail

# Install base programs for Fedora.
# Modified 2019-06-18.

# shellcheck source=/dev/null
source "${KOOPA_DIR}/include/os/fedora/sudo.sh"

sudo-enable-epel
sudo yum update -y
sudo yum install -y \
    epel-release \
    convmv \
    git \
    gsl-devel \
    hdf5-devel \
    libssh2-devel \
    libgit2-devel \
    mariadb-devel \
    ncurses \
    pandoc \
    pandoc-citeproc \
    qpdf \
    sshpass \
    tmux \
    tree \
    udunits2-devel
