#!/usr/bin/env bash
set -Eeuo pipefail

# Base programs recommended for all VMs

# Here's a yum cheatsheet, for reference:
# https://access.redhat.com/sites/default/files/attachments/rh_yum_cheatsheet_1214_jcs_print-1.pdf

# Run preflight initialization checks.
# shellcheck source=/dev/null
"${KOOPA_DIR}/includes/os/fedora/sudo.sh"

sudo yum update -y
sudo yum install -y \
    epel-release \
    convmv \
    git \
    gsl-devel \
    hdf5-devel \
    libssh2-devel \
    libgit2-devel \
    mariadb-devel \
    ncurses \
    pandoc \
    pandoc-citeproc \
    qpdf \
    sshpass \
    tmux \
    tree \
    udunits2-devel
