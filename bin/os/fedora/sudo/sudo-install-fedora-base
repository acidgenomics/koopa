#!/usr/bin/env bash
set -Eeuo pipefail

# Base programs recommended for all VMs.
# Modified 2019-06-14.

# Here's a yum cheatsheet, for reference:
# https://access.redhat.com/sites/default/files/attachments/rh_yum_cheatsheet_1214_jcs_print-1.pdf

# shellcheck source=/dev/null
source "${KOOPA_DIR}/include/os/fedora/sudo.sh"

sudo -n yum update -y
sudo -n yum install -y \
    epel-release \
    convmv \
    git \
    gsl-devel \
    hdf5-devel \
    libssh2-devel \
    libgit2-devel \
    mariadb-devel \
    ncurses \
    pandoc \
    pandoc-citeproc \
    qpdf \
    sshpass \
    tmux \
    tree \
    udunits2-devel
