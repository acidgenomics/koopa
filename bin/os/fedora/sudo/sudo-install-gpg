#!/usr/bin/env bash
set -Eeu -o pipefail

# GnuPG
# https://www.gnupg.org/
#
# See also:
# - https://www.gnupg.org/download/
# - https://gist.github.com/simbo1905/ba3e8af9a45435db6093aea35c6150e8
# - https://github.com/gpg/gnupg/blob/master/INSTALL
# - https://www.dewinter.com/gnupg_howto/english/GPGMiniHowto-2.html

# shellcheck source=/dev/null
source "${KOOPA_DIR}/include/os/fedora/sudo.sh"

prefix="$KOOPA_PREFIX"
build_dir="${KOOPA_TMP}/build/gnupg"

gcrypt_url="https://www.gnupg.org/ftp/gcrypt"

echo "Installing GnuPG."

sudo -n yum-builddep -y gnupg2

# Download GnuPG release signing keys.
gpg --list-keys
gpg --keyserver hkp://keyserver.ubuntu.com:80 \
    --recv-keys 249B39D24F25E3B6 \
                04376F3EE0856959 \
                2071B08A33BD3F06 \
                8A861B1C7EFD60D9

mkdir -p "$build_dir"

(
    package="libgpg-error"
    version="$(koopa_version "$package")"
    cd "$build_dir" || return 1
    wget -c "${gcrypt_url}/${package}/${package}-${version}.tar.bz2.sig"
    wget -c "${gcrypt_url}/${package}/${package}-${version}.tar.bz2"
    gpg --verify "${package}-${version}.tar.bz2.sig"
    tar -xjvf "${package}-${version}.tar.bz2"
    cd "${package}-${version}" || return 1
    ./configure --prefix="$prefix"
    make
    sudo -n make install
)

(
    package="libgcrypt"
    version="$(koopa_version "$package")"
    cd "$build_dir" || return 1
    wget -c "${gcrypt_url}/${package}/${package}-${version}.tar.bz2.sig"
    wget -c "${gcrypt_url}/${package}/${package}-${version}.tar.bz2"
    gpg --verify "${package}-${version}.tar.bz2.sig"
    tar -xjvf "${package}-${version}.tar.bz2"
    cd "${package}-${version}" || return 1
    ./configure --prefix="$prefix"
    make
    sudo -n make install
)

(
    package="libassuan"
    version="$(koopa_version "$package")"
    cd "$build_dir" || return 1
    wget -c "${gcrypt_url}/${package}/${package}-${version}.tar.bz2.sig"
    wget -c "${gcrypt_url}/${package}/${package}-${version}.tar.bz2"
    gpg --verify "${package}-${version}.tar.bz2.sig"
    tar -xjvf "${package}-${version}.tar.bz2"
    cd "${package}-${version}" || return 1
    ./configure --prefix="$prefix"
    make
    sudo -n make install
)

(
    package="libksba"
    version="$(koopa_version "$package")"
    cd "$build_dir" || return 1
    wget -c "${gcrypt_url}/${package}/${package}-${version}.tar.bz2.sig"
    wget -c "${gcrypt_url}/${package}/${package}-${version}.tar.bz2"
    gpg --verify "${package}-${version}.tar.bz2.sig"
    tar -xjvf "${package}-${version}.tar.bz2"
    cd "${package}-${version}" || return 1
    ./configure --prefix="$prefix"
    make
    sudo -n make install
)

(
    package="npth"
    version="$(koopa_version "$package")"
    cd "$build_dir" || return 1
    wget -c "${gcrypt_url}/${package}/${package}-${version}.tar.bz2.sig"
    wget -c "${gcrypt_url}/${package}/${package}-${version}.tar.bz2"
    gpg --verify "${package}-${version}.tar.bz2.sig"
    tar -xjvf "${package}-${version}.tar.bz2"
    cd "${package}-${version}" || return 1
    ./configure --prefix="$prefix"
    make
    sudo -n make install
)

(
    package="pinentry"
    version="$(koopa_version "$package")"
    cd "$build_dir" || return 1
    wget -c "${gcrypt_url}/${package}/${package}-${version}.tar.bz2.sig"
    wget -c "${gcrypt_url}/${package}/${package}-${version}.tar.bz2"
    gpg --verify "${package}-${version}.tar.bz2.sig"
    tar -xjvf "${package}-${version}.tar.bz2"
    cd "${package}-${version}" || return 1
    ./configure --prefix="$prefix" --enable-pinentry-curses
    make
    sudo -n make install
)

# Update dynamic linker configuration.
sudo -n ldconfig -v

(
    package="gnupg"
    version="$(koopa_version gpg)"
    cd "$build_dir" || return 1
    wget -c "${gcrypt_url}/${package}/${package}-${version}.tar.bz2.sig"
    wget -c "${gcrypt_url}/${package}/${package}-${version}.tar.bz2"
    gpg --verify "${package}-${version}.tar.bz2.sig"
    tar -xjvf "${package}-${version}.tar.bz2"
    cd "${package}-${version}" || return 1
    ./configure --prefix="$prefix"
    make
    make check
    sudo -n make install
)

# Clean up the temp files.
rm -rf "$build_dir"

# Add local lib path to gpg configuration.
sudo -n sh -c 'echo /usr/local/lib > /etc/ld.so.conf.d/gpg2.conf'

# Update dynamic linker configuration.
sudo -n ldconfig -v

# Without the line below, gpg2 might fail to create / import secret keys.
# rm -rf ~/.gnugp

gpgconf --kill gpg-agent

echo "GnuPG installed successfully."
command -v gpg
gpg --version
