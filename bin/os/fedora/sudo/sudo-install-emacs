#!/usr/bin/env bash
set -Eeu -o pipefail

# Emacs text editor
# https://www.gnu.org/software/emacs/
#
# See also:
# - https://github.com/emacs-mirror/emacs

# shellcheck source=/dev/null
source "${KOOPA_DIR}/include/os/fedora/sudo.sh"

prefix="$KOOPA_PREFIX"
build_name="$KOOPA_OS_BUILD_STRING"
build_dir="${KOOPA_TMP_DIR}/build/emacs"

version="$(koopa_version emacs)"

echo "Installing emacs ${version}."

# Install build dependencies.
sudo -n yum-builddep -y emacs

# SC2103: Use a ( subshell ) to avoid having to cd back.
(
    rm -rf "$build_dir"
    mkdir -p "$build_dir"
    cd "$build_dir" || return 1
    wget "http://ftp.gnu.org/gnu/emacs/emacs-${version}.tar.xz"
    tar -xJvf "emacs-${version}.tar.xz"
    cd "emacs-${version}" || return 1
    ./configure \
        --build="$build_name" \
        --prefix="$prefix"
    make
    sudo -n make install
    rm -rf "$build_dir"
)

# Ensure ldconfig is current.
sudo -n ldconfig

echo "emacs installed successfully."
command -v emacs
emacs --version
