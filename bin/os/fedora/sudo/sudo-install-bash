#!/usr/bin/env bash
set -Eeuo pipefail

# Bash
# https://www.gnu.org/software/bash/

# shellcheck source=/dev/null
source "${KOOPA_DIR}/include/os/fedora/sudo.sh"

prefix="$KOOPA_PREFIX"
build_name="$KOOPA_OS_BUILD_STRING"
build_dir="${KOOPA_TMP}/build/bash"

version="$(koopa_version bash)"

echo "Installing bash ${version}."

# Install build dependencies
sudo -n yum-builddep -y bash

# SC2103: Use a ( subshell ) to avoid having to cd back.
(
    rm -rf "$build_dir"
    mkdir -p "$build_dir"
    cd "$build_dir"
    wget http://ftpmirror.gnu.org/bash/bash-${version}.tar.gz
    tar -xzvf "bash-${version}.tar.gz"
    cd "bash-${version}"
    ./configure \
        --build="$build_name" \
        --prefix="$prefix"
    make
    make test
    sudo -n make install
    rm -rf "$build_dir"
)

echo "bash installed successfully."
command -v bash
bash --version

if grep -qv "${prefix}/bin/bash" /etc/shells
then
    echo "Updating /etc/shells."
    sudo -n bash -c "echo ${prefix}/bin/bash >> /etc/shells"
fi

echo "Updating default shell."
sudo -n chsh -s "${prefix}/bin/bash" "$USER"
