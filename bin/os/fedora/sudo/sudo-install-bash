#!/usr/bin/env bash
set -Eeu -o pipefail

# Install Bash.
# Modified 2019-06-19.

# See also:
# - https://www.gnu.org/software/bash/

# shellcheck source=/dev/null
source "${KOOPA_DIR}/include/os/fedora/sudo.sh"

name="bash"
version="$(koopa variable "$name")"
prefix="${KOOPA_CELLAR_PREFIX}/${name}/${version}"
tmp_dir="${KOOPA_TMP_DIR}/bash"
build_name="$KOOPA_OS_BUILD_STRING"
gnu_mirror="http://ftpmirror.gnu.org"
exe_file="${prefix}/bin/${name}"

printf "Installing %s %s.\n" "$name" "$version"

# Install build dependencies
sudo yum-builddep -y bash

(
    rm -rf "$tmp_dir"
    mkdir -p "$tmp_dir"
    cd "$tmp_dir" || exit 1
    wget "${gnu_mirror}/bash/bash-${version}.tar.gz"
    tar -xzvf "bash-${version}.tar.gz"
    cd "bash-${version}" || exit 1
    ./configure \
        --build="$build_name" \
        --prefix="$prefix"
    make
    make test
    sudo make install
    rm -rf "$tmp_dir"
)

if ! grep -q "${prefix}/bin/bash" /etc/shells
then
    printf "Updating '/etc/shells'.\n"
    sudo sh -c "echo ${prefix}/bin/bash >> /etc/shells"
fi

command -v "$exe_file"
"$exe_file" --version
