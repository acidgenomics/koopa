#!/usr/bin/env bash
set -Eeu -o pipefail

# Install Bash.
# Modified 2019-06-18.

# See also:
# - https://www.gnu.org/software/bash/

# shellcheck source=/dev/null
source "${KOOPA_DIR}/include/os/fedora/sudo.sh"

prefix="${KOOPA_PREFIX}/bash"
tmp_dir="${KOOPA_TMP_DIR}/bash"
build_name="$KOOPA_OS_BUILD_STRING"
version="$(koopa variable bash)"

gnu_mirror="http://ftpmirror.gnu.org"

printf "Installing bash %s.\n" "$version"

# Install build dependencies
sudo yum-builddep -y bash

(
    rm -rf "$tmp_dir"
    mkdir -p "$tmp_dir"
    cd "$tmp_dir" || exit 1
    wget "${gnu_mirror}/bash/bash-${version}.tar.gz"
    tar -xzvf "bash-${version}.tar.gz"
    cd "bash-${version}" || exit 1
    ./configure \
        --build="$build_name" \
        --prefix="$prefix"
    make
    make test
    sudo make install
    rm -rf "$tmp_dir"
)

if ! grep -q "${prefix}/bin/bash" /etc/shells
then
    printf "Updating '/etc/shells'.\n"
    sudo sh -c "echo ${prefix}/bin/bash >> /etc/shells"
fi

bash_exe="${prefix}/bin/bash"
command -v "$bash_exe"
"$bash_exe" --version
