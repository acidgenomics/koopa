#!/usr/bin/env bash
set -Eeu -o pipefail

# GNU Scientific Library (GSL)
# https://www.gnu.org/software/gsl/
# Required for some single-cell RNA-seq R packages.

# shellcheck source=/dev/null
source "${KOOPA_DIR}/include/os/fedora/sudo.sh"

prefix="$KOOPA_PREFIX"
build_dir="${KOOPA_TMP}/build/gsl"

version="$(koopa_verison gsl)"

echo "Installing GSL ${version}."

# SC2103: Use a ( subshell ) to avoid having to cd back.
(
    rm -rf "$build_dir"
    mkdir -p "$build_dir"
    cd "$build_dir" || return 1
    wget "http://mirror.keystealth.org/gnu/gsl/gsl-${version}.tar.gz"
    tar xzvf "gsl-${version}.tar.gz"
    cd "gsl-${version}" || return 1
    ./configure --prefix="$prefix"
    make
    make check
    sudo -n make install
    rm -rf "$build_dir"
)

# Ensure ldconfig is current.
sudo -n ldconfig

echo "gsl installed successfully."
command -v gsl-config
gsl-config --version
