#!/usr/bin/env bash
set -Eeu -o pipefail

# Update Fedora.
# Modified 2019-06-18.

# shellcheck source=/dev/null
source "${KOOPA_DIR}/include/os/fedora/sudo.sh"

log_dir="${HOME}/logs/${HOSTNAME}/yum"
mkdir -p "$log_dir"
log_file="${log_dir}/yum-update-$(date +%F).log"

sudo yum update -y 2>&1 | tee "$log_file"
