#!/usr/bin/env bash
set -Eeuo pipefail

# Update system.
# Modified 2019-06-14.

# shellcheck source=/dev/null
source "${KOOPA_DIR}/include/os/fedora/sudo.sh"

log_dir="${HOME}/logs/${HOSTNAME}/yum"
mkdir -p "$log_dir"
log_file="${log_dir}/yum-update-$(date +%F).log"

sudo -n yum update -y 2>&1 | tee "$log_file"
