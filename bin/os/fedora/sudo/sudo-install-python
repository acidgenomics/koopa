#!/usr/bin/env bash
set -Eeuo pipefail

# Python
# https://www.python.org/

prefix="/usr/local"
build_name="$KOOPA_OS_BUILD_STRING"
build_dir="/tmp/build/python"

version="3.7.3"

echo "Installing python ${version}."

# Run preflight initialization checks.
# shellcheck source=/dev/null
"${KOOPA_DIR}/includes/os/fedora/sudo.sh"

# Install Python and build dependencies.
sudo yum install -y python python-pip
sudo yum-builddep -y python

mkdir "$build_dir"

# Ensure pip is installed and up to date.
(
    cd "$build_dir"
    wget https://bootstrap.pypa.io/get-pip.py
    sudo python get-pip.py
    sudo pip install -U pip
    sudo pip install -U virtualenv
)

# Build and install from source.
(
    cd "$build_dir"
    wget "https://www.python.org/ftp/python/${version}/Python-${version}.tar.xz"
    tar xfv "Python-${version}.tar.xz"
    cd "Python-${version}"
    ./configure \
        --build="$build_name" \
        --prefix="$prefix" \
        --enable-optimizations \
        --enable-shared
    make
    sudo make install
)

sudo rm -rf "$build_dir"

# Ensure ldconfig is current.
# Otherwise you can run into libpython detection errors.
sudo ldconfig

echo "python installed correctly."
command -v python3
python3 --version
