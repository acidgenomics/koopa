#!/usr/bin/env bash
set -Eeuo pipefail

# Python
# https://www.python.org/

# shellcheck source=/dev/null
source "${KOOPA_DIR}/include/os/fedora/sudo.sh"

prefix="$KOOPA_PREFIX"
build_name="$KOOPA_OS_BUILD_STRING"
build_dir="${KOOPA_TMP}/build/python"

version="$(koopa_version python)"

echo "Installing python ${version}."

# Install Python and build dependencies.
sudo -n yum install -y python python-pip
sudo -n yum-builddep -y python

mkdir "$build_dir"

# Ensure pip is installed and up to date.
(
    cd "$build_dir"
    wget https://bootstrap.pypa.io/get-pip.py
    sudo -n python get-pip.py
    sudo -n pip install -U pip
    sudo -n pip install -U virtualenv
)

# Build and install from source.
(
    cd "$build_dir"
    wget "https://www.python.org/ftp/python/${version}/Python-${version}.tar.xz"
    tar xfv "Python-${version}.tar.xz"
    cd "Python-${version}"
    ./configure \
        --build="$build_name" \
        --prefix="$prefix" \
        --enable-optimizations \
        --enable-shared
    make
    sudo -n make install
)

sudo -n rm -rf "$build_dir"

# Ensure ldconfig is current.
# Otherwise you can run into libpython detection errors.
sudo -n ldconfig

echo "python installed correctly."
command -v python3
python3 --version
