#!/usr/bin/env bash
set -Eeu -o pipefail

# Install Python.
# Modified 2019-06-18.

# See also:
# - https://www.python.org/

# shellcheck source=/dev/null
source "${KOOPA_DIR}/include/os/fedora/sudo.sh"

prefix="$KOOPA_PREFIX"
build_name="$KOOPA_OS_BUILD_STRING"
tmp_dir="${KOOPA_TMP_DIR}/python"
version="$(koopa variable python)"

printf "Installing python %s.\n" "$version"

# Install Python and build dependencies.
sudo yum install -y python python-pip
sudo yum-builddep -y python

rm -rf "$tmp_dir"
mkdir "$tmp_dir"

# Ensure pip is installed and up to date.
(
    cd "$tmp_dir"
    wget https://bootstrap.pypa.io/get-pip.py
    sudo python get-pip.py
    sudo pip install -U pip
    sudo pip install -U virtualenv
)

# Build and install from source.
(
    cd "$tmp_dir"
    wget "https://www.python.org/ftp/python/${version}/Python-${version}.tar.xz"
    tar xfv "Python-${version}.tar.xz"
    cd "Python-${version}"
    ./configure \
        --build="$build_name" \
        --prefix="$prefix" \
        --enable-optimizations \
        --enable-shared
    make
    sudo make install
)

sudo rm -rf "$tmp_dir"
sudo ldconfig

command -v python3
python3 --version
