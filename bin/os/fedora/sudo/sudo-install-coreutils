#!/usr/bin/env bash
set -Eeuo pipefail

# GNU core utilities
# https://ftp.gnu.org/gnu/coreutils/

# shellcheck source=/dev/null
source "${KOOPA_DIR}/include/os/fedora/sudo.sh"

prefix="$KOOPA_PREFIX"
build_name="$KOOPA_OS_BUILD_STRING"
build_dir="${KOOPA_TMP}/build/coreutils"

version="$(koopa_version coreutils)"

echo "Installing git ${version}."

# Install build dependencies.
sudo -n yum-builddep -y coreutils

# SC2103: Use a ( subshell ) to avoid having to cd back.
(
    rm -rf "$build_dir"
    mkdir -p "$build_dir"
    cd "$build_dir" || return 1
    wget "https://ftp.gnu.org/gnu/coreutils/coreutils-${version}.tar.xz"
    tar -xJvf "coreutils-${version}.tar.xz"
    cd "coreutils-${version}" || return 1
    ./configure \
        --build="$build_name" \
        --prefix="$prefix"
    make
    make check
    sudo -n make install
    rm -rf "$build_dir"
)

# Ensure ldconfig is current.
sudo -n ldconfig

echo "coreutils installed successfully."
echo "Check version with 'info coreutils'."
