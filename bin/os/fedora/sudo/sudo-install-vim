#!/usr/bin/env bash
set -Eeu -o pipefail

# Install Vim.
# Modified 2019-06-18.

# See also:
# - https://github.com/vim/vim

# shellcheck source=/dev/null
source "${KOOPA_DIR}/include/os/fedora/sudo.sh"

prefix="${KOOPA_PREFIX}/vim"
tmp_dir="${KOOPA_TMP_DIR}/vim"
build_name="$KOOPA_OS_BUILD_STRING"
version="$(koopa variable vim)"

printf "Installing vim %s.\n" "$version"

# Install build dependencies.
sudo yum-builddep -y vim

(
    rm -rf "$tmp_dir"
    mkdir -p "$tmp_dir"
    cd "$tmp_dir" || exit 1
    wget "https://github.com/vim/vim/archive/v${version}.tar.gz"
    tar -xzvf "v${version}.tar.gz"
    cd "vim-${version}" || exit 1
    ./configure \
        --build="$build_name" \
        --prefix="$prefix"
    make
    # make test
    sudo make install
    rm -rf "$tmp_dir"
)

sudo ldconfig

command -v vim
vim --version
