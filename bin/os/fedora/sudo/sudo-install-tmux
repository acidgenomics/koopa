#!/usr/bin/env bash
set -Eeu -o pipefail

# Install Tmux terminal multiplexer.
# Modified 2019-06-18.

# See also:
# - https://github.com/tmux/tmux

# shellcheck source=/dev/null
source "${KOOPA_DIR}/include/os/fedora/sudo.sh"

prefix="${KOOPA_PREFIX}/tmux"
tmp_dir="${KOOPA_TMP_DIR}/tmux"
build_name="$KOOPA_OS_BUILD_STRING"
version="$(koopa variable tmux)"

printf "Installing tmux %s.\n" "$version"

# Install build dependencies.
sudo yum-builddep -y tmux

(
    rm -rf "$tmp_dir"
    mkdir -p "$tmp_dir"
    cd "$tmp_dir" || exit 1
    wget "https://github.com/tmux/tmux/releases/download/${version}/tmux-${version}.tar.gz"
    tar -xzvf "tmux-${version}.tar.gz"
    cd "tmux-${version}" || exit 1
    ./configure \
        --build="$build_name" \
        --prefix="$prefix"
    make
    sudo make install
    rm -rf "$tmp_dir"
)

sudo ldconfig

command -v tmux
tmux -V
