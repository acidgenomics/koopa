#!/usr/bin/env bash
set -Eeuo pipefail

# Tmux terminal multiplexer
# https://github.com/tmux/tmux

# shellcheck source=/dev/null
source "${KOOPA_DIR}/include/os/fedora/sudo.sh"

prefix="$KOOPA_PREFIX"
build_name="$KOOPA_OS_BUILD_STRING"
build_dir="${KOOPA_TMP}/build/tmux"

version="$(koopa_version tmux)"

echo "Installing tmux ${version}."

# Install build dependencies.
sudo -n yum-builddep -y tmux

# SC2103: Use a ( subshell ) to avoid having to cd back.
(
    rm -rf "$build_dir"
    mkdir -p "$build_dir"
    cd "$build_dir" || return 1
    wget "https://github.com/tmux/tmux/releases/download/${version}/tmux-${version}.tar.gz"
    tar -xzvf "tmux-${version}.tar.gz"
    cd "tmux-${version}" || return 1
    ./configure \
        --build="$build_name" \
        --prefix="$prefix"
    make
    sudo -n make install
    rm -rf "$build_dir"
)

# Ensure ldconfig is current.
sudo -n ldconfig

echo "tmux installed successfully."
command -v tmux
tmux -V
