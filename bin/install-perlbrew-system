#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)

Install Perlbrew system Perl.

$(_koopa_help_args)

see also:
    https://stackoverflow.com/questions/25188575

note:
    Bash script.
    Updated 2019-06-23.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

if [[ -x "/usr/local/bin/perl" ]]
then
    bin_dir="/usr/local/bin"
elif [[ -x "/usr/bin/perl" ]]
then
    bin_dir="/usr/bin"
else
    >&2 printf "Error: Failed to detect system Perl.\n"
    exit 1
fi

(
    cd "${PERLBREW_ROOT}/perls" || exit 1
    rm -frv system
    mkdir -pv system
    ln -fnsv "$bin_dir" "system/bin"
)

perlbrew list
