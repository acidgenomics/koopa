#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
usage: install-perlbrew-system [--help|-h]

Install Perlbrew system Perl.

optional arguments:
    --help, -h
        Show this help message and exit.

see also:
    https://stackoverflow.com/questions/25188575

note:
    Updated 2019-06-23.
EOF
}



# Script                                                                    {{{1
# ==============================================================================

if [[ -x "/usr/local/bin/perl" ]]
then
    bin_dir="/usr/local/bin"
elif [[ -x "/usr/bin/perl" ]]
then
    bin_dir="/usr/bin"
else
    >&2 printf "Error: Failed to detect system Perl.\n"
    exit 1
fi

(
    cd "${PERLBREW_ROOT}/perls" || exit 1
    rm -frv system
    mkdir -pv system
    ln -fnsv "$bin_dir" "system/bin"
)

perlbrew list
