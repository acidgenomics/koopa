#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"
_acid_assert_has_no_args "$@"

if [[ -x "/usr/local/bin/perl" ]]
then
    bin_dir="/usr/local/bin"
elif [[ -x "/usr/bin/perl" ]]
then
    bin_dir="/usr/bin"
else
    _acid_stop "Failed to detect system Perl."
fi

(
    cd "${PERLBREW_ROOT}/perls" || exit 1
    rm -frv system
    mkdir -pv system
    ln -fnsv "$bin_dir" "system/bin"
)

perlbrew list
