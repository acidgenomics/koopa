#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(_koopa_header bash)"

# Install recommended Perl release via perlbrew.
# Updated 2019-08-15.

# See also:
# https://perlbrew.pl/

# Installation instructions:
# - https://metacpan.org/pod/App::perlbrew
# - https://github.com/gugod/App-perlbrew/wiki/Perlbrew-In-Shell-Scripts

_koopa_assert_is_installed perlbrew
_koopa_assert_has_no_environments

version="$(_koopa_variable perl)"

perl_name="perl-${version}"
perlbrew install "$perl_name"
perlbrew switch "$perl_name"

perlbrew list
