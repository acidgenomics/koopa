#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"
_acid_assert_has_no_args "$@"
_acid_assert_is_installed perlbrew
_acid_assert_has_no_envs

version="$(_acid_variable perl)"
perl_name="perl-${version}"

perlbrew install "$perl_name"
perlbrew switch "$perl_name"
perlbrew list
