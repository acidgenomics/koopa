#!/usr/bin/env bash
set -Eeu -o pipefail

KOOPA_PREFIX="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_PREFIX}/shell/bash/include/header.sh"

# """
# Available releases:
# > perlbrew available
# """

_koopa_assert_has_no_args "$@"
_koopa_assert_is_installed perlbrew
_koopa_assert_has_no_envs



# FIXME Early return if already installed.
# FIXME Run a regular expression check of this.
# > perlbrew list


version="$(_koopa_variable perl)"
perl_name="perl-${version}"

_koopa_h1 "Installing Perl ${version} via perlbrew."
_koopa_coffee_time

perlbrew install "$perl_name"
perlbrew switch "$perl_name"

_koopa_success "Installation of Perl was successful."
