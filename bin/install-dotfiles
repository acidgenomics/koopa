#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"



# Variables                                                                 {{{1
# ==============================================================================

url="git@github.com:acidgenomics/dotfiles.git"
target_dir="$(_koopa_home)/dotfiles"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
usage: install-dotfiles [--help|-h]
    [url="${url}"]

Install dot files repository.

required positional arguments with defaults:
    1.  Dot file repository URL.
        Defaults to '${url}'.

$(_koopa_help_args)

details:
    Installs into '${target_dir}'.
    Adds a symlink in koopa config dir.

note:
    Bash script.
    Updated 2019-09-23.
EOF
}

_koopa_help "$@"



# Arguments                                                                 {{{1
# ==============================================================================

source_repo="${1:-$url}"



# Script                                                                    {{{1
# ==============================================================================

_koopa_assert_is_not_dir "$target_dir"
git clone --recursive "$source_repo" "$target_dir"
