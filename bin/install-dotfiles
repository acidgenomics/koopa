#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"

# Install dot files.
# Updated 2019-09-21.

# Defaults to the Acid Genomics dotfiles repo.

source_repo="${1:-git@github.com:acidgenomics/dotfiles.git}"
target_dir="$(_koopa_home)/dotfiles"

_koopa_assert_is_not_dir "$target_dir"
git clone --recursive "$source_repo" "$target_dir"
