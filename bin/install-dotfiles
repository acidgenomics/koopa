#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"

url="git@github.com:acidgenomics/dotfiles.git"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
usage: install-dotfiles [--help|-h]
    [url="${url}"]

Install dot files repository.

optional positional arguments:
    1.  Dot file repository URL.
        Defaults to '${url}'.

details:
    Installs into koopa home (e.g. '/usr/local/koopa/dotfiles/').
    Adds a symlink in koopa config (e.g. '~/.config/koopa/dotfiles').

optional arguments:
    --help, -h
        Show this help message and exit.

note:
    Bash script.
    Updated 2019-09-23.
EOF
}

_koopa_help "$@"



# Arguments                                                                 {{{1
# ==============================================================================

source_repo="${1:-$url}"
target_dir="$(_koopa_home)/dotfiles"



# Script                                                                    {{{1
# ==============================================================================

_koopa_assert_is_not_dir "$target_dir"
git clone --recursive "$source_repo" "$target_dir"
