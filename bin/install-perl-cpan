#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)

Install Perl CPAN.

details:
    Installs cpanminus internally.
    Installation defaults to '~/.cpan'.

    Also installs 'File::Rename' automatically.

note:
    Bash script.
    Updated 2019-10-22.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

_koopa_assert_is_installed perl perlbrew

cpan App::cpanminus

cpanm File::Rename
cpan install File::Rename
