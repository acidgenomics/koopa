#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"
_koopa_assert_has_no_args "$@"
_koopa_assert_is_installed "cpan" "perl" "perlbrew"

cpan App::cpanminus
cpanm File::Rename
cpan install File::Rename
