#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
usage: rename-from-csv [--help|-h] csv_file

Rename files using a CSV file.

required positional arguments:
    1.  CSV file, containing name mappings (from,to).

optional arguments:
    --help, -h
        Show this help message and exit.

note:
    Bash script.
    Updated 2019-06-23.
EOF
}

_koopa_help "$@"



# Arguments                                                                 {{{1
# ==============================================================================

file="$1"



# Script                                                                    {{{1
# ==============================================================================

_koopa_assert_is_file_type "$file" "csv"

while read -r line
do
    from=${line%,*}
    to=${line#*,}
    mv -v "$from" "$to"
done < "$file"
