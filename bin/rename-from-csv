#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"

_koopa_help "$@"
_koopa_assert_has_args "$@"



# Arguments                                                                 {{{1
# ==============================================================================

file="$1"
_koopa_assert_is_file_type "$file" "csv"



# Script                                                                    {{{1
# ==============================================================================

while read -r line
do
    from="${line%,*}"
    to="${line#*,}"
    mv -v "$from" "$to"
done < "$file"
