#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
usage: indrops-bcl2fastq [--help|-h]

Generate FASTQ files from multiplexed inDrops Illumina sequencing run.

optional arguments:
    --help, -h
        Show this help message and exit.

details:
    Run at the top level of Illumina output directory containing BCL files.
    
    Assuming input is Harvard inDrops v3 barcode format.

    Some RNA-seq processing pipelines (i.e. Harvard Biopolymers) incorrectly
    attempt to process inDrops sequencing data to R1, R2 paired-end FASTQs.
    Instead, R1-R4 FASTQ files should be generated for inDrops data.

see also:
    Harvard Single Cell Core
    https://singlecellcore.hms.harvard.edu/

note:
    Bash script.
    Updated 2019-09-23.
EOF
}



# Parse arguments                                                           {{{1
# ==============================================================================

case "${1:-}" in
    "")
        ;;
    --help|-h)
        usage
        exit
        ;;
    *)
        >&2 printf "Error: Unsupported argument: '%s'\n" "$1"
        exit 1
        ;;
esac



# Script                                                                    {{{1
# ==============================================================================

_koopa_assert_is_installed bcl2fastq

bcl2fastq \
    --use-bases-mask y*,y*,y*,y* \
    --mask-short-adapter-reads 0 \
    --minimum-trimmed-read-length 0 \
    2>&1 | tee bcl2fastq.log
