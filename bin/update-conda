#!/usr/bin/env bash
set -Eeu -o pipefail

KOOPA_PREFIX="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_PREFIX}/shell/bash/include/header.sh"

_koopa_assert_has_no_args "$@"

if ! _koopa_is_installed conda
then
    _koopa_note "Conda is not installed."
    exit 0
fi

prefix="$(_koopa_conda_prefix)"

conda_exe="${prefix}/condabin/conda"
# > conda_exe="${prefix}/bin/conda"

_koopa_h1 "Updating Conda at '${prefix}'."

"$conda_exe" update --yes --name=base --channel=defaults conda
"$conda_exe" update --yes --name=base --channel=defaults --all
# > "$conda_exe" clean --yes --tarballs

_koopa_set_permissions "$prefix"
