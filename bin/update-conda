#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)

Update conda.

$(_koopa_help_args)

see also:
    https://bioconda.github.io/#set-up-channels

note:
    Bash script.
    Requires that conda is already installed.
    Updated 2019-10-22.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

if ! _koopa_is_installed conda
then
    _koopa_warning "Conda is not installed."
    exit 0
fi

echo "Updating Conda."

conda update --yes --name=base --channel=defaults conda
conda update --yes --name=base --channel=defaults --all
conda clean --yes --tarballs
