#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"

_koopa_assert_is_installed python3 python

env_name="${1:-"reticulate"}"
env_base_dir="${2:-"${HOME}/.virtualenvs"}"
env_dir="${env_base_dir}/${env_name}"

rm -frv "$env_dir"
python3 -m venv "$env_dir"
py_exe="${env_dir}/bin/python3"

"$py_exe" -m pip install --upgrade pip
"$py_exe" -m pip install louvain umap-learn
"$py_exe" -m pip list
