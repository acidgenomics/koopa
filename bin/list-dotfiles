#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)

List dotfiles.

$(_koopa_help_args)

details:
    List dotfiles in HOME by type.
    Organizes into symlinks, files, and directories.

note:
    Bash script.
    Updated 2019-09-25.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

_koopa_find_dotfiles l Symlinks
_koopa_find_dotfiles f Files
_koopa_find_dotfiles d Directories
