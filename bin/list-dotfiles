#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(_koopa_header bash)"

# List dotfiles.
# Updated 2019-07-30.

find_dotfiles() {
    local type="$1"
    local header="$2"
    printf "\n%s:\n\n" "$header"
    find ~ \
        -maxdepth 1 \
        -name ".*" \
        -type "$type" \
        -print0 | \
        xargs -0 -n1 basename | \
        sort |
        awk '{print "  ",$0}'
}

find_dotfiles l Symlinks
find_dotfiles f Files
find_dotfiles d Directories
