#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)

List dotfiles.

$(_koopa_help_args)

details:
    List dotfiles in HOME by type.
    Organizes into symlinks, files, and directories.

note:
    Bash script.
    Updated 2019-09-25.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

_koopa_find_dotfiles l Symlinks
_koopa_find_dotfiles f Files
_koopa_find_dotfiles d Directories
