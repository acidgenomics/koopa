#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
usage: link-emacs [--help|-h]

Link Emacs installation to '~/.emacs.d/'.

optional arguments:
    --help, -h
        Show this help message and exit.

note:
    Bash script.
    Updated 2019-09-24.
EOF
}



# Script                                                                    {{{1
# ==============================================================================

name="$1"

default_home=".emacs.d"
custom_home="${default_home}-${name}"

default_dir="${HOME}/${default_home}"
custom_dir="${HOME}/${custom_home}"

_koopa_assert_is_dir "$custom_dir"
_koopa_assert_is_not_dir "$default_dir"

(
    cd ~
    if [[ "$name" != "ess" ]]
    then
        rm -fv .emacs
    elif [[ "$name" != "spacemacs" ]]
    then
        rm -fv .spacemacs
    fi
    case "$name" in
        doom)
            dotfile --config --force doom
            ;;
        ess)
            dotfile --force emacs
            ;;
        spacemacs)
            dotfile --force spacemacs
            ;;
        *)
            >&2 printf "Error: Invalid Emacs config name.\n"
            exit 1
            ;;
    esac
    ln -fnsv "$custom_home" "$default_home"
)
