#!/usr/bin/env bash

KOOPA_PREFIX="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_PREFIX}/shell/bash/include/header.sh"

dir="${1:-"."}"
dir="$(_koopa_strip_trailing_slash "$dir")"

gzip -cd "${dir}/"*"_R3.fastq.gz" | \
    head -n -1000000 | \
    awk 'NR == 2 || NR % 4 == 2' | \
    grep -v N | \
    sort | \
    uniq -c | \
    sort -nr | \
    head -n 24 > \
    sample-barcodes.log
