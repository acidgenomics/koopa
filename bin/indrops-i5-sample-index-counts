#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"

dir="."



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
usage: indrops-i5-sample-index-counts [--help|-h] [dir="${dir}"]

inDrops sample barcode counts from i5 indexes.

details:
    Checks against R3 FASTQ files inside directory.
    Directory defaults to '${dir}'.

see also:
    https://iccb.med.harvard.edu/single-cell-core

note:
    Bash script.
    Updated 2019-09-23.
    Thanks to @roryk for this script.
EOF
}

_koopa_help "$@"



# Arguments                                                                 {{{1
# ==============================================================================

dir="${1:-$dir}"
# Handle trailing directory '/' automatically.
dir="${dir//\//}"



# Script                                                                    {{{1
# ==============================================================================

gzip -cd "${dir}/"*"_R3.fastq.gz" | \
    head -n -1000000 | \
    awk 'NR == 2 || NR % 4 == 2' | \
    grep -v N | \
    sort | \
    uniq -c | \
    sort -nr | \
    head -n 24 > \
    sample-barcodes.log
