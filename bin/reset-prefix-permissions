#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"

_koopa_help "$@"
_koopa_assert_has_no_args "$@"



# Variables                                                                 {{{1
# ==============================================================================

prefix="$(_koopa_build_prefix)"
group="$(_koopa_group)"

if _koopa_is_shared
then
    user="root"
else
    user="$USER"
fi



# Script                                                                    {{{1
# ==============================================================================

if _koopa_is_shared
then
    _koopa_assert_has_sudo
fi

_koopa_message "Resetting user ('${user}') and group ('${group}') permissions \
on '${prefix}'."

_koopa_set_permissions "$prefix"

# Ensure group on top level is sticky.
if _koopa_is_shared
then
    sudo chmod g+s "$prefix"
else
    chmod g+s "$prefix"
fi
