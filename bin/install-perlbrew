#!/usr/bin/env bash
set -Eeu -o pipefail

# Perlbrew
# https://perlbrew.pl/
# Modified 2019-06-17.

# Installation instructions:
# - https://metacpan.org/pod/App::perlbrew
# - https://github.com/gugod/App-perlbrew/wiki/Perlbrew-In-Shell-Scripts

# shellcheck source=/dev/null
source "${KOOPA_DIR}/include/shell/bash/functions.sh"

prefix="${prefix:-${KOOPA_PREFIX}/perlbrew}"
prefix_mkdir "$prefix"

export PERLBREW_ROOT="$prefix"

# Ensure existing preferences are removed.
export PERLBREW_HOME="${PERLBREW_HOME}:-${HOME}/.perlbrew"
rm -rf "$PERLBREW_HOME"

curl -L https://install.perlbrew.pl | bash

prefix_chgrp "$prefix"

perlbrew_exe="${PERLBREW_ROOT}/bin/perlbrew"
command -v "$perlbrew_exe"
"$perlbrew_exe" --version
