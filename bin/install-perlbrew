#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
usage: install-perlbrew [--help|-h]

Install Perlbrew.

optional arguments:
    --help, -h
        Show this help message and exit.

see also:
    - https://perlbrew.pl/
    - https://metacpan.org/pod/App::perlbrew
    - https://github.com/gugod/App-perlbrew/wiki/Perlbrew-In-Shell-Scripts

note:
    Bash script.
    Updated 2019-09-24.
EOF
}



# Script                                                                    {{{1
# ==============================================================================

_koopa_assert_has_no_environments

name="perlbrew"
prefix="$(_koopa_build_prefix)/${name}"
exe_file="${prefix}/bin/${name}"

_koopa_build_mkdir "$prefix"

(
    # Ensure existing preferences are removed.
    export PERLBREW_HOME="${PERLBREW_HOME:-${HOME}/.perlbrew}"
    rm -rf "$PERLBREW_HOME"
    
    export PERLBREW_ROOT="$prefix"
    curl -L https://install.perlbrew.pl | bash
)

_koopa_build_chgrp "$prefix"

command -v "$exe_file"
"$exe_file" --version
