#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"

# Install Anaconda.
# Updated 2019-06-23.

# See also:
# - https://www.anaconda.com/download
# - https://docs.anaconda.com/anaconda/install/

_koopa_assert_has_no_environments

name="anaconda3"
version="$(_koopa_variable "$name")"
prefix="$(koopa build-prefix)/${name}"
tmp_dir="$(koopa tmp-dir)/${name}"
exe_file="${prefix}/bin/conda"

case "$OSTYPE" in
    linux-gnu)
        script="Anaconda3-${version}-Linux-x86_64.sh"
        ;;
    darwin*)
        script="Anaconda3-${version}-MacOSX-x86_64.sh"
        ;;
    *)
        >&2 printf "Error: %s is not supported." "$OSTYPE"
        exit 1
        ;;
esac

_koopa_build_mkdir "$prefix"

(
    rm -rf "$tmp_dir"
    mkdir -p "$tmp_dir"
    cd "$tmp_dir" || exit 1
    curl -O "https://repo.anaconda.com/archive/${script}"
    bash "$script" -bf -p "$prefix"
    rm -rf "$tmp_dir"
)

_koopa_build_chgrp "$prefix"

command -v "$exe_file"
"$exe_file" --version
