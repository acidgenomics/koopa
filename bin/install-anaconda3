#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"

_koopa_help "$@"
_koopa_assert_has_no_environments



# Arguments                                                                 {{{1
# ==============================================================================

name="anaconda3"
version="$(_koopa_variable "$name")"
prefix="$(_koopa_build_prefix)/${name}"
tmp_dir="$(_koopa_tmp_dir)/${name}"
exe_file="${prefix}/bin/conda"



# Script                                                                    {{{1
# ==============================================================================

case "$OSTYPE" in
    linux-gnu)
        script="Anaconda3-${version}-Linux-x86_64.sh"
        ;;
    darwin*)
        script="Anaconda3-${version}-MacOSX-x86_64.sh"
        ;;
    *)
        _koopa_stop "'${OSTYPE}' is not supported."
        ;;
esac

_koopa_prefix_mkdir "$prefix"

(
    rm -fr "$tmp_dir"
    mkdir -p "$tmp_dir"
    cd "$tmp_dir" || exit 1
    curl -O "https://repo.anaconda.com/archive/${script}"
    bash "$script" -bf -p "$prefix"
    rm -fr "$tmp_dir"
)

_koopa_set_permissions "$prefix"

command -v "$exe_file"
"$exe_file" --version
