#!/usr/bin/env bash
set -Eeu -o pipefail

# Install Anaconda.
# Modified 2019-06-18.

# See also:
# - https://www.anaconda.com/download
# - https://docs.anaconda.com/anaconda/install/

# shellcheck source=/dev/null
source "${KOOPA_DIR}/shell/bash/include/header.sh"

_koopa_assert_has_no_environments

name="anaconda3"
version="$(koopa variable "$name")"
prefix="${KOOPA_BUILD_PREFIX}/${name}"
tmp_dir="${KOOPA_TMP_DIR}/${name}"
exe_file="${prefix}/bin/conda"

case "$OSTYPE" in
    linux-gnu)
        script="Anaconda3-${version}-Linux-x86_64.sh"
        ;;
    darwin*)
        script="Anaconda3-${version}-MacOSX-x86_64.sh"
        ;;
    *)
        >&2 printf "Error: %s is not supported." "$OSTYPE"
        exit 1
        ;;
esac

_koopa_build_mkdir "$prefix"

(
    rm -rf "$tmp_dir"
    mkdir -p "$tmp_dir"
    cd "$tmp_dir"
    curl -O "https://repo.anaconda.com/archive/${script}"
    bash "$script" -bf -p "$prefix"
    rm -rf "$tmp_dir"
)

_koopa_build_chgrp "$prefix"

command -v "$exe_file"
"$exe_file" --version
