#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
usage: ffmpeg-alac-to-flac [--help|-h]

Transcode ALAC (Apple Lossless) files to FLAC.

optional arguments:
    --help, -h
        Show this help message and exit.

details:
    Looks for M4A files in current working directory and transcodes to FLAC.
    Calls ffmpeg internally.

note:
    Bash script.
    Updated 2019-09-21.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

_koopa_assert_is_installed ffmpeg

for file in *.m4a
do
    ffmpeg \
        -nostdin \
        -i "$file" \
        -acodec flac \
        -c:a flac \
        -c:v copy \
        "${file%.*}.flac"
done
