#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"

_koopa_help "$@"
_koopa_assert_has_args "$@"



# Variables                                                                 {{{1
# ==============================================================================

dir=""



# Arguments                                                                 {{{1
# ==============================================================================

while (("$#"))
do
    case "$1" in
        --dir=*)
            dir="${1#*=}"
            shift 1
            ;;
        --dir)
            dir="$2"
            shift 2
            ;;
        --host=*)
            host="${1#*=}"
            shift 1
            ;;
        --host)
            host="$2"
            shift 2
            ;;
        --user=*)
            user="${1#*=}"
            shift 1
            ;;
        --user)
            user="$2"
            shift 2
            ;;
        *)
            _koopa_invalid_arg "$1"
            ;;
    esac
done

if [[ -z "${host:-}" ]] ||
    [[ -z "${user:-}" ]]
then
    _koopa_missing_arg
fi



# Script                                                                    {{{1
# ==============================================================================

if [[ -n "$dir" ]]
then
    path="${host}/${dir}"
else
    path="${host}"
fi

wget --ask-password --mirror "ftp://${user}@${path}/"*
