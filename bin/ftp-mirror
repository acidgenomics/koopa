#!/usr/bin/env bash

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" &>/dev/null && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../shell/bash/include/header.sh"

koopa::assert_has_args "$#"
koopa::assert_is_installed wget

dir=""

while (("$#"))
do
    case "$1" in
        --dir=*)
            dir="${1#*=}"
            shift 1
            ;;
        --dir)
            dir="$2"
            shift 2
            ;;
        --host=*)
            host="${1#*=}"
            shift 1
            ;;
        --host)
            host="$2"
            shift 2
            ;;
        --user=*)
            user="${1#*=}"
            shift 1
            ;;
        --user)
            user="$2"
            shift 2
            ;;
        *)
            koopa::invalid_arg "$1"
            ;;
    esac
done

if [[ -z "${host:-}" ]] ||
    [[ -z "${user:-}" ]]
then
    koopa::missing_arg
fi

if [[ -n "$dir" ]]
then
    dir="${host}/${dir}"
else
    dir="${host}"
fi

wget --ask-password --mirror "ftp://${user}@${dir}/"*
