#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"

url="ftp://ftp.flybase.net/releases/"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
usage: flybase-version [--help|-h]

FlyBase release version.

details:
    Extract the FlyBase release version from ftp.flybase.net.

optional arguments:
    --help, -h
        Show this help message and exit.

see also:
    ${url}

note:
    Bash script.
    Updated 2019-09-20.
EOF
}



# Parse arguments                                                           {{{1
# ==============================================================================

case "${1:-}" in
    "")
        ;;
    --help|-h)
        usage
        exit
        ;;
    *)
        >&2 printf "Error: Unsupported arg: '%s'\n" "$1"
        exit 1
        ;;
esac



# Script                                                                    {{{1
# ==============================================================================

_koopa_assert_is_installed curl

release_date="$( \
    curl --list-only --silent "$url" | \
    grep -E "^FB[0-9]{4}_[0-9]{2}$" | \
    sort | \
    tail -n 1 \
)"
printf "date: %s\n" "$release_date"

release_version="$( \
    curl --list-only --silent "${url}current/" | \
    grep -E "^dmel_r[.0-9]+$" \
)"
printf "version: %s\n" "$release_version"
