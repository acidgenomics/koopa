#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"



# Variables                                                                 {{{1
# ==============================================================================

url="ftp.ensembl.org/pub/current_README"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)

Ensembl release version.

$(_koopa_help_args)

details:
    Extract the Ensembl release version from ftp.ensembl.org.

see also:
    ${url}

note:
    Bash script.
    Updated 2019-09-20.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

wget -q -O - "$url" | \
    sed -n 3p | \
    cut -d ' ' -f 3
