#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"
_acid_assert_has_no_args "$@"
_acid_assert_is_installed "fastq-dump"

filelist="${1:-"SRR_Acc_List.txt"}"
_acid_assert_is_file "$filelist"

while read -r id
do
    if [[ ! -f "${id}.fastq.gz" ]] && [[ ! -f "${id}_1.fastq.gz" ]]
    then
        _acid_message "SRA Accession ID: '${id}'."
        fastq-dump --gzip --split-files "${id}"
    fi
done < "$filelist"
