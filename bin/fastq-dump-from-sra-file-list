#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"

_koopa_help "$@"
_koopa_assert_has_no_args "$@"
_koopa_assert_is_installed fastq-dump



# Arguments                                                                 {{{1
# ==============================================================================

filelist="${1:-"SRR_Acc_List.txt"}"
_koopa_assert_is_file "$filelist"



# Script                                                                    {{{1
# ==============================================================================

while read -r id
do
    if [[ ! -f "${id}.fastq.gz" ]] && [[ ! -f "${id}_1.fastq.gz" ]]
    then
        _koopa_message "SRA Accession ID: '${id}'."
        fastq-dump --gzip --split-files "${id}"
    fi
done < "$filelist"
