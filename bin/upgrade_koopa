#!/usr/bin/env bash

# Upgrade koopa installation.
# 2018-10-22

KOOPA_BIN_DIR="$( dirname "${BASH_SOURCE[0]}" )"
KOOPA_BASE_DIR="$( dirname "$KOOPA_BIN_DIR" )"

wd=$(pwd)
cd "$KOOPA_BASE_DIR"
git pull
cd "$wd"

cat << EOF
koopa updated successfully.
Shell must be reloaded for changes to take effect.
EOF
