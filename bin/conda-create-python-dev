#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
usage: conda-create-internal-texlive [--help|-h]

Create Python development conda environment.

optional arguments:
    --help, -h
        Show this help message and exit.

details:
    IDE:
    - Jupyter Notebook
    - Visual Studio Code
    - Spyder
    - PyCharm

    Code formatting:
    - black
      https://pypi.org/project/black/
    - flake8
      http://flake8.pycqa.org/

    Unit testing:
    - pytest
      http://pytest.org/

see also:
    conda env list

note:
    Bash script.
    Updated 2019-09-23.
EOF
}



# Parse arguments                                                           {{{1
# ==============================================================================

case "${1:-}" in
    "")
        ;;
    --help|-h)
        usage
        exit
        ;;
    *)
        >&2 printf "Error: Unsupported argument: '%s'\n" "$1"
        exit 1
        ;;
esac



# Script                                                                    {{{1
# ==============================================================================

_koopa_assert_is_installed conda

conda create -qy \
    --name="python-dev" \
    black \
    flake8 \
    jupyter \
    pyflakes \
    pytest \
    pytest-flake8 \
    spyder

