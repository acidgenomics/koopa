#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)

Update TeX installation.

$(_koopa_help_args)

see also:
    https://tex.stackexchange.com/questions/55437

note:
    Bash script.
    Requires that texlive is already installed.
    Updated 2019-09-24.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

tlmgr update --self
tlmgr update --list
tlmgr update --all
