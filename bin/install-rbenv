#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"



# Variables                                                                 {{{1
# ==============================================================================

prefix="$(_koopa_build_prefix)/rbenv"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)

Install Ruby environment manager (rbenv).

$(_koopa_help_args)

details:
    Installs into '${prefix}'.

see also:
    - https://github.com/rbenv/rbenv
    - https://blakewilliams.me/posts/system-wide-rbenv-install
    - https://devhints.io/rbenv

note:
    Bash script.
    Updated 2019-10-22.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

_koopa_prefix_mkdir "$prefix"

# Install rbenv.
git clone \
    https://github.com/sstephenson/rbenv.git \
    "$prefix"

# Install ruby-build.
mkdir -pv "${prefix}/plugins"
git clone \
    https://github.com/sstephenson/ruby-build.git \
    "${prefix}/plugins/ruby-build"

_koopa_set_permissions "$prefix"
