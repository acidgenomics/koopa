#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"
_acid_assert_has_no_args "$@"

prefix="$(_acid_build_prefix)/rbenv"

_acid_prefix_mkdir "$prefix"

# Install rbenv.
git clone \
    https://github.com/sstephenson/rbenv.git \
    "$prefix"

# Install ruby-build.
mkdir -pv "${prefix}/plugins"
git clone \
    https://github.com/sstephenson/ruby-build.git \
    "${prefix}/plugins/ruby-build"

_acid_set_permissions "$prefix"
