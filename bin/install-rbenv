#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"



# Variables                                                                 {{{1
# ==============================================================================

prefix="$(_koopa_build_prefix)/rbenv"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)

Install Ruby environment manager (rbenv).

$(_koopa_help_args)

details:
    Installs into '${prefix}'.

see also:
    - https://github.com/rbenv/rbenv
    - https://blakewilliams.me/posts/system-wide-rbenv-install
    - https://devhints.io/rbenv

note:
    Bash script.
    Updated 2019-09-25.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

_koopa_build_mkdir "$prefix"

# Install rbenv.
git clone \
    https://github.com/sstephenson/rbenv.git \
    "$prefix"

# Install ruby-build.
mkdir -pv "${prefix}/plugins"
git clone \
    https://github.com/sstephenson/ruby-build.git \
    "${prefix}/plugins/ruby-build"

_koopa_build_set_permissions "$prefix"
