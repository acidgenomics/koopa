#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"


# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF

Install autojump.

note:
    Updated 2019-09-09.
EOF
}



# Parse arguments                                                           {{{1
# ==============================================================================

case "${1:-}" in
    "")
        ;;
    --help|-h)
        usage
        exit
        ;;
    *)
        >&2 printf "Error: Unsupported argument: '%s'\n" "$1"
        exit 1
        ;;
esac



# Script                                                                    {{{1
# ==============================================================================

name="autojump"
tmp_dir="$(_koopa_tmp_dir)/${name}"

printf "Installing %s.\n" "$name"

(
    rm -fr "$tmp_dir"
    mkdir -p "$tmp_dir"
    cd "$tmp_dir" || exit 1
    git clone https://github.com/wting/autojump.git .
    ./install.py
    rm -fr "$tmp_dir"
)

printf "Reload the current shell.\n"
