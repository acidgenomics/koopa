#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"

# Install autojump
# Updated 2019-09-05.

name="autojump"
tmp_dir="$(_koopa_tmp_dir)/${name}"

printf "Installing %s.\n" "$name"

(
    rm -rf "$tmp_dir"
    mkdir -pv "$tmp_dir"
    cd "$tmp_dir" || exit 1
    git clone https://github.com/wting/autojump.git .
    ./install.py
    rm -frv "$tmp_dir"
)

printf "Reload the current shell.\n"
