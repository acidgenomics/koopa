#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)

Install autojump.

$(_koopa_help_args)

note:
    Bash script.
    Updated 2019-09-09.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

name="autojump"
tmp_dir="$(_koopa_tmp_dir)/${name}"

printf "Installing %s.\n" "$name"

(
    rm -fr "$tmp_dir"
    mkdir -p "$tmp_dir"
    cd "$tmp_dir" || exit 1
    git clone https://github.com/wting/autojump.git .
    ./install.py
    rm -fr "$tmp_dir"
)

printf "Reload the current shell.\n"
