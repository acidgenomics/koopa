#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"


# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
usage: install-autojump [--help|-h]

Install autojump.

optional arguments:
    --help, -h
        Show this help message and exit.

note:
    Updated 2019-09-09.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

name="autojump"
tmp_dir="$(_koopa_tmp_dir)/${name}"

printf "Installing %s.\n" "$name"

(
    rm -fr "$tmp_dir"
    mkdir -p "$tmp_dir"
    cd "$tmp_dir" || exit 1
    git clone https://github.com/wting/autojump.git .
    ./install.py
    rm -fr "$tmp_dir"
)

printf "Reload the current shell.\n"
