#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"

# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)
    file

Sort lines, using vim.

required positional arguments:
    1.  File path.

$(_koopa_help_args)

note:
    Bash script.
    Requires vim to be installed.
    Updated 2019-06-23.
EOF
}

_koopa_help "$@"



# Arguments                                                                 {{{1
# ==============================================================================

file="$1"



# Script                                                                    {{{1
# ==============================================================================

_koopa_assert_is_installed vim

vim -c :sort -c :wq -E -s "$file"
