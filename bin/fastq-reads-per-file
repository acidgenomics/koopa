#!/usr/bin/env bash
set -Eeu -o pipefail

KOOPA_PREFIX="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_PREFIX}/shell/bash/include/header.sh"

dir="${1:-"."}"
dir="$(_koopa_strip_trailing_slash "$dir")"

# Divide by 4.
zcat "${dir}/"*"_R1.fastq.gz" | \
    wc -l | \
    awk '{print $1/4}'
