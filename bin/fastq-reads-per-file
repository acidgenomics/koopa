#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"

_koopa_help "$@"



# Arguments                                                                 {{{1
# ==============================================================================

dir="${1:-"."}"
dir="$(_koopa_strip_trailing_slash "$dir")"



# Script                                                                    {{{1
# ==============================================================================

# Divide by 4.
zcat "${dir}/"*"_R1.fastq.gz" | \
    wc -l | \
    awk '{print $1/4}'
