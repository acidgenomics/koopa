#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"

dir="${1:-"."}"
dir="$(_acid_strip_trailing_slash "$dir")"

# Divide by 4.
zcat "${dir}/"*"_R1.fastq.gz" | \
    wc -l | \
    awk '{print $1/4}'
