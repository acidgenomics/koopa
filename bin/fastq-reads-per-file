#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"



# Variables                                                                 {{{1
# ==============================================================================

dir="."



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
usage fastq-reads-per-file [--help|-h]
    [dir="${dir}"]

Get the number of reads per FASTQ file.

required positional arguments with defaults:
    1.  Directory path.
        Defaults to '${dir}'.

$(_koopa_help_args)

details:
    Calculates the raw read count using the R1 file.

note:
    Updated 2019-09-21.
EOF
}

_koopa_help "$@"



# Arguments                                                                 {{{1
# ==============================================================================

dir="${1:-$dir}"
dir="$(_koopa_strip_trailing_slash "$dir")"



# Script                                                                    {{{1
# ==============================================================================

# Divide by 4.
zcat "${dir}/"*"_R1.fastq.gz" | \
    wc -l | \
    awk '{print $1/4}'
