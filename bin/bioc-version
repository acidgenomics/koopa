#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"

url="http://bioconductor.org/bioc-version"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
usage: bioc-version [--help|-h]

Bioconductor version.

details:
    Extract the Bioconductor release version from bioconductor.org.

optional arguments:
    --help, -h
        Show this help message and exit.

note:
    Updated 2019-09-18.

examples:
    bioc-version
    # > 3.9
EOF
}



# Parse arguments                                                           {{{1
# ==============================================================================

case "${1:-}" in
    "")
        ;;
    --help|-h)
        usage
        exit
        ;;
    *)
        >&2 printf "Error: Unsupported arg: '%s'\n" "$1"
        exit 1
        ;;
esac



# Script                                                                    {{{1
# ==============================================================================

_koopa_assert_is_installed wget
wget -q -O - "$url" 
