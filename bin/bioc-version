#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"

url="http://bioconductor.org/bioc-version"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
usage: bioc-version [--help|-h]

Bioconductor version.

optional arguments:
    --help, -h
        Show this help message and exit.

details:
    Extract the Bioconductor release version from bioconductor.org.

see also:
    ${url}

note:
    Bash script.
    Updated 2019-09-20.
EOF
}



# Parse arguments                                                           {{{1
# ==============================================================================

case "${1:-}" in
    "")
        ;;
    --help|-h)
        usage
        exit
        ;;
    *)
        >&2 printf "Error: Unsupported argument: '%s'\n" "$1"
        exit 1
        ;;
esac



# Script                                                                    {{{1
# ==============================================================================

_koopa_assert_is_installed wget

wget -q -O - "$url"
