#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
usage: wormbase-version [--help|-h]

WormBase release version.

optional arguments:
    --help, -h
        Show this help message and exit.

note:
    Bash script.
    Updated 2019-09-20.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

url="ftp://ftp.wormbase.org/pub/wormbase/releases/current-production-release/"

curl --list-only --silent "$url" | \
    grep -Eo "letter.WS[0-9]+" | \
    cut -d '.' -f 2
