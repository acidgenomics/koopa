#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"



# Variables                                                                 {{{1
# ==============================================================================

url="ftp://ftp.wormbase.org/pub/wormbase/releases/current-production-release/"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)

WormBase release version.

$(_koopa_help_args)

see also:
    ${url}

note:
    Bash script.
    Updated 2019-09-20.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

curl --list-only --silent "$url" | \
    grep -Eo "letter.WS[0-9]+" | \
    cut -d '.' -f 2
