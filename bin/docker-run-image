#!/usr/bin/env bash

# shellcheck source=/dev/null
source "$(koopa header bash)"

# Run Docker image locally.
# Updated 2019-07-24.

_koopa_assert_is_installed docker

image="$1"
tag="${2:-latest}"
image="${image}:${tag}"

docker pull "$image"
docker run -it \
    --volume="${PWD}:/work" \
    --workdir="/work" \
    "$image" \
    bash
