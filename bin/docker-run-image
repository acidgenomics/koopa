#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(_koopa_header bash)"

# Run Docker image locally.
# Updated 2019-07-25.

_koopa_assert_is_installed docker

image="$1"
workdir="/work"

docker pull "$image"
docker run \
    -it \
    --volume="${PWD}:${workdir}" \
    --workdir="$workdir" \
    "$image" \
    bash
