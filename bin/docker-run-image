#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"



# Variables                                                                 {{{1
# ==============================================================================

workdir="/work"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)
    image [--workdir="$workdir"]

Pull and run a Docker image locally.

required positional arguments:
    1.  Docker image name.
        Use the full name: '<user>/<image>:<tag>'.
        Defaults to images on DockerHub.
        Tag is optional, but can be included (e.g. ':latest').
        Example: 'acidgenomics/bioconductor:devel'.

required arguments with defaults:
    --workdir
        Local working directory name.
        Defaults to '$workdir', to avoid potential name collisions.

$(_koopa_help_args)

details:
    Script wrapper to call 'docker pull' and 'docker run' with suitable defaults
    for the Acid Genomics Docker images available on Docker Hub.

examples:
    docker-run-image acidgenomics/bioconductor:devel

note:
    Bash script.
    Updated 2019-10-25.
EOF
}

_koopa_assert_has_args "$@"
_koopa_help "$@"



# Arguments                                                                 {{{1
# ==============================================================================

POSITIONAL=()
while (("$#"))
do
    case "$1" in
        --workdir=*)
            workdir="${1#*=}"
            shift 1
            ;;
        --workdir)
            workdir="$2"
            shift 2
            ;;
        --)
            shift 1
            break
            ;;
        --*|-*)
            _koopa_invalid_arg "$1"
            ;;
        *)
            POSITIONAL+=("$1")
            shift 1
            ;;
    esac
done
set -- "${POSITIONAL[@]}"

image="$1"
workdir="$(_koopa_strip_trailing_slash "$workdir")"



# Script                                                                    {{{1
# ==============================================================================

_koopa_assert_is_installed docker

docker pull "$image"
docker run -it                                                                 \
    --volume="${PWD}:${workdir}"                                               \
    --workdir="$workdir"                                                       \
    "$image"                                                                   \
    bash
