#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"
_koopa_assert_has_args "$@"
_koopa_assert_is_installed "docker"

workdir="/mnt/work"

POSITIONAL=()
while (("$#"))
do
    case "$1" in
        --workdir=*)
            workdir="${1#*=}"
            shift 1
            ;;
        --workdir)
            workdir="$2"
            shift 2
            ;;
        --)
            shift 1
            break
            ;;
        --*|-*)
            _koopa_invalid_arg "$1"
            ;;
        *)
            POSITIONAL+=("$1")
            shift 1
            ;;
    esac
done
set -- "${POSITIONAL[@]}"

image="$1"
workdir="$(_koopa_strip_trailing_slash "$workdir")"

docker pull "$image"
docker run -it \
    --volume="${PWD}:${workdir}" \
    --workdir="$workdir" \
    "$image" \
    bash
