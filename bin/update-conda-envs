#!/usr/bin/env bash
set -Eeu -o pipefail

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"
_koopa_assert_has_no_args "$@"

CONDA_PREFIX="$(cd "$(dirname "$CONDA_EXE")/.." \
    >/dev/null 2>&1 && pwd -P)"

while IFS= read -r -d '' prefix
do
    _koopa_message "Updating '${prefix}'."
    "$CONDA_EXE" update -y --prefix="$prefix" --all
done < <( \
    find "${CONDA_PREFIX}/envs" \
        -mindepth 1 \
        -maxdepth 1 \
        -type d \
        -print0 \
        | sort -z \
)

