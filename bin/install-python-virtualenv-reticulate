#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
usage: install-python-virtualenv-reticulate [--help|-h]

Install reticulate Python virtual environment.

details:
    Installs louvain and umap-learn.

optional arguments:
    --help, -h
        Show this help message and exit.
note:
    Bash script.
    Updated 2019-08-14.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

_koopa_assert_is_installed python3 python

env_name="reticulate"
env_dir="${HOME}/.virtualenvs/${env_name}"

python3 -m venv "$env_dir"

# shellcheck source=/dev/null
source "${env_dir}/bin/activate"

pip install --upgrade pip
pip install louvain umap-learn
