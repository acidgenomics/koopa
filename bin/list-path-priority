#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"



# Notes                                                                     {{{1
# ==============================================================================

# Alternate approaches:
# > sed 's/:/\n/g' <<< "$PATH"
# > tr ':' '\n' <<< "$PATH"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)

List PATH priority.

$(_koopa_help_args)

details:
    Splits the PATH string by ':' delim.

see also:
    - https://askubuntu.com/questions/600018

note:
    Bash script.
    Updated 2019-09-24.
EOF
}

_koopa_help "$@"



# Usage                                                                     {{{1
# ==============================================================================

echo "${PATH//:/$'\n'}"
