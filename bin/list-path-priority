#!/usr/bin/env bash

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" &>/dev/null && pwd -P)"
# shellcheck source=/dev/null
source "${script_dir}/../shell/bash/include/header.sh"

all="$(_koopa_list_path_priority "$@")"
readarray -t all_arr <<< "$(_koopa_print "$all")"

unique="$(_koopa_print "$all" | awk '!a[$0]++')"
readarray -t unique_arr <<< "$(_koopa_print "$unique")"

n_all="${#all_arr[@]}"
n_unique="${#unique_arr[@]}"
n_dupes="$((n_all-n_unique))"

if [[ "$n_dupes" -gt 0 ]]
then
    _koopa_note "${n_dupes} duplicate(s) detected."
fi

_koopa_print "$all"
