#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)
    name

Create a conda environment.

required positional arguments:
    1.  Recipe name.

details:
    Creates without prompting.
    Simple utility that creates an environment matching the recipe name.

examples:
    conda-create-env kallisto

note:
    Bash script.
    Updated 2019-10-23.
EOF
}

_koopa_assert_has_args "$@"
_koopa_help "$@"



# Arguments                                                                 {{{1
# ==============================================================================

name="$1"



# Script                                                                    {{{1
# ==============================================================================

_koopa_assert_is_installed conda

conda create -qy --name="$name" "$name"
