#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"

_koopa_help "$@"
_koopa_assert_has_args "$@"
_koopa_assert_is_installed curl

name="$1"

url="https://cran.r-project.org/web/packages/${name}/"
pattern="${name}_[.0-9]+.tar.gz"
file="$(curl --silent "$url" | grep -Eo "$pattern" | head -n 1)"
_koopa_download "https://cran.r-project.org/src/contrib/${file}"
