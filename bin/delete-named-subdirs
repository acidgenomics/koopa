#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(koopa header bash)"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
usage: delete-named-subdirs [--help|-h] DIR SUBDIR_NAME

Delete named subdirectories.

required positional arguments:
    1.  Directory path.
    2.  Subdirectory name, to delete.

optional arguments:
    --help, -h
        Show this help message and exit.

details:
    Calls 'find' internally to recursively scan for a subdirectory name and
    removes those nested directories.

    Useful for removing bcbio "work" directories, for example.

note:
    Bash script.
    Updated 2019-09-20.

examples:
    delete-named-subdirs rnaseq-data/ work
EOF
}

_koopa_help "$@"



# Arguments                                                                 {{{1
# ==============================================================================

path="$1"
subdir_name="$2"



# Script                                                                    {{{1
# ==============================================================================

find "$path" -type d -name "$subdir_name" -print0 | xargs -0 -I {} rm -rf {}
