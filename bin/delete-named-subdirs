#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)
    dir subdir_name

Delete named subdirectories.

required positional arguments:
    1.  Directory path.
    2.  Subdirectory name, to delete.

$(_koopa_help_args)

details:
    Calls 'find' internally to recursively scan for a subdirectory name and
    removes those nested directories.

    Useful for removing bcbio "work" directories, for example.

note:
    Bash script.
    Updated 2019-10-25.

examples:
    delete-named-subdirs rnaseq-data/ work
EOF
}

_koopa_help "$@"
_koopa_assert_has_args "$@"



# Arguments                                                                 {{{1
# ==============================================================================

path="$1"
subdir_name="$2"



# Script                                                                    {{{1
# ==============================================================================

find "$path" -type d -name "$subdir_name" -print0 | xargs -0 -I {} rm -rf {}
