#!/usr/bin/env bash
set -Eeu -o pipefail

# shellcheck source=/dev/null
source "$(_koopa_header bash)"

# Remove named subdirectories.
# Updated 2019-06-23.

# For example, useful for removing bcbio "work" directories.

path="$1"
subdir_name="$2"

find "$path" -type d -name "$subdir_name" -print0 | \
    xargs -0 -I {} rm -rf {}
