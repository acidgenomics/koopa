#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"
_acid_assert_has_args "$@"

path="$1"
subdir_name="$2"

find "$path" -type d -name "$subdir_name" -print0 | xargs -0 -I {} rm -rf {}
