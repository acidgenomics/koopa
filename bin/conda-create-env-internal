#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"
_acid_assert_has_args "$@"
_acid_assert_is_installed "conda"

name="$1"
prefix="$(_acid_conda_internal_prefix)/envs"

conda create -qy --prefix="${prefix}/${name}" "$name"
