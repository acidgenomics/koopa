#!/usr/bin/env bash

# Find FIXME and TODO comments.
# Modified 2019-06-26.

path="${1:-$PWD}"

# shellcheck disable=SC2063
grep -Er \
    --binary-files="without-match" \
    --exclude "*/.git/*" \
    --exclude "*/dotfiles/doom.d/*" \
    --exclude "*/vim/pack/*" \
    --exclude "*-fixme-comments" \
    "\b(FIXME|TODO)\b" \
    "$path" | \
    sort
