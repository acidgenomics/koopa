#!/usr/bin/env bash
set -Eeu -o pipefail

# Install Miniconda
# https://conda.io/miniconda.html

prefix="${KOOPA_PREFIX}/miniconda3"

# Ensure previous installation is removed.
sudo -n rm -rf "$prefix"

prefix="$prefix" install-miniconda3

# Set installed files to root.
sudo -n chown -Rh "root:wheel" "$prefix"

