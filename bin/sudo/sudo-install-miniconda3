#!/usr/bin/env bash
set -Eeuo pipefail

# Install Miniconda
# https://conda.io/miniconda.html
#
# Useful script flags:
# > bash Miniconda3-latest-Linux-x86_64.sh -h
# -b           run install in batch mode (without manual intervention),
#              it is expected the license terms are agreed upon
# -f           no error if install prefix already exists
# -h           print this help message and exit
# -p PREFIX    install prefix, defaults to /home/ec2-user/miniconda3, must not contain spaces.
# -s           skip running pre/post-link/install scripts
# -u           update an existing installation
# -t           run package tests after installation (may install conda-build)

prefix="${KOOPA_PREFIX}/miniconda3"
build_dir="${KOOPA_TMP}/build/miniconda3"

case "$OSTYPE" in
    linux-gnu) script="Miniconda3-latest-Linux-x86_64.sh";;
      darwin*) script="Miniconda3-latest-MacOSX-x86_64.sh";;
            *) echo "${OSTYPE} is not supported."; exit 1;;
esac

# Ensure previous installation is removed.
sudo rm -rf "$prefix"

(
    rm -rf "$build_dir"
    mkdir -p "$build_dir"
    cd "$build_dir"
    echo "Downloading Miniconda installer."
    curl -O "https://repo.continuum.io/miniconda/${script}"
    # Note that this script should not be run as root.
    bash "$script" -b -p "$prefix"
    rm -rf "$build_dir"
)

# Set installed files to root.
sudo chown -R "root:wheel" "$prefix"

echo "conda installed successfully."
conda_exe="${prefix}/bin/conda"
echo "$conda_exe"
sh -c "$conda_exe --version"

