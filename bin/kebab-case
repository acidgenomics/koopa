#!/usr/bin/env bash
set -Eeu -o pipefail

KOOPA_PREFIX="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_PREFIX}/shell/bash/include/header.sh"
_koopa_assert_has_args "$@"
_koopa_assert_is_r_package_installed "syntactic"

prefix="FALSE"
recursive="FALSE"

POSITIONAL=()
while (("$#"))
do
    case "$1" in
        --prefix)
            prefix="TRUE"
            shift 1
            ;;
        --recursive)
            recursive="TRUE"
            shift 1
            ;;
        --)
            shift 1
            break
            ;;
        --*|-*)
            _koopa_invalid_arg "$1"
            ;;
        *)
            POSITIONAL+=("$1")
            shift 1
            ;;
    esac
done
set -- "${POSITIONAL[@]}"

object="$(_koopa_array_to_r_vector "$@")"
Rscript -e " \
    syntactic::kebabCase(
        object = ${object},
        rename = TRUE,
        recursive = ${recursive},
        prefix = ${prefix}
    ) \
"
