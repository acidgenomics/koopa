#!/usr/bin/env bash

KOOPA_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." \
    >/dev/null 2>&1 && pwd -P)"
# shellcheck source=/dev/null
source "${KOOPA_HOME}/shell/bash/include/header.sh"



# Usage                                                                     {{{1
# ==============================================================================

usage() {
cat << EOF
$(_koopa_help_header)
    files...

Run md5sum and generate an MD5 checksum file.

required positional arguments:
    ... Files to checksum.

$(_koopa_help_args)

details:
    Outputs to 'md5sum-<TIMESTAMP>.md5' file containing timestamp in name.

note:
    Bash script.
    Updated 2019-09-25.
EOF
}

_koopa_help "$@"



# Script                                                                    {{{1
# ==============================================================================

timestamp="$(date "+%Y%m%d-%H%M%S")"
log_file="md5sum-${timestamp}.md5"

md5sum "$@" 2>&1 | tee "$log_file"
