# https://github.com/steinbaugh/seqcloud

# Load login scripts
for file in $(find ${BASH_SOURCE%/*}/bash/profile -type f -name "*.sh" ! -name "._*" | sort)
do
    . "$file"
done

# Pass positional parameters to scripts in the `bash` subdirectory
function seqcloud {
    local script="$1"
    shift 1
    . ${BASH_SOURCE%/*}/bash/"$script".sh "$*"
}
